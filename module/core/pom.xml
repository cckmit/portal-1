    <modelVersion>4.0.0</modelVersion>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <compilerArgument>-parameters</compilerArgument>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>utf-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.12.4</version>
                <configuration>
                    <!--<skipTests>true</skipTests>-->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>ru.protei.portal.config.LocalizedTemplateCreator</mainClass>
                    <arguments>
                        <argument>notification/email/crm.subject.ftl</argument>
                        <argument>notification/email/crm.body.ftl</argument>
                        <argument>notification/email/employee.registration.employee.feedback.subject.ftl</argument>
                        <argument>notification/email/employee.registration.employee.feedback.body.ftl</argument>
                        <argument>notification/email/employee.registration.development.agenda.subject.ftl</argument>
                        <argument>notification/email/employee.registration.development.agenda.body.ftl</argument>
                        <argument>notification/email/employee.registration.probation.curators.subject.ftl</argument>
                        <argument>notification/email/employee.registration.probation.curators.body.ftl</argument>
                        <argument>notification/email/employee.registration.probation.subject.ftl</argument>
                        <argument>notification/email/employee.registration.probation.body.ftl</argument>
                        <argument>notification/email/employee.registration.subject.ftl</argument>
                        <argument>notification/email/employee.registration.body.ftl</argument>
                        <argument>notification/email/user.login.subject.ftl</argument>
                        <argument>notification/email/user.login.body.ftl</argument>
                        <argument>notification/email/contract.remaining.one.day.subject.ftl</argument>
                        <argument>notification/email/contract.remaining.one.day.body.ftl</argument>
                    </arguments>
                </configuration>
            </plugin>

        </plugins>

        <resources>
            <resource>
                <directory>src/main/ftl</directory>
                <includes>
                    <include>*.ftl</include>
                    <include>**/*.ftl</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>*.properties</include>
                    <include>*.json</include>

                    <include>*.xml</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>

        <testResources>
            <testResource>
                <directory>src/main/ftl</directory>
                <includes>
                    <include>*.ftl</include>
                    <include>**/*.ftl</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>*.properties</include>
                    <include>*.json</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
                <includes>
                    <include>*.properties</include>
                    <include>**/*.properties</include>

                    <include>*.pdf</include>
                    <include>**/*.pdf</include>

                    <include>*.html</include>
                    <include>**/*.html</include>
                </includes>
            </testResource>
        </testResources>
    </build>

