<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add-with_tags-column-to-report-table" author="fomin">
        <addColumn tableName="report">
            <column name="with_tags" type="bit" defaultValue="0"/>
        </addColumn>
    </changeSet>

    <changeSet id="add-with_linked_issues-column-to-report-table" author="fomin">
        <addColumn tableName="report">
            <column name="with_linked_issues" type="bit" defaultValue="0"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
