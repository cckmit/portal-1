<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add-bootstrap-portal-table" author="eliseev">
        <createTable tableName="bootstrapchangelog">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="unique_name" type="VARCHAR(255)"/>
            <column name="timestamp" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>
    
    <changeSet id="add-unique-for-bootstrapchangelog-unique-name" author="eliseev">
        <addUniqueConstraint
                tableName="bootstrapchangelog"
                columnNames="unique_name"
                constraintName="uq_bootstrapchangelog_unique_name"
        />

    </changeSet>
</databaseChangeLog>
