<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add-previous_state-column" author="fomin">
        <addColumn tableName="case_object">
            <column name="previous_state" type="int"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="add-previous_state-to-case_state-fk" author="fomin">
        <addForeignKeyConstraint baseTableName="case_object" baseColumnNames="previous_state"
                                 constraintName="FK_PREVIOUS_CASE_STATE"
                                 referencedTableName="case_state" referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>
