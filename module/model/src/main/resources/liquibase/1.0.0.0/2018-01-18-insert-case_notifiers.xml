<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="bondarenko" id="insert-case_notifiers-table">
        <createTable  tableName="case_notifiers">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="CASE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="PERSON_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="ix_ci_ref" tableName="case_notifiers">
            <column name="CASE_ID"/>
        </createIndex>
        <createIndex indexName="ix_pi_ref" tableName="case_notifiers">
            <column name="PERSON_ID"/>
        </createIndex>
        <createIndex indexName="uq_cipi" tableName="case_notifiers">
            <column name="CASE_ID"/>
            <column name="PERSON_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CASE_ID" baseTableName="case_notifiers" constraintName="FK_CI_REF" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION" referencedColumnNames="ID" referencedTableName="case_object"/>
        <addForeignKeyConstraint baseColumnNames="PERSON_ID" baseTableName="case_notifiers" constraintName="FK_PI_REF" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION" referencedColumnNames="ID" referencedTableName="person"/>
    </changeSet>

</databaseChangeLog>
