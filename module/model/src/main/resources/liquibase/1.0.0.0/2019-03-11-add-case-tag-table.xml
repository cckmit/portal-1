<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add-case-tag-table" author="buchmastov">

        <createTable tableName="case_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="case_type" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(9)"/>
        </createTable>

        <createTable tableName="case_object_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="case_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-case-tag-constraints" author="buchmastov">

        <addForeignKeyConstraint constraintName="case_object_tag_to_case_fk"
                                 baseTableName="case_object_tag" baseColumnNames="case_id"
                                 referencedTableName="case_object" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>

        <addForeignKeyConstraint constraintName="case_object_tag_to_tag_fk"
                                 baseTableName="case_object_tag" baseColumnNames="tag_id"
                                 referencedTableName="case_tag" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
