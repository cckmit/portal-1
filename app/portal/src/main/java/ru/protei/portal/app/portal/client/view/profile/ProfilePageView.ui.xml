<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:list="urn:import:ru.protei.portal.ui.common.client.widget.subscription.list"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="container-fluid padding-15">
            <div class="card card-transparent no-margin">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="profile-image">
                                <img src="./images/user-icon-m.svg" ui:field="icon"/>
                            </div>
                            <g:Button ui:field="changePasswordButton" styleName="btn btn-success"
                                      text="{lang.buttonChangePassword}"/>
                        </div>
                        <div class="col-md-10">
                            <h4 class="col-md-12">
                                <b><g:InlineLabel ui:field="name"/></b>
                                <small ui:field="company"/>
                            </h4>
                            <div class="col-md-12">
                                <label>
                                    <ui:text from="{lang.companySubscription}"/>
                                </label>
                                <list:SubscriptionList ui:field="subscriptions"/>
                            </div>
                        </div>
                        <g:HTMLPanel ui:field="passwordContainer" visible="false">
                            <div class="grid grid-indent">
                                <div class="col-xs-12">
                                    <h4 class="title">
                                        <ui:text from="{lang.accountPasswordChange}"/>
                                    </h4>
                                </div>
                                <div class="form-group col-xs-12 col-lg-4">
                                    <label>
                                        <ui:text from="{lang.accountCurrentPassword}"/>
                                    </label>
                                    <g:PasswordTextBox ui:field="currentPassword" styleName="input-field"/>
                                </div>
                                <div class="form-group col-xs-12 col-lg-4">
                                    <label>
                                        <ui:text from="{lang.accountNewPassword}"/>
                                    </label>
                                    <g:PasswordTextBox ui:field="newPassword" styleName="input-field"/>
                                </div>
                                <div class="form-group col-xs-12 col-lg-4">
                                    <label>
                                        <ui:text from="{lang.accountConfirmPassword}"/>
                                    </label>
                                    <g:PasswordTextBox ui:field="confirmPassword" styleName="input-field"/>
                                </div>
                            </div>
                            <div class="under-button">
                                <g:Button ui:field="savePasswordButton" styleName="btn btn-success"
                                          text="{lang.buttonSave}"/>
                            </div>
                        </g:HTMLPanel>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid padding-15 bg-white">
            <div class="card card-transparent no-margin">
                <div class="card-body">
                    <div class="text-right">
                        <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
                    </div>
                </div>
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>