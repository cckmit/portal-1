<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>
    <g:HTMLPanel styleName="card card-transparent no-margin">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <label ui:field="currentPasswordLabel">
                        <ui:text from="{lang.accountCurrentPassword}"/>
                    </label>
                    <g:PasswordTextBox ui:field="currentPassword" styleName="form-control"/>
                </div>
                <div class="form-group col-md-12">
                    <label ui:field="newPasswordLabel">
                        <ui:text from="{lang.accountNewPassword}"/>
                    </label>
                    <g:PasswordTextBox ui:field="newPassword" styleName="form-control"/>
                </div>
                <div class="form-group col-md-12">
                    <label ui:field="confirmPasswordLabel">
                        <ui:text from="{lang.accountConfirmPassword}"/>
                    </label>
                    <g:PasswordTextBox ui:field="confirmPassword" styleName="form-control"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>