<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:list="urn:import:ru.protei.portal.ui.common.client.widget.subscription.list">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="main-content">
        <div class="panel panel-default">
            <div class="body">
                <div class="profile-section">
                    <div class="profile-left">
                        <div class="profile-image">
                            <img src="./images/user-icon-m.svg" ui:field="icon"/>
                        </div>
                    </div>
                    <div class="profile-right">
                        <h4>
                            <g:InlineLabel ui:field="name"/>
                            <small ui:field="company"/>
                        </h4>
                        <div class="grid grid-indent">
                            <div class="col-xs-12">
                                <h4 class="title">
                                    <ui:text from="{lang.companySubscription}"/>
                                </h4>
                                <list:SubscriptionList ui:field="subscriptions"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>