<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:locale="urn:import:ru.protei.portal.app.portal.client.widget.localeselector"
             xmlns:locale2="urn:import:ru.protei.portal.app.portal.client.widget.locale">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>


    <g:HTMLPanel ui:field="globalContainer">
        <g:HTMLPanel ui:field="navbar" styleName="page-sidebar">
            <g:Anchor ui:field="logo" styleName="sidebar-header">
                <img class="brand" height="30" src="./images/logo.svg" width="30"/>
                <b class="m-l-5" style="">PROTEI</b>
                <span>LTD</span>
                <!--<button type="button" class="btn btn-link hidden-md-down" data-toggle-pin="sidebar"><i class="fa fs-12"></i>-->
            </g:Anchor>

            <div class="sidebar-menu">
                <div class="scroll-wrapper menu-items" style="position: relative;">
                    <g:HTMLPanel styleName="menu-items scroll-content scroll-scrolly_visible m-t-10"
                                 ui:field="menuContainer"/>
                </div>
                <div class="clearfix"/>
            </div>
        </g:HTMLPanel>

        <div class="header">
            <g:Anchor ui:field="toggleButton" styleName="btn-link toggle-sidebar hidden-lg-up pg pg-menu"/>

            <div class="brand inline" style="font-size: 24px;color: #257ac0;left: 36px;">
                <img src="./images/logo_blue.png" alt="logo" width="30" height="30"/>
                <b class="m-l-5">PROTEI</b>
                LTD
            </div>

            <g:HTMLPanel ui:field="actionBarContainer" tag="ul" styleName="navbar-nav flex-row"/>
            <div class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
                <locale2:LocaleSelector ui:field="locale"/>

                <li>
                    <a>
                        <span class="semi-bold" ui:field="headerUsername"/>
                    </a>
                </li>
                <li>
                    <g:Anchor ui:field="logout" title="{lang.buttonLogout}" href="#">
                        <i class="fa-lg ion-log-out"/>
                    </g:Anchor>
                </li>
            </div>
        </div>

        <div class="page-container">
            <div class="page-content-wrapper">
                <g:HTMLPanel ui:field="container" styleName="content"/>
            </div>
        </div>

        <g:HTMLPanel styleName="main-sidebar" ui:field="sidebar" visible="false">
            <section class="sidebar">
                <g:HTMLPanel ui:field="userPanel" styleName="user-panel">
                    <div class="pull-left image">
                        <img src="./images/user-icon-m.svg" class="img-circle" ui:field="icon"/>
                    </div>
                    <div class="pull-left info">
                        <p ui:field="username"></p>
                        <a ui:field="company"></a>
                    </div>
                </g:HTMLPanel>
                <ul class="sidebar-menu">
                    <li class="header">
                        <ui:text from="{lang.appNavHeader}"/>
                    </li>
                </ul>
                <g:Label styleName="app-version" ui:field="appVersion"/>
            </section>
        </g:HTMLPanel>


        <g:HTMLPanel ui:field="notifyContainer" styleName="gritter-notice-wrapper bottom-right"/>
    </g:HTMLPanel>

</ui:UiBinder>