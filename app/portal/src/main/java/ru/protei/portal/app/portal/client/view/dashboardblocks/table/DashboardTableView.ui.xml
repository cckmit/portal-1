<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:table='urn:import:ru.brainworm.factory.widget.table.client'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="col-lg-12 col-xl-6 col-xlg-6 p-b-5 p-t-5">
        <div class="card widget-11 widget-loader-bar dashboard no-border no-margin">
            <div class="card-header">
                <div class="card-title">
                    <span ui:field="name"/>
                    <span ui:field="count"/>
                </div>
                <div class="card-controls">
                    <ul>
                        <li><g:Anchor styleName="fas fa-trash-alt padding-0" ui:field="remove"/></li>
                        <li><g:Anchor styleName="fas fa-pencil-alt padding-0" ui:field="edit"/></li>
                        <li><g:Anchor styleName="fas fa-redo padding-0" ui:field="reload"/></li>
                        <li><g:Anchor styleName="fas fa-external-link-alt padding-0" ui:field="open"/></li>
                    </ul>
                </div>
            </div>
            <div class="widget-11-table auto-overflow">
                <table:TableWidget ui:field="table" styleName="table table-hover issues"/>
                <g:HTMLPanel ui:field="tableOverflow" styleName="padding-15 mt-auto" visible="false">
                    <p class="small no-margin">
                        <i class="fas fa-info-circle"/>
                        <span class="hint-text" ui:field="tableOverflowText"/>
                    </p>
                </g:HTMLPanel>
            </div>
            <div class="card-progress" ui:field="loading">
                <div class="progress-circle-indeterminate progress-circle-master"/>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>