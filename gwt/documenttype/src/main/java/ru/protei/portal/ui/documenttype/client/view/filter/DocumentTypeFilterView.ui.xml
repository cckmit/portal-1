<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortfield="urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield"
             xmlns:widget="urn:import:ru.protei.portal.ui.documenttype.client.widget"
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card card-default card-fixed">
        <div class="card-body">
            <div class="row">
                <cleanablesearchbox:CleanableSearchBox ui:field="name" placeholder="{lang.documentSearchNameOrProject}" styleName="form-group col-md-12"/>

                <div class="form-group col-md-12">
                    <label><ui:text from="{lang.sortBy}"/></label>
                    <div class="control-group">
                        <sortfield:SortFieldSelector ui:field="sortField" type="DOCUMENT_TYPE" hasNullValue="false"/>
                        <g:ToggleButton ui:field="sortDir" styleName="btn btn-default sorting_button"/>
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.documentCategory}"/>
                    </label>
                    <widget:DocumentCategoryBtnGroupMulti ui:field="documentCategories"/>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <g:Button ui:field="resetBtn" styleName="btn btn-default" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>