<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortfield="urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield"
             xmlns:widget="urn:import:ru.protei.portal.ui.documenttype.client.widget">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <div class="form-group local-search col-xs-12">
                <span class="icon local-search-icon"/>
                <g:TextBox ui:field="name" styleName="input-field"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfield:SortFieldSelector ui:field="sortField" type="DOCUMENT_TYPE" hasNullValue="false"/>
                    <g:ToggleButton ui:field="sortDir" styleName="btn btn-white sorting_button"/>
                </div>
            </div>

            <div class="form-group col-xs-12">
                <label>
                    <ui:text from="{lang.documentCategory}"/>
                </label>
                <widget:DocumentCategoryBtnGroupMulti ui:field="documentCategories"/>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="resetBtn" styleName="btn btn-white" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>