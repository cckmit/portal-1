<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:w='urn:import:ru.protei.portal.ui.common.client.widget'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="panel">
        <div class="body">
            <div class="grid grid-indent">
                <div class="form-group col-xs-4">
                    <label><ui:text from="{lang.siteFolderCompany}"/></label>
                    <company:CompanySelector ui:field="company" validation="true" styleName="btn-selector"/>
                </div>

                <div class="form-group col-xs-4">
                    <label><ui:text from="{lang.siteFolderPlatformName}"/></label>
                    <validatefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                </div>

                <div class="form-group col-xs-4">
                    <label><ui:text from="{lang.siteFolderManager}"/></label>
                    <person:EmployeeButtonSelector ui:field="manager" styleName="btn-selector" defaultValue="{lang.selectManager}"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderParams}"/></label>
                    <g:TextArea ui:field="parameters" styleName="input-field resize-vertical sf-parameters"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderComment}"/></label>
                    <g:TextArea ui:field="comment" styleName="input-field resize-vertical sf-comment"/>
                </div>

                <div class="form-group col-xs-12">
                    <label ui:field="attachmentsLabel"><ui:text from="{lang.siteFolderAttachments}"/></label>
                    <div class="col-xs-12 col-md-12">
                        <div class="panel">
                            <div class="body">
                                <div class="attach attach-add">
                                    <w:uploader.AttachmentUploader ui:field="fileUploader">
                                        <div class="attach-add-circle">
                                            <i class="ion-plus"/>
                                            <i class="icon-verifiable"/>
                                        </div>
                                    </w:uploader.AttachmentUploader>
                                </div>
                                <w:attachment.list.AttachmentList ui:field="attachmentContainer"/>
                            </div>
                        </div>
                    </div>
                </div>

                <w:collapse.CollapsablePanel ui:field="contactsContainer" styleName="collapsable form-group col-xs-12 main-content-padding-0"
                                             legend="{lang.siteFolderCompanyContacts}"/>

                <g:HTMLPanel ui:field="listContainerHeader" styleName="form-group col-xs-12">
                    <legend><ui:text from="{lang.siteFolderServers}"/></legend>
                    <g:Button ui:field="openButton" styleName="btn btn-white pull-right m-l-10" text="{lang.openTableView}"/>
                    <g:Button ui:field="createButton" styleName="btn btn-white pull-right m-l-10" text="{lang.siteFolderServerCreate}"/>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="form-group col-xs-12" ui:field="listContainer"/>

            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-white close_button" text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>