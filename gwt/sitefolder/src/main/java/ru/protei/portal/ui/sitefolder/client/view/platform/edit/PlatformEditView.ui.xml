<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="panel">
        <div class="body">
            <div class="grid grid-indent">
                <div class="form-group col-xs-4">
                    <label><ui:text from="{lang.siteFolderCompany}"/></label>
                    <company:CompanySelector ui:field="company" validation="true" styleName="btn-selector"/>
                </div>

                <div class="form-group col-xs-8">
                    <label><ui:text from="{lang.siteFolderPlatformName}"/></label>
                    <validatefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderParams}"/></label>
                    <g:TextArea ui:field="parameters" styleName="input-field sf-parameters"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderComment}"/></label>
                    <g:TextArea ui:field="comment" styleName="input-field sf-comment"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderCompanyContacts}"/></label>
                </div>
                <g:HTMLPanel styleName="form-group col-xs-12" ui:field="contactsContainer"/>

                <g:HTMLPanel ui:field="listContainerHeader" styleName="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderServers}"/></label>
                    <g:Button ui:field="openButton" styleName="btn btn-white pull-right m-l-10" text="{lang.openTableView}"/>
                    <g:Button ui:field="createButton" styleName="btn btn-white pull-right m-l-10" text="{lang.siteFolderServerCreate}"/>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="form-group col-xs-12" ui:field="listContainer"/>

            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-white close_button" text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>