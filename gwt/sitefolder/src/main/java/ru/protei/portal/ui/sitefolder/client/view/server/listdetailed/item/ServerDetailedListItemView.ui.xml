<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel ui:field="root" tag="li" styleName="sf-detailed-list-item">
        <div class="sf-detailed-list-item-content">
            <span class="name" ui:field="name"/>
            <span class="param" ui:field="param"/>
            <span class="apps" ui:field="apps"/>
            <span class="comment" ui:field="comment"/>
        </div>
        <div class="sf-detailed-list-item-controls">
            <g:Anchor ui:field="edit" styleName="far fa-edit" href="#"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>