<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid card-fixed">
        <g:HTMLPanel ui:field="preview" styleName="preview">

            <div class="card card-default">

                <div class="card-body">

                    <h4 class="col-md-12 no-margin no-padding">
                        <g:InlineLabel ui:field="name"/>
                    </h4>

                    <g:Label styleName="small hint-text pre-formatted-info" ui:field="comment"/>

                    <div class="small">
                        <b><ui:text from="{lang.devUnitComponent}: "/></b>
                        <span ui:field="component"/>
                    </div>

                    <div class="small">
                        <b><ui:text from="{lang.siteFolderServer}: "/></b>
                        <span ui:field="server"/>
                    </div>

                    <div class="small">
                        <b><ui:text from="{lang.siteFolderPaths}: "/></b>
                        <span ui:field="paths"/>
                    </div>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>