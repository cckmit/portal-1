<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid">
        <g:HTMLPanel ui:field="preview" styleName="preview">

            <fieldset class="header">
                <legend><ui:text from="{lang.siteFolderApp}"/></legend>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderName}"/></label>
                    <span class="col-md-8" ui:field="name"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.devUnitComponent}"/></label>
                    <span class="col-md-8" ui:field="component"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderServer}"/></label>
                    <span class="col-md-8" ui:field="server"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderComment}"/></label>
                    <span class="col-md-8 pre-formatted-info" ui:field="comment"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderPaths}"/></label>
                    <span class="col-md-8" ui:field="paths"/>
                </div>

            </fieldset>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>