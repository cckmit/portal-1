<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid">
        <g:HTMLPanel ui:field="preview" styleName="preview">
            <div class="actions col-md-12">
                <g:Button styleName="btn btn-white" ui:field="openAppsButton" text="{lang.siteFolderApps}"/>
            </div>

            <fieldset class="header">
                <legend><ui:text from="{lang.siteFolderPlatform}"/></legend>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderName}"/></label>
                    <span class="col-md-8" ui:field="name"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderPlatform}"/></label>
                    <span class="col-md-8" ui:field="platform"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderIP}"/></label>
                    <span class="col-md-8" ui:field="ip"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderParamsLocal}"/></label>
                    <span class="col-md-8 pre-formatted-info" ui:field="parameters"/>
                </div>

                <div class="col-md-12">
                    <label class="col-md-4"><ui:text from="{lang.siteFolderComment}"/></label>
                    <span class="col-md-8 pre-formatted-info" ui:field="comment"/>
                </div>

            </fieldset>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>