<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:ru.protei.portal.ui.common.client.widget'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid">
        <g:HTMLPanel ui:field="preview" styleName="preview site-folder">
            <div class="actions col-xs-12">
                <g:Button styleName="btn btn-white" ui:field="openServersButton" text="{lang.siteFolderServers}"/>
            </div>

            <fieldset class="header">
                <legend><ui:text from="{lang.siteFolderPlatform}"/></legend>

                <div class="col-xs-12">
                    <label class="col-xs-4"><ui:text from="{lang.siteFolderName}"/></label>
                    <span class="col-xs-8" ui:field="name"/>
                </div>

                <div class="col-xs-12">
                    <label class="col-xs-4"><ui:text from="{lang.siteFolderCompany}"/></label>
                    <span class="col-xs-8" ui:field="company"/>
                </div>

                <div class="col-xs-12">
                    <label class="col-xs-4"><ui:text from="{lang.siteFolderManager}"/></label>
                    <span class="col-xs-8" ui:field="manager"/>
                </div>

                <div class="col-xs-12">
                    <label class="col-xs-4"><ui:text from="{lang.siteFolderParams}"/></label>
                    <span class="col-xs-8 pre-formatted-info" ui:field="parameters"/>
                </div>

                <div class="col-xs-12">
                    <label class="col-xs-4"><ui:text from="{lang.siteFolderComment}"/></label>
                    <span class="col-xs-8 pre-formatted-info" ui:field="comment"/>
                </div>

            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.siteFolderAttachments}"/></legend>
                <div class="col-xs-12 col-md-12">
                    <div class="panel">
                        <w:attachment.list.AttachmentList ui:field="attachmentContainer" addStyleNames="p-l-0"/>
                    </div>
                </div>
            </fieldset>

            <w:collapse.CollapsablePanel ui:field="contactsContainer" styleName="collapsable header"
                                         legend="{lang.siteFolderCompanyContacts}"/>

            <w:collapse.CollapsablePanel ui:field="serversContainer" styleName="collapsable header"
                                         legend="{lang.siteFolderServers}"/>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>