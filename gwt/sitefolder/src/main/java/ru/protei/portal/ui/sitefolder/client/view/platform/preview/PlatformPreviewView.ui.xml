<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:ru.protei.portal.ui.common.client.widget'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="preview" styleName="site-folder">
        <div class="card card-default">
            <div class="card-body">
                <h4 ui:field="name"/>
                <div class="pull-right">
                    <g:Button styleName="btn btn-xs btn-info" ui:field="openServersButton" text="{lang.siteFolderServers}"/>
                </div>

                <g:Label styleName="small hint-text pre-formatted-info" ui:field="comment"/>

                <div class="small">
                    <b><ui:text from="{lang.siteFolderCompany}: "/></b>
                    <span ui:field="company"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.siteFolderManager}: "/></b>
                    <span ui:field="manager"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.siteFolderParams}: "/></b>
                    <span class="pre-formatted-info" ui:field="parameters"/>
                </div>

                <h5><ui:text from="{lang.siteFolderAttachments}"/></h5>
                <w:attachment.list.AttachmentList ui:field="attachmentContainer" addStyleNames="p-l-0"/>

                <w:collapse.CollapsablePanel ui:field="serversContainer"
                                             legend="{lang.siteFolderServers}"/>

                <w:collapse.CollapsablePanel ui:field="contactsContainer"
                                             legend="{lang.siteFolderCompanyContacts}"/>

            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>