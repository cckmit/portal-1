<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:tab='urn:import:ru.protei.portal.ui.common.client.widget.tab'
             xmlns:w='urn:import:ru.protei.portal.ui.common.client.widget'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper">
        <g:HTMLPanel ui:field="preview" styleName="preview site-folder">

            <div class="card card-default">

                <div class="card-body">

                    <h4 class="col-md-12 no-margin no-padding">
                        <g:InlineLabel ui:field="name"/>
                        <g:Button styleName="btn btn-xs btn-info pull-right" ui:field="openServersButton" text="{lang.siteFolderServers}"/>
                    </h4>

                    <g:Label styleName="small hint-text pre-formatted-info" ui:field="comment"/>

                    <div class="small">
                        <b><ui:text from="{lang.siteFolderCompany}: "/></b>
                        <span ui:field="company"/>
                    </div>

                    <div class="small">
                        <b><ui:text from="{lang.siteFolderManager}: "/></b>
                        <span ui:field="manager"/>
                    </div>

                    <div class="small">
                        <b><ui:text from="{lang.siteFolderParams}: "/></b>
                        <span class="pre-formatted-info" ui:field="parameters"/>
                    </div>

                    <h5><ui:text from="{lang.siteFolderAttachments}"/></h5>
                    <w:attachment.list.AttachmentList ui:field="attachmentContainer" addStyleNames="p-l-0"/>

                    <tab:TabWidget tabNames="{lang.siteFolderServers}|{lang.siteFolderCompanyContacts}" styleName="">

                        <tab:pane.TabWidgetPane tabName="{lang.siteFolderServers}">
                            <g:HTMLPanel ui:field="serversContainer"/>
                        </tab:pane.TabWidgetPane>

                        <tab:pane.TabWidgetPane tabName="{lang.siteFolderCompanyContacts}">
                            <g:HTMLPanel ui:field="contactsContainer"/>
                        </tab:pane.TabWidgetPane>
                    </tab:TabWidget>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>