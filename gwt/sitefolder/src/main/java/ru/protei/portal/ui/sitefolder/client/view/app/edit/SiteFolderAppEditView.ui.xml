<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:server='urn:import:ru.protei.portal.ui.sitefolder.client.view.server.widget.selector'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="panel">
        <div class="body">
            <div class="grid grid-indent">
                <div class="form-group col-xs-12">
                    <div class="form-group col-xs-12 m-b-0">
                        <label><ui:text from="{lang.siteFolderAppName}"/></label>
                    </div>
                    <div class="form-group col-xs-8 m-b-0">
                        <validatefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                    </div>
                    <div class="form-group col-xs-4 m-b-0">
                        <server:ServerButtonSelector ui:field="server" validation="true" styleName="sf-meta-info"/>
                    </div>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderComment}"/></label>
                    <g:TextArea ui:field="comment" styleName="input-field sf-comment"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.siteFolderPaths}"/></label>
                    <g:HTMLPanel ui:field="pathsContainer" styleName="panelField"/>
                </div>

            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="cancelButton" styleName="btn btn-white close_button" text="{lang.buttonCancel}"/>
            <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>