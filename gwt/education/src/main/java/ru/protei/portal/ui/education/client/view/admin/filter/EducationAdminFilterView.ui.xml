<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card card-default no-border card-fixed">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <g:CheckBox ui:field="showOnlyNotApproved" styleName="checkbox" text="{lang.educationShowOnlyNotApproved}"/>
                </div>
                <div class="form-group col-md-12">
                    <g:CheckBox ui:field="showOutdated" styleName="checkbox" text="{lang.educationShowOutdated}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>