<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:cutomertype='urn:import:ru.protei.portal.ui.common.client.widget.selector.customertype'
             xmlns:state="urn:import:ru.protei.portal.ui.common.client.widget.selector.state"
             xmlns:region="urn:import:ru.protei.portal.ui.common.client.widget.selector.region"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid with-table-pager">
        <g:HTMLPanel ui:field="preview" styleName="preview project">
            <div class="col-xs-12">
                <g:Anchor ui:field="fullScreen" styleName="fa fa-lg fa-external-link pull-right hide" href="#"/>
            </div>

            <fieldset class="header">
                <legend><lable ui:field="header"/></legend>
                <div class="col-xs-8">
                    <g:TextBox ui:field="projectName" styleName="col-xs-12 project-name" />
                </div>
                <div class="col-xs-4">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCreationDate}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                </div>

                <div class="col-xs-12">
                    <label class="col-xs-12"><ui:text from="{lang.projectDescription}"/></label>
                    <g:TextArea styleName="col-xs-12 col-md-12 pre-formatted-info project-details" ui:field="details"/>
                </div>

                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectRegion}"/></label>
                    <div class="col-xs-7">
                        <region:RegionButtonSelector ui:field="projectRegion" />
                    </div>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectDirection}"/></label>
                    <div class="col-xs-7">
                        <productdirection:ProductDirectionButtonSelector ui:field="projectDirection" />
                    </div>
                </div>

                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCustomerCompany}"/></label>
                    <div class="col-xs-7">
                        <company:CompanySelector ui:field="company" defaultValue="{lang.selectAccountCompany}"/>
                    </div>
                </div>

                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCustomerType}"/></label>
                    <div class="col-xs-7">
                        <cutomertype:CustomerTypeSelector ui:field="customerType"/>
                    </div>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.projectTeam}"/></legend>

            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.projectProducts}"/></legend>
                <productselector:devunit.DevUnitMultiSelector ui:field="products"
                                          addStyleNames="form-group col-xs-12"/>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.projectState}"/></legend>
                <div class="col-xs-2 fa-3x">
                    <state:RegionStateIconSelector ui:field="projectState" />
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.comments}"/></legend>
                <g:HTMLPanel ui:field="commentsContainer" styleName="col-xs-12 col-md-12"/>
            </fieldset>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>