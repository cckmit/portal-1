<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid">
        <g:HTMLPanel ui:field="preview" styleName="preview project">
            <div class="pull-right">
                <g:Button ui:field="fullScreenBtn" styleName="btn btn-white" title="{lang.fullScreen}">
                    <i class="fa fa-external-link"/>
                </g:Button>
            </div>

            <fieldset class="header grid grid-indent">
                <legend><lable ui:field="header"/></legend>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectState}"/></label>
                    <span class="col-xs-7 col-md-7">
                        <i ui:field="iconState"></i>
                        <span ui:field="state"></span>
                    </span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectName}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="projectName"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCreationDate}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectDescription}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="description"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectRegion}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="projectRegion"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectDirection}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="projectDirection"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCustomerCompany}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="company"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCustomerType}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="customerType"></span>
                </div>
            </fieldset>

            <fieldset class="header grid grid-indent">
                <legend><ui:text from="{lang.projectTeam}"/></legend>
                <div class="col-xs-12" ui:field="team"></div>
            </fieldset>

            <fieldset class="header grid grid-indent">
                <legend><ui:text from="{lang.projectProducts}"/></legend>
                <div class="col-xs-12" ui:field="products"></div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.equipmentDocuments}"/></legend>
                <g:HTMLPanel ui:field="documents" styleName="form-group col-xs-12 main-content-padding-0 project-document-preview"/>
            </fieldset>
            <fieldset class="header grid grid-indent">
                <legend><ui:text from="{lang.comments}"/></legend>
                <g:HTMLPanel ui:field="commentsContainer" styleName="col-xs-12 col-md-12"/>
            </fieldset>
            <div class="panel">
                <div class="footer">
                    <g:Button ui:field="backButton" styleName="btn btn-success" text="{lang.goToProjects}"/>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>