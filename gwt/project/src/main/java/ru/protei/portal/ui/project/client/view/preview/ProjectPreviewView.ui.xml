<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="preview" styleName="preview project">
        <div class="card card-default no-border">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-1 p-r-0">
                        <g:Anchor ui:field="fullScreenBtn" styleName="fa fa-lg fa-external-link-alt m-t-5" href="#"/>
                        <g:Anchor ui:field="backButton" styleName="fas fa-lg fa-times m-t-5" href="#"/>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5><lable ui:field="header"/></h5>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectState}"/></label>
                            <span class="col-xs-7 col-md-7">
                                <i ui:field="iconState"></i>
                                <span ui:field="state"></span>
                            </span>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCreationDate}"/></label>
                            <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCreateBy}"/></label>
                            <span class="col-xs-7 col-md-7" ui:field="initiatorShortName"></span>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectRegion}"/></label>
                            <span class="col-xs-7 col-md-7" ui:field="projectRegion"></span>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectDirection}"/></label>
                            <span class="col-xs-7 col-md-7" ui:field="projectDirection"></span>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCustomerType}"/></label>
                            <span class="col-xs-7 col-md-7" ui:field="customerType"></span>
                        </div>
                        <div class="col-xs-6">
                            <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCustomerCompany}"/></label>
                            <span class="col-xs-7 col-md-7" ui:field="company"></span>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <legend><ui:text from="{lang.projectName}"/></legend>
                        <div class="col-xs-12" ui:field="projectName"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5><ui:text from="{lang.projectDescription}"/></h5>
                        <div class="col-xs-12" ui:field="description"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5><ui:text from="{lang.projectTeam}"/></h5>
                        <div class="col-xs-12" ui:field="team"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5><ui:text from="{lang.projectProducts}"/></h5>
                        <div class="col-xs-12" ui:field="products"></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5><ui:text from="{lang.equipmentDocuments}"/></h5>
                        <g:HTMLPanel ui:field="documents" styleName="form-group col-xs-12 main-content-padding-0 project-document-preview"/>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5><ui:text from="{lang.comments}"/></h5>
                        <g:HTMLPanel ui:field="commentsContainer"/>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>