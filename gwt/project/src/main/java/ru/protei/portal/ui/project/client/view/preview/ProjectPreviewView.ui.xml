<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:cutomertype='urn:import:ru.protei.portal.ui.common.client.widget.selector.customertype'
             xmlns:state="urn:import:ru.protei.portal.ui.common.client.widget.selector.state"
             xmlns:region="urn:import:ru.protei.portal.ui.common.client.widget.selector.region"
             xmlns:team="urn:import:ru.protei.portal.ui.project.client.view.widget.team"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="preview" styleName="preview project">
        <div class="card card-default no-border">
            <div class="card-block">
                <div class="row">
                    <g:Anchor ui:field="fullScreenBtn" styleName="fa fa-lg fa-external-link m-t-5 pull-left" href="#"/>
                    <g:Anchor ui:field="removeBtn" styleName="fa fa-lg fa-trash m-t-5 pull-left" href="#"/>
                    <g:TextBox ui:field="projectName" styleName="col-md-6 project-name"/>

                    <div class="pull-right">
                        <div class="inline m-l-10">
                            <small>
                                <ui:text from="{lang.projectCreateBy}"/>
                            </small>
                            <small ui:field="initiatorShortName" class="name no-margin bold"/>
                            <small ui:field="creationDate" class="datetime no-margin"/>
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <g:TextArea styleName="pre-formatted-info project-details form-control" ui:field="details"/>
                    </div>
                </div>
                <div class="row">
                    <label class="col-md-3 bold small m-t-5">
                        <ui:text from="{lang.projectCustomerType}"/>
                    </label>
                    <cutomertype:CustomerTypeSelector ui:field="customerType" addStyleNames="col-md-9"/>

                    <label class="col-md-3 bold small m-t-5">
                        <ui:text from="{lang.projectCustomerCompany}"/>
                    </label>
                    <company:CompanySelector ui:field="company" defaultValue="{lang.selectAccountCompany}"
                                             addStyleNames="col-md-9"/>
                </div>
                <div class="row">
                    <label class="col-md-3 bold small m-t-5">
                        <ui:text from="{lang.projectRegion}"/>
                    </label>
                    <region:RegionButtonSelector ui:field="projectRegion" addStyleNames="col-md-9"/>
                    <label class="col-md-3 bold small m-t-5">
                        <ui:text from="{lang.projectDirection}"/>
                    </label>
                    <productdirection:ProductDirectionButtonSelector ui:field="projectDirection"
                                                                     addStyleNames="col-md-9"/>
                </div>
                <div class="row">
                    <label class="col-md-3 bold small ">
                        <ui:text from="{lang.projectProducts}"/>
                    </label>
                    <productselector:devunit.DevUnitMultiSelector ui:field="products" hasNullValue="false"
                                                                  addStyleNames="col-md-9"/>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h5>
                            <ui:text from="{lang.projectTeam}"/>
                        </h5>
                        <team:TeamSelector ui:field="team"/>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5>
                            <ui:text from="{lang.projectState}"/>
                        </h5>
                        <div class="col-xs-2 w-i fa-3x">
                            <state:RegionStateIconSelector ui:field="projectState"/>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <h5>
                            <ui:text from="{lang.comments}"/>
                        </h5>
                        <g:HTMLPanel ui:field="commentsContainer"/>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>