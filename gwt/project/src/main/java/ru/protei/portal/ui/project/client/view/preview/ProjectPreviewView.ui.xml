<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="preview-wrapper card-fixed">
        <g:HTMLPanel ui:field="preview" styleName="preview">
            <div class="card card-default">
                <div class="card-body">
                    <h4 class="no-margin inline">
                        <g:Anchor ui:field="header" styleName="full-screen-link" href="#"/>
                    </h4>
                    <div class="inline pull-right">
                        <small ui:field="createdBy"/>
                    </div>
                    <h5 ui:field="name"/>

                    <div class="form-group-attached">
                        <div class="row clearfix">
                            <div class="col-md-3">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.projectState}"/>
                                    </label>
                                    <div>
                                        <i ui:field="iconState"/>
                                        <span ui:field="state"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.projectCustomerType}"/>
                                    </label>
                                    <span ui:field="customerType"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.projectCustomerCompany}"/>
                                    </label>
                                    <span ui:field="company"/>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-md-3">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.projectRegion}"/>
                                    </label>
                                    <span ui:field="projectRegion"/>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.projectDirection}"/>
                                    </label>
                                    <span ui:field="projectDirection"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.projectProducts}"/>
                                    </label>
                                    <g:Anchor href="#" ui:field="product"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group small hint-text pre-formatted-info m-t-10" ui:field="description"/>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <h5>
                                <ui:text from="{lang.projectTeam}"/>
                            </h5>
                            <div ui:field="team"/>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <h5>
                                <ui:text from="{lang.contract}"/>
                            </h5>
                            <g:Anchor ui:field="contract" href="#"/>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <h5>
                                <ui:text from="{lang.projectSiteFolder}"/>
                            </h5>
                            <g:Anchor ui:field="platform" href="#" target="_blank"/>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <h5>
                                <ui:text from="{lang.equipmentDocuments}"/>
                            </h5>
                            <g:HTMLPanel ui:field="documents"
                                         styleName="form-group col-md-12 main-content-padding-0 project-document-preview"/>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <h5>
                                <ui:text from="{lang.comments}"/>
                            </h5>
                            <g:HTMLPanel ui:field="commentsContainer"/>
                        </div>
                    </div>
                </div>
                <g:HTMLPanel styleName="card-footer text-right" ui:field="backButtonContainer">
                    <g:Button ui:field="backButton" styleName="btn btn-success" text="{lang.goToProjects}"/>
                </g:HTMLPanel>
            </div>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>