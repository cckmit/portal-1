<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:state="urn:import:ru.protei.portal.ui.common.client.widget.selector.state"
>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel styleName="preview-wrapper grid with-table-pager">
        <g:HTMLPanel ui:field="preview" styleName="preview project">
            <div class="col-xs-12">
                <g:Anchor ui:field="fullScreen" styleName="fa fa-lg fa-external-link pull-right" href="#"/>
            </div>

            <fieldset class="header">
                <legend><lable ui:field="header"/></legend>
                <div class="col-xs-12">
                    <g:TextBox ui:field="projectName" styleName="col-xs-12 project-name" />
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectCreationDate}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectDirection}"/></label>
                    <div class="col-xs-7">
                        <productdirection:ProductDirectionInputSelector ui:field="projectDirection" />
                    </div>
                </div>
            </fieldset>
            <fieldset class="header">
                <legend><ui:text from="{lang.projectManagers}"/></legend>
                <div class="col-xs-6">
                    <label class="col-xs-12 col-md-12"><ui:text from="{lang.projectDeployManagers}"/></label>
                    <span class="col-xs-12 col-md-12" ui:field="deployManager"></span>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-12 col-md-12"><ui:text from="{lang.projectHeadManager}"/></label>
                    <span class="col-xs-12 col-md-12" ui:field="headManager"></span>
                </div>
            </fieldset>
            <fieldset class="header">
                <legend><ui:text from="{lang.issueInfoHeader}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.projectState}"/></label>
                    <span class="col-xs-7 col-md-7">
                        <state:RegionStateIconSelector ui:field="projectState" />
                    </span>
                </div>
                <div class="col-xs-12">
                    <g:TextArea styleName="col-xs-12 col-md-12 pre-formatted-info project-details" ui:field="details"/>
                </div>
            </fieldset>
            <!--<legend><ui:text from="{lang.comments}"/></legend>-->
            <!--<g:HTMLPanel ui:field="commentsContainer" styleName="col-xs-12 col-md-12"/>-->
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>