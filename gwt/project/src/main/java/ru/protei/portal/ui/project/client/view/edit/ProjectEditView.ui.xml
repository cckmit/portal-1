<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:cutomertype='urn:import:ru.protei.portal.ui.common.client.widget.selector.customertype'
             xmlns:state="urn:import:ru.protei.portal.ui.common.client.widget.selector.state"
             xmlns:region="urn:import:ru.protei.portal.ui.common.client.widget.selector.region"
             xmlns:team="urn:import:ru.protei.portal.ui.project.client.view.widget.team"
             xmlns:region="urn:import:ru.protei.portal.ui.common.client.widget.selector.region"
             xmlns:team="urn:import:ru.protei.portal.ui.project.client.view.widget.team"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="panel footer-fixable">

        <div class="body">
            <div class="grid grid-indent">
                <div class="form-group col-xs-6">
                    <label ui:field="nameLabel"><ui:text from="{lang.projectName}"/></label>
                    <validablefield:ValidableTextBox ui:field="projectName" styleName="input-field" notNull="true"/>
                </div>
                <div class="form-group col-xs-6">
                    <label class="col-xs-5 col-md-5 h30"><ui:text from="{lang.projectRegion}"/></label>
                    <region:RegionButtonSelector ui:field="projectRegion" />
                </div>
                <div class="form-group col-xs-6">
                    <label class="col-xs-5 col-md-5 h30"><ui:text from="{lang.projectDirection}"/></label>
                    <productdirection:ProductDirectionButtonSelector ui:field="projectDirection" />
                </div>
                <div class="form-group col-xs-6">
                    <label class="col-xs-5 col-md-5 h30"><ui:text from="{lang.projectCustomerCompany}"/></label>
                    <company:CompanySelector ui:field="company" defaultValue="{lang.selectIssueCompany}"/>
                </div>
                <div class="form-group col-xs-6">
                    <label class="col-xs-5 col-md-5 h30"><ui:text from="{lang.projectCustomerType}"/></label>
                    <cutomertype:CustomerTypeSelector ui:field="customerType"/>
                </div>
                <div class="form-group col-xs-12">
                    <label class="col-xs-12"><ui:text from="{lang.projectDescription}"/></label>
                    <g:TextArea styleName="col-xs-12 col-md-12 pre-formatted-info project-details" ui:field="description"/>
                </div>

                <div class="form-group col-xs-6">
                    <legend><ui:text from="{lang.projectTeam}"/></legend>
                    <team:TeamSelector ui:field="team" addStyleNames="form-group col-xs-12"/>
                </div>

                <div class="form-group col-xs-6">
                    <legend><ui:text from="{lang.projectProducts}"/></legend>
                    <productselector:devunit.DevUnitMultiSelector ui:field="products" hasNullValue="false" addStyleNames="form-group col-xs-12"/>
                </div>

                <div class="form-group col-xs-6">
                    <legend><ui:text from="{lang.projectState}"/></legend>
                    <state:RegionStateIconSelector ui:field="projectState" />
                </div>

                <div class="form-group col-xs-12" ui:field="documents">
                    <legend><ui:text from="{lang.equipmentDocuments}"/></legend>
                    <g:HTMLPanel ui:field="documentsContainer" styleName="form-group col-xs-12 main-content-padding-0 project-document-preview"/>
                </div>

                <div class="form-group col-xs-12" ui:field="comments">
                    <label><ui:text from="{lang.comments}"/></label>
                    <g:HTMLPanel ui:field="commentsContainer"/>
                </div>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-white close_button" text="{lang.buttonCancel}"/>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>