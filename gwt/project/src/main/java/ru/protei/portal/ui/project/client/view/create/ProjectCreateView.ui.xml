<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:cutomertype='urn:import:ru.protei.portal.ui.common.client.widget.selector.customertype'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="grid grid-indent">

        <div class="form-group col-xs-12">
            <label><ui:text from="{lang.projectName}"/></label>
            <validablefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
        </div>

        <div class="form-group col-xs-12">
            <label><ui:text from="{lang.projectDescription}"/></label>
            <g:TextArea ui:field="description" styleName="input-field comment"/>
        </div>

        <div class="form-group col-xs-6">
            <label><ui:text from="{lang.projectCustomerCompany}"/></label>
            <company:CompanySelector ui:field="company" defaultValue="{lang.selectAccountCompany}"/>
        </div>

        <div class="form-group col-xs-6">
            <label><ui:text from="{lang.projectCustomerType}"/></label>
            <cutomertype:CustomerTypeSelector ui:field="customerType"/>
        </div>

        <div class="form-group col-xs-12">
            <label><ui:text from="{lang.projectProducts}"/></label>
            <productselector:devunit.DevUnitMultiSelector ui:field="products" hasNullValue="false"
                                                          addStyleNames="col-xs-12"/>
        </div>

        <div class="col-xs-12 footer">
            <g:Button ui:field="createProductBtn" styleName="btn btn-primary" text="{lang.buttonCreateProduct}"/>
            <g:Button ui:field="saveBtn" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelBtn" styleName="btn btn-white" text="{lang.buttonCancel}"/>
        </div>

        <g:HTMLPanel ui:field="createProductContainer" styleName="col-xs-12"/>
    </g:HTMLPanel>
</ui:UiBinder>