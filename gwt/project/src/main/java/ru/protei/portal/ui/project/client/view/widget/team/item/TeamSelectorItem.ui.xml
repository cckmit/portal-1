<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:role='urn:import:ru.protei.portal.ui.project.client.view.widget.selector'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="project-team-selector-item">
        <div>
            <role:ProjectRoleFormSelector ui:field="role" header="{lang.projectTeamRole}" mandatory="false"/>
        </div>

        <div>
            <person:EmployeeMultiSelector ui:field="members" firedEmployeesVisible="false" buttonStyle="btn-info btn-xs"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
