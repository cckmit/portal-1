<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:regionselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.region'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="panel panel-default">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12 col-lg-6">
                        <regionselector:RegionButtonSelector ui:field="region" header="{lang.officialRegion}"/>
                    </div>
                    <div class="form-group col-xs-12 col-xs-6">
                        <productselector:ProductButtonSelector ui:field="product" header="{lang.officialTableProduct}"/>
                    </div>
                    <div class="form-group col-xs-12">
                        <label>
                            <ui:text from="{lang.officialTableInfo}"/>
                        </label>
                        <div class="panelField verifiable">
                            <g:TextArea ui:field="info" styleName="input-field description"></g:TextArea>
                        </div>
                    </div>
                </div>

                <div class="footer">
                    <g:Button ui:field="saveButton" styleName="btn btn-success">
                        <ui:text from="{lang.buttonSave}"/>
                    </g:Button>
                    <g:Button ui:field="cancelButton" styleName="btn btn-white">
                        <ui:text from="{lang.buttonCancel}"/>
                    </g:Button>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>