<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:buttonselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.button'
             xmlns:widget="urn:import:ru.protei.portal.ui.official.client.widget">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="panel panel-default">
            <div class="body">
                <div class="row">
                    <div class="form-group col-md-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.lastName}"/>
                        </label>
                        <div class="panelField verifiable">
                            <g:TextBox ui:field="lastName" styleName="form-control"></g:TextBox>
                        </div>
                    </div>
                    <div class="form-group col-md-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.firstName}"/>
                        </label>
                        <div class="panelField verifiable">
                            <g:TextBox ui:field="firstName" styleName="form-control"></g:TextBox>
                        </div>
                    </div>
                    <div class="form-group col-md-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.secondName}"/>
                        </label>
                        <div class="panelField verifiable">
                            <g:TextBox ui:field="secondName" styleName="form-control"></g:TextBox>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-group col-md-12">
                            <companyselector:CompanySelector ui:field="company" header="{lang.officialOrganization}"/>
                        </div>
                    </div>
                    <div class="form-group col-md-12 col-lg-6">
                        <label><ui:text from="{lang.officialAmplua}"/></label>
                        <div class="panel-field verifiable">
                            <widget:AmpluaButtonSelector ui:field="amplua"></widget:AmpluaButtonSelector>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.contactPosition}"/>
                        </label>
                        <div class="panelField verifiable">
                            <g:TextBox ui:field="position" styleName="form-control"></g:TextBox>
                        </div>
                    </div>
                    <div class="form-group col-md-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.officialRelations}"/>
                        </label>
                        <div class="panelField verifiable">
                            <g:TextBox ui:field="relations" styleName="form-control"></g:TextBox>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12">
                        <label>
                            <ui:text from="{lang.officialComment}"/>
                        </label>

                        <div class="panelField verifiable">
                            <g:TextArea styleName="form-control description" ui:field="comments"></g:TextArea>
                        </div>
                    </div>
                </div>
            </div>

                <div class="footer">
                    <g:Button ui:field="saveButton" styleName="btn btn-complete"><ui:text from="{lang.buttonSave}"/></g:Button>
                    <g:Button ui:field="cancelButton" styleName="btn btn-default"><ui:text from="{lang.buttonCancel}"/></g:Button>
                </div>
            </div>
    </g:HTMLPanel>

</ui:UiBinder>