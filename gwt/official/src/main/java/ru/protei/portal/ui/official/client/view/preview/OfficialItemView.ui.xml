                    <p ui:field="comments" class="truncate-users">
                    </p>
                </div>

            </div>

            <div class="col-md-1">
                <g:Anchor ui:field="editButton" href="#" styleName="fa fa-lg ion-compose" title="Редактирование"></g:Anchor>
            </div>
            <div class="col-md-1">
                <g:Anchor ui:field="removeButton" href="#" styleName="fa fa-lg fa-trash-o" title="Удаление"></g:Anchor>
            </div>
        </div>
            <div class="form-group">
            <div class="col-md-12">
                <p ui:field="relations" style="margin-top: 2px; font-size: 13px"></p>
