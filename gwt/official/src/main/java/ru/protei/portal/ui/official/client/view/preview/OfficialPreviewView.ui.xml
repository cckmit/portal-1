<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid with-table-pager">
        <g:HTMLPanel ui:field="preview" styleName="preview">
        <div class="col-xs-12">
            <g:Anchor ui:field="fullScreen" styleName="fa fa-lg fa-external-link pull-right" href="#"/>
        </div>
            <fieldset class="header">
                <legend><ui:text from="{lang.officialGeneralInfo}"/></legend>
                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueCreationDate}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                </div>

                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.officialTableProduct}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="product"></span>
                </div>

                <div class="col-xs-6">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.officialRegion}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="region"></span>
                </div>

                <div class="col-xs-11" ui:field="info"></div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.officialFaces}"/></legend>
                <div class="form-group local-search col-xs-5" style="position: relative">
                    <span class="icon local-search-icon" style="top: 4px"></span>
                    <g:TextBox ui:field="name" styleName="input-field"/>
                </div>
                <g:HTMLPanel ui:field="membersContainer"></g:HTMLPanel>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.issueAttachments}"/></legend>
                <div class="col-xs-12 col-md-12">
                    <div class="panel">
                        <div class="body">
                            <div class="attach attach-add">
                                <fileuploader:FileUploader ui:field="fileUploader">
                                    <i class="fa-2x ion-plus-circled"/>
                                </fileuploader:FileUploader>
                            </div>
                            <attachment:AttachmentList ui:field="attachmentContainer" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.comments}"/></legend>
                <g:HTMLPanel ui:field="commentsContainer" styleName="col-xs-12 col-md-12"/>
            </fieldset>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>