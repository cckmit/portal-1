<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid">
        <g:HTMLPanel ui:field="preview" styleName="preview">
        <div class="col-md-12">
            <g:Anchor ui:field="fullScreen" styleName="fa fa-lg fa-external-link pull-right" href="#"/>
        </div>
            <fieldset class="header">
                <legend><ui:text from="{lang.officialGeneralInfo}"/></legend>
                <div class="col-md-6">
                    <label class="col-md-5 col-md-5"><ui:text from="{lang.issueCreationDate}"/></label>
                    <span class="col-md-7 col-md-7" ui:field="creationDate"></span>
                </div>

                <div class="col-md-6">
                    <label class="col-md-5 col-md-5"><ui:text from="{lang.officialTableProduct}"/></label>
                    <span class="col-md-7 col-md-7" ui:field="product"></span>
                </div>

                <div class="col-md-6">
                    <label class="col-md-5 col-md-5"><ui:text from="{lang.officialRegion}"/></label>
                    <span class="col-md-7 col-md-7" ui:field="region"></span>
                </div>

                <div class="col-md-11" ui:field="info"></div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.officialFaces}"/></legend>
                <g:Button ui:field="addButton" styleName="btn btn-default">
                    <ui:text from="{lang.buttonAdd}"/>
                </g:Button>
                <g:HTMLPanel ui:field="membersContainer"></g:HTMLPanel>
            </fieldset>

            <fieldset class="header">
                <legend>
                    <ui:text from="{lang.issueAttachments}"/>
                </legend>

                <div class="attach attach-add">
                    <fileuploader:AttachmentUploader ui:field="fileUploader">
                        <div class="attach-add-circle">
                            <i class="fa fa-plus"/>
                            <i class="icon-verifiable"/>
                        </div>
                    </fileuploader:AttachmentUploader>
                </div>
                <attachment:AttachmentList ui:field="attachmentContainer"/>

            </fieldset>

            <legend><ui:text from="{lang.comments}"/></legend>
            <g:HTMLPanel ui:field="commentsContainer" styleName="col-md-12 col-md-12"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>