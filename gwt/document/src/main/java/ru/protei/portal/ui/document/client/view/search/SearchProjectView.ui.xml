<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cutomertype='urn:import:ru.protei.portal.ui.common.client.widget.selector.customertype'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:range='urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.range'
             xmlns:projectlist='urn:import:ru.protei.portal.ui.document.client.widget.projectlist.list'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="form-group grid grid-indent">
            <div class="col-xs-6">
                <label><ui:text from="{lang.name}"/></label>
                <g:TextBox ui:field="name" styleName="input-field"/>
            </div>
            <div class="col-xs-6">
                <label><ui:text from="{lang.created}"/></label>
                <range:RangePicker ui:field="dateCreatedRange" type="DATETIME" formatValue="dd.MM.yyyy HH:mm"/>
            </div>
            <div class="col-xs-6">
                <label><ui:text from="{lang.projectCustomerType}"/></label>
                <cutomertype:CustomerTypeSelector ui:field="customerType"/>
            </div>
            <div class="col-xs-6">
                <label><ui:text from="{lang.projectProducts}"/></label>
                <productselector:devunit.DevUnitMultiSelector ui:field="products" hasNullValue="false"
                                                              addStyleNames="form-group col-xs-12"/>
            </div>
        </div>
        <div class="form-group grid grid-indent">
            <div class="col-xs-12 footer">
                <g:Anchor href='#' ui:field="search" styleName="btn btn-primary" text="{lang.buttonSearch}"/>
                <g:Anchor href='#' ui:field="clear" styleName="btn btn-white" text="{lang.buttonClear}"/>
            </div>
        </div>
        <g:HTMLPanel ui:field="panel" styleName="form-group grid grid-indent" visible="false">
            <projectlist:ProjectList ui:field="project"/>
            <div class="col-xs-12 footer">
                <g:Anchor href='#' ui:field="create" styleName="btn btn-primary" text="{lang.buttonCreate}"/>
            </div>
            <g:HTMLPanel ui:field="createProjectContainer" styleName="col-xs-12"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>