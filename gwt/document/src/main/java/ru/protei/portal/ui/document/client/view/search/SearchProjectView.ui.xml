<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cutomertype='urn:import:ru.protei.portal.ui.common.client.widget.selector.customertype'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:range='urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.range'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>

        <div class="form-group grid grid-indent">
            <div class="col-xs-6">
                <label><ui:text from="{lang.documentName}"/></label>
                <g:TextBox ui:field="name" styleName="input-field"/>
            </div>
            <div class="col-xs-6">
                <label><ui:text from="{lang.created}"/></label>
                <range:RangePicker ui:field="dateCreatedRange" type="DATETIME" formatValue="dd.MM.yyyy HH:mm"/>
            </div>
        </div>
        <div class="form-group grid grid-indent">
            <div class="col-xs-6">
                <label><ui:text from="{lang.projectCustomerType}"/></label>
                <cutomertype:CustomerTypeSelector ui:field="customerType"/>
            </div>
            <div class="col-xs-6">
                <label><ui:text from="{lang.projectProducts}"/></label>
                <productselector:devunit.DevUnitMultiSelector ui:field="products" hasNullValue="false"
                                                              addStyleNames="form-group col-xs-12"/>
            </div>
        </div>
        <div class="form-group grid grid-indent">
            <g:Anchor href='#' ui:field="search" styleName="btn btn-primary"><ui:text from="{lang.buttonSearch}"/></g:Anchor>
        </div>
        <g:HTMLPanel ui:field="projectContainer" styleName="form-group grid grid-indent"/>
    </g:HTMLPanel>
</ui:UiBinder>