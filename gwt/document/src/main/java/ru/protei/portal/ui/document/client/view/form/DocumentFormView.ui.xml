<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:doctype="urn:import:ru.protei.portal.ui.common.client.widget.document.doctype"
             xmlns:doccategory="urn:import:ru.protei.portal.ui.common.client.widget.document.doccategory"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:decnum='urn:import:ru.protei.portal.ui.common.client.widget.selector.decimalnumber'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.document.uploader'
             xmlns:equipment="urn:import:ru.protei.portal.ui.common.client.widget.selector.equipment"
             xmlns:execution="urn:import:ru.protei.portal.ui.document.client.widget.executiontype"
             xmlns:project="urn:import:ru.protei.portal.ui.common.client.widget.selector.project"
             xmlns:autoresizetextarea="urn:import:ru.protei.portal.ui.common.client.widget.autoresizetextarea"
             xmlns:stringselectform="urn:import:ru.protei.portal.ui.common.client.widget.stringselectform"
             xmlns:datepicker="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
    >

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>
    <g:HTMLPanel ui:field="card" styleName="card card-transparent no-margin card-with-fixable-footer">

        <g:HTMLPanel ui:field="cardBody" styleName="card-body row no-margin">
            <div class="col-lg-8 order-last order-lg-first">
                <form class="card-body p-t-0">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-group-default">
                                <label ui:field="nameLabel"><ui:text from="{lang.documentName}"/></label>
                                <validatefield:ValidableTextBox ui:field="name" styleName="form-control" notNull="true"/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-group-default">
                                <label ui:field="versionLabel"><ui:text from="{lang.documentVersion}"/></label>
                                <g:TextBox ui:field="version" styleName="form-control"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-group-default" ui:field="inventoryNumberContainer">
                                <label ui:field="inventoryNumberLabel"><ui:text from="{lang.inventoryNumber}"/></label>
                                <g:LongBox ui:field="inventoryNumber" styleName="form-control"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-group-default" ui:field="decimalNumberContainer">
                                <label ui:field="decimalNumberLabel"><ui:text from="{lang.documentDecimalNumber}"/></label>
                                <decnum:DecimalNumberInput ui:field="decimalNumber" styleName="form-control"/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-group-default">
                                <label ui:field="annotationLabel"><ui:text from="{lang.annotation}"/></label>
                                <autoresizetextarea:AutoResizeTextArea ui:field="annotation" styleName="form-control comment"
                                                                       minRows="2" maxRows="10"/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <stringselectform:StringTagInputForm ui:field="keywords"
                                                                 header="{lang.documentKeywords}"/>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="checkbox check-success p-t-10 p-b-10 pull-right">
                                    <g:CheckBox ui:field="approved" text="{lang.documentApproved}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4" >
                            <div class="form-group" ui:field="approvedByContainer">
                                        <person:EmployeeFormSelector ui:field="approvedBy"
                                                                     header="{lang.documentApprovedBy}"
                                                                     enabled="false"
                                                                     addStyleNames="document-approval-by"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group form-group-default document-approval-date"  ui:field="approvalDateContainer">
                                <label ui:field="approvalDateLabel"><ui:text from="{lang.documentApprovalDate}"/></label>
                                <datepicker:SinglePicker ui:field="approvalDate" type="DATE" formatValue="dd.MM.yyyy"
                                                         enabled="false"
                                />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="card card-default">
                                <div class="card-header">
                                    <div ui:field="downloadDocLabel" class="card-title"><ui:text from="{lang.documentFileDoc}"/></div>
                                    <div class="card-controls">
                                        <ul>
                                            <li><g:Anchor ui:field="downloadDoc"><i class="fas fa-cloud-download-alt"/></g:Anchor></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body no-scroll no-padding card-body-dropzone">
                                    <fileuploader:DocumentUploader ui:field="documentDocUploader" format="DOC"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card card-default">
                                <div class="card-header">
                                    <div ui:field="downloadPdfLabel" class="card-title"><ui:text from="{lang.documentFilePdf}"/></div>
                                    <div class="card-controls">
                                        <ul>
                                            <li><g:Anchor ui:field="downloadPdf"><i class="fas fa-cloud-download-alt"/></g:Anchor></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body no-scroll no-padding card-body-dropzone">
                                    <fileuploader:DocumentUploader ui:field="documentPdfUploader" format="PDF"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card card-default">
                                <div class="card-header">
                                    <div ui:field="downloadApprovedLabel" class="card-title"><ui:text from="{lang.documentFileApprovalSheet}"/></div>
                                    <div class="card-controls">
                                        <ul>
                                            <li><g:Anchor ui:field="downloadApproved"><i class="fas fa-cloud-download-alt"/></g:Anchor></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body no-scroll no-padding card-body-dropzone">
                                    <fileuploader:DocumentUploader ui:field="documentApprovedUploader" format="AS"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4 order-first order-lg-last">
                <div class="card card-default">
                    <div class="card-body">
                        <div>
                            <div class="form-group form-group-attached">
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-12">
                                        <person:EmployeeFormSelector ui:field="registrar"
                                                                     validation="false"
                                                                     header="{lang.documentRegistrar}"
                                                                     mandatory="false"/>
                                    </div>
                                </div>
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-12">
                                        <person:EmployeeFormSelector ui:field="contractor"
                                                                     validation="false"
                                                                     header="{lang.documentContractor}"
                                                                     mandatory="false"/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-t-10 m-b-0">
                                <label ui:field="documentSectionLabel"><ui:text from="{lang.documentSectionProject}"/></label>
                            </div>
                            <div class="form-group form-group-attached">
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-6">
                                        <project:ProjectFormSelector ui:field="project"
                                                                     validation="false"
                                                                     header="{lang.documentProject}"
                                                                     mandatory="false"/>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label class="fade" ui:field="projectCustomerTypeLabel"><ui:text from="{lang.documentProjectCustomerType}"/></label>
                                            <g:TextBox ui:field="projectCustomerType" styleName="form-control" enabled="false"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label class="fade" ui:field="projectProductDirectionLabel"><ui:text from="{lang.documentProjectProductDirection}"/></label>
                                            <g:TextBox ui:field="projectProductDirection" styleName="form-control" enabled="false"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-group-default">
                                            <label class="fade" ui:field="projectRegionLabel"><ui:text from="{lang.documentProjectRegion}"/></label>
                                            <g:TextBox ui:field="projectRegion" styleName="form-control" enabled="false"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-t-10 m-b-0">
                                <label ui:field="documentSectionEquipmentLabel"><ui:text from="{lang.documentSectionEquipment}"/></label>
                            </div>
                            <div class="form-group form-group-attached">
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-12">
                                        <equipment:EquipmentFormSelector ui:field="equipment"
                                                                         printDecimalNumbers="false"
                                                                         hasNullValue="false"
                                                                         validation="false"
                                                                         header="{lang.documentEquipment}"
                                                                         mandatory="false"/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-t-10 m-b-0">
                                <label ui:field="documentSectionInfoLabel"><ui:text from="{lang.documentSectionInfo}"/></label>
                            </div>
                            <div class="form-group form-group-attached">
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-12">
                                        <execution:DocumentExecutionTypeFormSelector ui:field="executionType"
                                                                                     validation="false"
                                                                                     header="{lang.documentExecutionType}"
                                                                                     mandatory="false"/>
                                    </div>
                                </div>
                                <div class="row clearfix reset-no-padding">
                                    <div class="col-md-6">
                                        <doccategory:DocumentCategoryFormSelector ui:field="documentCategory"
                                                                                  defaultValue="{lang.selectValue}"
                                                                                  validation="false"
                                                                                  header="{lang.documentCategory}"
                                                                                  mandatory="false"/>
                                    </div>
                                    <div class="col-md-6">
                                        <doctype:DocumentTypeFormSelector ui:field="documentType"
                                                                          defaultValue="{lang.selectValue}"
                                                                          validation="false"
                                                                          header="{lang.documentType}"
                                                                          mandatory="false"/>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group m-t-10 m-b-0">
                                <label ui:field="documentMembersLabel"><ui:text from="{lang.documentMembers}"/></label>
                            </div>
                            <div class="form-group form-group-attached">
                                <person:EmployeeMultiSelector ui:field="members" styleName="case-subscribers"
                                                              buttonStyle="btn-info btn-xs"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </g:HTMLPanel>
        <div ui:field="footer" class="card-footer">
            <div class="card card-transparent no-margin">
                <div class="text-right">
                    <g:Button ui:field="saveBtn" styleName="btn btn-complete" text="{lang.buttonSave}"/>
                    <g:Button ui:field="cancelBtn" styleName="btn btn-default" text="{lang.buttonCancel}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>