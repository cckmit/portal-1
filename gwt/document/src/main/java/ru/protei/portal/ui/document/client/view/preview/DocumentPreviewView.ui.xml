<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid with-table-pager">
        <g:HTMLPanel ui:field="preview" styleName="preview">
            <fieldset class="header">
                <legend ui:field="header"></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentName}"/></label>
                    <span class="col-xs-7" ui:field="name"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentVersion}"/></label>
                    <span class="col-xs-7" ui:field="version"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.created}"/></label>
                    <span class="col-xs-7" ui:field="created"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentType}"/></label>
                    <span class="col-xs-7" ui:field="type"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.annotation}"/></label>
                    <span class="col-xs-7" ui:field="annotation"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentProject}"/></label>
                    <span class="col-xs-7" ui:field="project"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentManager}"/></label>
                    <span class="col-xs-7" ui:field="manager"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentRegistrar}"/></label>
                    <span class="col-xs-7" ui:field="registrar"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentContractor}"/></label>
                    <span class="col-xs-7" ui:field="contractor"></span>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.documentIdentification}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentDecimalNumber}"/></label>
                    <span class="col-xs-7" ui:field="numberDecimal"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.inventoryNumber}"/></label>
                    <span class="col-xs-7" ui:field="numberInventory"></span>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.documentKeywords}"/></legend>
                <div class="col-xs-12">
                    <span class="col-xs-12 col-md-12 decimal-number" ui:field="keyWords"></span>
                </div>
            </fieldset>
            <g:Anchor href="javascript:void(0)" ui:field="downloadButton" styleName="btn btn-white" target="_blank">
                <ui:text from="{lang.download}"/>
            </g:Anchor>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>