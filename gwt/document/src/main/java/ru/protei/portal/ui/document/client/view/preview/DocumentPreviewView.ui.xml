<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="preview" styleName="card card-default no-border card-fixed preview-card">
        <div class="card-body">
            <h4 ui:field="header" class="m-r-50"/>
            <div class="preview-title-image-container-right">
                <g:Anchor href="javascript:void(0)" ui:field="downloadDocButton" target="_blank">
                    <img src="./images/document-doc.svg"/>
                </g:Anchor>
                <g:Anchor href="javascript:void(0)" ui:field="downloadPdfButton" target="_blank">
                    <img src="./images/document-pdf.svg"/>
                </g:Anchor>
                <g:Anchor href="javascript:void(0)" ui:field="downloadApprovalSheetButton" target="_blank">
                    <img src="./images/document-as.png"/>
                </g:Anchor>
            </div>

            <div class="inline">
                <small ui:field="createdBy"/>
            </div>

            <g:Label styleName="small hint-text pre-formatted-info" ui:field="annotation"/>
            <div ui:field="version"/>

            <h5><ui:text from="{lang.documentCommonHeader}"/></h5>
            <div class="small">
                <b><ui:text from="{lang.documentType}: "/></b>
                <span ui:field="type"/>
            </div>

            <div class="small">
                <b><ui:text from="{lang.documentExecutionType}: "/></b>
                <span ui:field="executionType"/>
            </div>

            <div class="small">
                <b><ui:text from="{lang.documentProject}: "/></b>
                <span ui:field="project"/>
            </div>

            <h5><ui:text from="{lang.documentIdentification}"/></h5>

            <div class="small">
                <b><ui:text from="{lang.documentDecimalNumber}: "/></b>
                <span ui:field="numberDecimal"/>
            </div>

            <div class="small">
                <b><ui:text from="{lang.inventoryNumber}: "/></b>
                <span ui:field="numberInventory"/>
            </div>

            <h5><ui:text from="{lang.documentWorkGroupHeader}"/></h5>

            <div class="small">
                <b><ui:text from="{lang.documentManager}: "/></b>
                <span ui:field="manager"/>
            </div>

            <div class="small">
                <b><ui:text from="{lang.documentRegistrar}: "/></b>
                <span ui:field="registrar"/>
            </div>

            <div class="small">
                <b><ui:text from="{lang.documentContractor}: "/></b>
                <span ui:field="contractor"/>
            </div>

            <h5><ui:text from="{lang.documentKeywords}"/></h5>
            <span ui:field="keyWords"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>