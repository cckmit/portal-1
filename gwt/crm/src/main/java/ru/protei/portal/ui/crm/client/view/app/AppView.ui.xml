<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="global">

        <div style="header_global">

            <div class="leftBlock inactive">
                <div class="company">
                    <span class="logo"/>
                    <span class="name">PROTEI</span>
                </div>
                <div id="hideLeftBlock" class="hideBar_button"/>
            </div>

            <div class="rightSide">
                <span><i class="fa fa-user"></i></span> <g:Anchor ui:field="user" href="#"/>
            </div>
            <div class="rightSide icons">
                <g:Button ui:field="logout" text="{lang.appLogout}" styleName="exit_button"/>
            </div>
        </div>

        <div style="body_global">
            <g:HTMLPanel ui:field="sidebar" styleName="leftBlock">Sidebar</g:HTMLPanel>
            <g:HTMLPanel ui:field="container" styleName="rightBlock">Container</g:HTMLPanel>
        </div>

        <g:HTMLPanel ui:field="footer">Footer</g:HTMLPanel>

    </g:HTMLPanel>

</ui:UiBinder>