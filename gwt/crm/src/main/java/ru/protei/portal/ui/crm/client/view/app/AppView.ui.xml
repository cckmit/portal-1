<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:navsearch="urn:import:ru.protei.portal.ui.crm.client.widget.navsearch">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />



    <g:HTMLPanel styleName="global">
        <g:HTMLPanel tag="header" styleName="main-header">
            <a href="http://protei.ru" class="logo">
                <span class="logo-lg">
                    <img src="./images/logo.svg"/>
                    <b>PROTEI</b> LTD
                </span>

                <span class="logo-mini">
                    <img src="./images/logo.svg"/>
                </span>
            </a>

            <nav class="navbar">
                <g:Anchor ui:field="toggleButton" styleName="sidebar-toggle" href="#">
                    <span class="sr-only">Toggle navigation</span>
                </g:Anchor>

                <!-- action-bar -->
                <ul class="nav navbar-nav navbar-left">
                    <!-- сюда добавлять кнопки с действиями -->
                    <li>
                        <g:Anchor ui:field="create" href="#">
                            <i class="fa fa-lg fa-plus"></i>
                            <ui:text from="{lang.buttonCreate}"/>
                        </g:Anchor>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <navsearch:NavSearchBox ui:field="search"/>
                    <li>

                        <g:Anchor ui:field="logout" title="{lang.buttonLogout} (you can use Ctrl+F4)" href="#">
                            <i class="fa fa-lg fa-sign-out"></i>
                        </g:Anchor>
                    </li>
                </ul>
            </nav>
        </g:HTMLPanel>


        <g:HTMLPanel styleName="main-sidebar" ui:field="sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="./images/user-icon-m.png" class="img-circle"/>
                    </div>
                    <div class="pull-left info">
                        <p ui:field="username"></p>
                        <a ui:field="role"></a>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li class="header"><ui:text from="{lang.appNavHeader}"/></li>
                </ul>

                <g:HTMLPanel styleName="sidebar-menu" ui:field="menuContainer"/>
            </section>
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="container" styleName="right-side"/>

        <g:HTMLPanel ui:field="notifyContainer"  styleName="notifyPanel"/>

    </g:HTMLPanel>

</ui:UiBinder>