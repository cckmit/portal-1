                        </li>

                        <li ui:field="companiesLi">
                            <g:Anchor ui:field="companies" href="#">
                                <i class="icon icon-organization"></i>
                                <ui:text from="{lang.companies}"/>
                            </g:Anchor>

                        </li>

                        <li ui:field="contactsLi">
                            <g:Anchor ui:field="contacts" href="#">
                                <i class="fa fa-group"></i>
                                <ui:text from="{lang.contacts}"/>
                            </g:Anchor>
