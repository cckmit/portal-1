<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:navsearch="urn:import:ru.protei.portal.ui.crm.client.widget.navsearch"
             xmlns:locale="urn:import:ru.protei.portal.ui.crm.client.widget.localeselector">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>


    <g:HTMLPanel styleName="global">
        <g:HTMLPanel tag="header" styleName="main-header">
            <g:Anchor ui:field="logo" href="#" styleName="logo">
                <span class="logo-lg">
                    <img src="./images/logo.svg"/>
                    <b>PROTEI</b>
                    LTD
                </span>

                <span class="logo-mini">
                    <img src="./images/logo.svg"/>
                </span>
            </g:Anchor>

            <nav class="navbar">
                <g:Anchor ui:field="toggleButton" styleName="sidebar-toggle" href="#">
                    <span class="sr-only">Toggle navigation</span>
                </g:Anchor>

                <g:HTMLPanel ui:field="actionBarContainer" tag="ul" styleName="nav navbar-nav navbar-left"/>

                <ul class="nav navbar-nav navbar-right">
                    <navsearch:NavSearchBox ui:field="search"/>
                    <locale:LocaleSelector ui:field="locale"/>
                    <li>
                        <g:Anchor ui:field="logout" title="{lang.buttonLogout} (you can use Ctrl+F4)" href="#">
                            <i class="fa-lg ion-log-out"></i>
                        </g:Anchor>
                    </li>
                </ul>
            </nav>
        </g:HTMLPanel>


        <g:HTMLPanel styleName="main-sidebar" ui:field="sidebar">
            <section class="sidebar">
                <g:HTMLPanel ui:field="userPanel" styleName="user-panel">
                    <div class="pull-left image">
                        <img src="./images/user-icon-m.svg" class="img-circle" ui:field="icon"/>
                    </div>
                    <div class="pull-left info">
                        <p ui:field="username"></p>
                        <a ui:field="company"></a>
                    </div>
                </g:HTMLPanel>
                <ul class="sidebar-menu">
                    <li class="header">
                        <ui:text from="{lang.appNavHeader}"/>
                    </li>
                </ul>

                <g:HTMLPanel styleName="sidebar-menu" ui:field="menuContainer"/>
            </section>
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="container" styleName="right-side"/>

        <g:HTMLPanel ui:field="notifyContainer" styleName="notifyPanel"/>

    </g:HTMLPanel>

</ui:UiBinder>