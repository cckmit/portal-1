    <g:HTMLPanel ui:field="appPanel" styleName="global">
        <g:HTMLPanel tag="header" styleName="main-header">
            <a href="http://protei.ru" class="logo">
                <span>
                    <img src="./images/logo.svg"/>
                    <b>Protei</b> LTD
                </span>
            </a>

            <nav class="navbar">
                <g:Anchor ui:field="hideBarButton" styleName="sidebar-toggle" href="#">
