<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client"
             xmlns:importance='urn:import:ru.protei.portal.ui.crm.client.widget.importance.btngroup'>

    <g:HTMLPanel>
        <label class="dashboard-section-name">
            <span ui:field="sectionName"/>
            <span ui:field="count" class="dashboard-total-count"/>
            <div class="rightSide">
                <g:Anchor ui:field="fastOpen" styleName="fa fa-lg fa-external-link dashboard-fast-open" href="#"/>
                <importance:CustomImportanceBtnGroupMulti ui:field="importance"/>
            </div>
        </label>
        <div ui:field="loader" class="Loader"/>
        <g:HTMLPanel ui:field="tableContainer" styleName="global-table-container">
            <table:TableWidget ui:field="table" styleName="table-hover issues"/>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>