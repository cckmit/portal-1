<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client"
             xmlns:importance='urn:import:ru.protei.portal.ui.crm.client.widget.importance.btngroup'
             xmlns:searchbtn='urn:import:ru.protei.portal.ui.common.client.widget.searchbtn'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="dashboard-section-name">
            <span ui:field="sectionName"/>
            <span ui:field="count" class="dashboard-total-count"/>
            <g:Button ui:field="fastOpen" styleName="btn dashboard-btn">
                <i class="fa fa-lg fa-external-link"/>
            </g:Button>
            <div class="rightSide">
                <searchbtn:SearchButton ui:field="search" styleName="dashboard-search-btn" placeholder="{lang.issueNumber}"/>
                <person:PersonButtonViewerSelector ui:field="initiatorsBtn" styleName="dashboard-btn" defaultValue="{lang.withoutContact}"/>
                <importance:CustomImportanceBtnGroupMulti ui:field="importance"/>
            </div>
        </div>
        <div ui:field="loader" class="Loader"/>
        <g:HTMLPanel ui:field="tableContainer" styleName="global-table-container">
            <table:TableWidget ui:field="table" styleName="table-hover issues"/>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>