<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel tag="aside" ui:field="loginPanel" styleName="global">
        <div class="signIn_block">
            <div class="t_wrapper">
                <div class="tc_wrapper">
                    <div class="block">
                        <div class="authForm">
                            <div class="head">
                                <div class="company"><span class="logo"></span><span class="name">PROTEI</span></div>
                            </div>
                            <div class="body">
                                <div class="signInForm">
                                    <div class="user form-group">
                                        <div class="btn empty grayC hide"><span class="icon-user"></span></div>
                                        <g:TextBox ui:field="login" styleName="input-field"/>
                                    </div>
                                    <div class="password form-group">
                                        <div class="btn empty grayC hide"><span class="icon-lock"></span></div>
                                        <g:PasswordTextBox ui:field="password" styleName="input-field"/>
                                    </div>
                                    <label class="submitBlock hideSource">
                                        <g:Button ui:field="loginButton" text="{lang.buttonLogin}" styleName="btn btn-white"/>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div ui:field="authErrorPanel" class="errorNotice"></div>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>