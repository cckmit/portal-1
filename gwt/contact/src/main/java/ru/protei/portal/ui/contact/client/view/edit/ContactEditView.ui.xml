<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:single="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
             xmlns:companyselector='urn:import:ru.protei.portal.ui.contact.client.widget.company.buttonselector'
            >
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="col-xs-3">
                        <h3><ui:text from="{lang.personalData}" /></h3>

                        <div>
                            <label class="required">
                                <ui:text from="{lang.company}"/>
                            </label>
                            <div class="panelField">
                                <companyselector:CompanyButtonSelector ui:field="company"/>
                            </div>
                        </div>

                        <div>
                            <label class="required">
                                <ui:text from="{lang.lastName}"/>
                            </label>
                            <div class="panelField">
                                <g:TextBox ui:field="lastName" styleName="inputField"/>
                            </div>
                        </div>
                        <div>
                            <label class="required">
                                <ui:text from="{lang.firstName}"/>
                            </label>
                            <div class="panelField">
                                <g:TextBox ui:field="firstName" styleName="inputField"/>
                            </div>
                        </div>
                        <div>
                            <label class="required">
                                <ui:text from="{lang.secondName}"/>
                            </label>
                            <div class="panelField">
                                <g:TextBox ui:field="secondName" styleName="inputField"/>
                            </div>
                        </div>
                        <div>
                            <label class="required">
                                <ui:text from="{lang.displayName}"/>
                            </label>
                            <div class="panelField">
                                <g:TextBox ui:field="displayName" styleName="inputField"/>
                            </div>
                        </div>

                        <div>
                            <label class="">
                                <ui:text from="{lang.displayShortName}"/>
                            </label>
                            <div class="panelField">
                                <g:TextBox ui:field="shortName" styleName="inputField"/>
                            </div>
                        </div>

                        <div>
                            <label class="">
                                <ui:text from="{lang.birthday}"/>
                            </label>
                            <div class="panelField">
                                <single:SinglePicker ui:field="birthDay" />
                            </div>
                        </div>

                        <div>
                            <label class="">
                                <ui:text from="{lang.gender}"/>
                            </label>
                            <div class="panelField">
                                <input type="radio" name="gender"/> <ui:text from="{lang.genderMale}"/>
                                <input type="radio" name="gender"/> <ui:text from="{lang.genderFemale}"/>
                                <input type="radio" name="gender"/> <ui:text from="{lang.genderUndefined}"/>
                            </div>
                        </div>

                        <div>
                            <label class="">
                                <ui:text from="{lang.comment}"/>
                            </label>
                            <div class="panelField">
                                <g:TextArea ui:field="personInfo" styleName="inputField description"></g:TextArea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <h3><ui:text from="{lang.contactInfo}"/></h3>
                        <div class="col-xs-6">
                            <div>
                                <label class="required">
                                    <ui:text from="{lang.workEmail}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextBox ui:field="workEmail" styleName="inputField"/>
                                </div>
                            </div>
                            <div>
                                <label class="">
                                    <ui:text from="{lang.personalEmail}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextBox ui:field="personalEmail" styleName="inputField"/>
                                </div>
                            </div>
                            <div>
                                <label class="required">
                                    <ui:text from="{lang.workPhone}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextBox ui:field="workPhone" styleName="inputField"/>
                                </div>
                            </div>
                            <div>
                                <label class="">
                                    <ui:text from="{lang.personalPhone}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextBox ui:field="homePhone" styleName="inputField"/>
                                </div>
                            </div>

                            <div>
                                <label class="">
                                    <ui:text from="{lang.workAddress}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextArea ui:field="workAddress" styleName="inputField description"></g:TextArea>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-6">
                            <div>
                                <label class="">
                                    <ui:text from="{lang.primaryFax}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextBox ui:field="workFax" styleName="inputField"/>
                                </div>
                            </div>

                            <div>
                                <label class="">
                                    <ui:text from="{lang.secondaryFax}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextBox ui:field="homeFax" styleName="inputField"/>
                                </div>
                            </div>

                            <div>
                                <label class="">
                                    <ui:text from="{lang.homeAddress}"/>
                                </label>
                                <div class="panelField">
                                    <g:TextArea ui:field="homeAddress" styleName="inputField description"></g:TextArea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-3">
                       <h3><ui:text from="{lang.advPersonalData}"/></h3>
                        <div>
                            <label class="required">
                                <ui:text from="{lang.contactPosition}"/>
                            </label>
                            <div class="panelField">
                                <g:TextArea ui:field="displayPosition" styleName="inputField description"></g:TextArea>
                            </div>
                        </div>
                        <div>
                            <label class="">
                                <ui:text from="{lang.department}"/>
                            </label>
                            <div class="panelField">
                                <g:TextArea ui:field="displayDepartment" styleName="inputField description"></g:TextArea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="button greenC" text="{lang.save}"/>
                <g:Button ui:field="cancelButton" styleName="button whiteC close_button" text="{lang.cancel}"/>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>