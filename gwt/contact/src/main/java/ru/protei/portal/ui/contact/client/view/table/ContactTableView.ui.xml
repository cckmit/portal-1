<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.contact.client.widget.company.buttonselector'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel styleName="OrganizationList">
        <div class="controlButtons">
            <div class="buttons_group">
                <companyselector:CompanyButtonSelector ui:field="company"/>
            </div>
            <div class="buttons_group">
                <div class="regulator">
                    <ui:text from="{lang.sortBy}"/>
                    <sortfieldselector:SortFieldSelector ui:field="sortField"/>
                    <div class="button empty whiteC switcher">
                        <g:ToggleButton ui:field="dirButton" styleName="sorting_button"/>
                    </div>
                </div>
                <div class="regulator">
                    <g:CheckBox ui:field="showFired" styleName="checkbox" text="{lang.showFired}"/>
                </div>
            </div>
            <div class="rightSide local-search">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
        </div>
    </g:HTMLPanel></ui:UiBinder>