<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview">

        <fieldset class="comment">
            <legend><ui:text from="{lang.personalData}"/></legend>
            <div>
                <label><ui:text from="{lang.linkToObject}"/></label>
                <span ui:field="link"></span>
            </div>
            <div>
                <label><ui:text from="{lang.contactLastName}"/></label>
                <span ui:field="lastName"></span>
            </div>
            <div>
                <label><ui:text from="{lang.contactFirstName}"/></label>
                <span ui:field="firstName"></span>
            </div>
            <div>
                <label><ui:text from="{lang.contactSecondName}"/></label>
                <span ui:field="secondName"></span>
            </div>
            <div>
                <label><ui:text from="{lang.displayName}"/></label>
                <span ui:field="displayName"></span>
            </div>
            <div>
                <label><ui:text from="{lang.displayShortName}"/></label>
                <span ui:field="shortName"></span>
            </div>
        </fieldset>
        <fieldset class="comment">
            <legend><ui:text from="{lang.contactInfo}"/></legend>
            <div>
                <label><ui:text from="{lang.company}"/></label>
                <span ui:field="company"></span>
            </div>
            <div>
                <label><ui:text from="{lang.contactPosition}"/></label>
                <span ui:field="position"></span>
            </div>
            <div>
                <label><ui:text from="{lang.contactDepartment}"/></label>
                <span ui:field="department"></span>
            </div>
            <div>
                <label><ui:text from="{lang.workPhone}"/></label>
                <span ui:field="workPhone"></span>
            </div>
            <div>
                <label><ui:text from="{lang.personalPhone}"/></label>
                <span ui:field="personalPhone"></span>
            </div>
            <div>
                <label><ui:text from="{lang.primaryFax}"/></label>
                <span ui:field="workFax"></span>
            </div>
            <div>
                <label><ui:text from="{lang.secondaryFax}"/></label>
                <span ui:field="personalFax"></span>
            </div>
            <div>
                <label><ui:text from="{lang.workEmail}"/></label>
                <span ui:field="workEmail"></span>
            </div>
            <div>
                <label><ui:text from="{lang.personalEmail}"/></label>
                <span ui:field="personalEmail"></span>
            </div>
            <div>
                <label><ui:text from="{lang.workAddress}"/></label>
                <span ui:field="workAddress"></span>
            </div>
            <div>
                <label><ui:text from="{lang.homeAddress}"/></label>
                <span ui:field="personalAddress"></span>
            </div>
        </fieldset>
        <fieldset class="comment">
            <legend><ui:text from="{lang.advPersonalData}"/></legend>
            <div>
                <label><ui:text from="{lang.gender}"/></label>
                <span ui:field="gender"></span>
            </div>
            <div>
                <label><ui:text from="{lang.birthday}"/></label>
                <span ui:field="birthday"></span>
            </div>
            <span ui:field="info" class="pre-formatted-info"></span>
        </fieldset>
    </g:HTMLPanel>
</ui:UiBinder>