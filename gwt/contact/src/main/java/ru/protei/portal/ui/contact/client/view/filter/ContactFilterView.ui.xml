<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="card card-default">
        <div class="card-body">
            <div class="row">
                <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}"
                                                       styleName="form-group col-md-12"/>
                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.sortBy}"/>
                    </label>
                    <div class="control-group">
                        <sortfieldselector:SortFieldSelector ui:field="sortField" type="CONTACT"/>
                        <g:ToggleButton ui:field="sortDir" styleName="btn btn-default sorting_button"/>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <companyselector:CompanySelector ui:field="company" header="{lang.company}"/>
                </div>
                <div class="form-group col-md-12">
                    <g:CheckBox ui:field="showFired" styleName="checkbox" text="{lang.contactShowFired}"/>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <g:Button ui:field="resetBtn" styleName="btn btn-default" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>