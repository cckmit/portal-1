<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel fixed">
        <div class="body">
            <div class="local-search col-xs-12">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
            <div class="col-xs-12">
                <ui:text from="{lang.sortBy}"/>
                <div class="control-group">
                    <sortfieldselector:SortFieldSelector ui:field="sortField" type="CONTACT"/>
                    <g:ToggleButton ui:field="sortDir" styleName="button empty whiteC sorting_button"/>
                </div>
            </div>
            <div class="col-xs-12">
                <companyselector:CompanySelector ui:field="company" header="{lang.company}"/>
            </div>
            <div class="col-xs-12 pull-left" style="margin-top:10px;">
                <g:CheckBox ui:field="showFired" styleName="checkbox" text="{lang.contactShowFired}"/>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="resetBtn" styleName="button greenC" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>