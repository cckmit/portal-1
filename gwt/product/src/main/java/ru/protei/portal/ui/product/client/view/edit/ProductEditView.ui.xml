<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:list="urn:import:ru.protei.portal.ui.common.client.widget.subscription.list"
             xmlns:typebtn='urn:import:ru.protei.portal.ui.product.client.widget.type'
             xmlns:devunit='urn:import:ru.protei.portal.ui.common.client.widget.selector.product.devunit'
             xmlns:component='urn:import:ru.protei.portal.ui.common.client.widget.selector.product.component'
             xmlns:makdown="urn:import:ru.protei.portal.ui.common.client.widget.makdown">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <div class="grid grid-indent">
                <g:HTMLPanel ui:field="nameContainer" styleName="form-group col-xs-10">
                    <label ui:field="nameLabel"><ui:text from="{lang.productName}"/></label>
                    <div class="panelField verifiable">
                        <i ui:field="verifiableIcon"/>
                        <validablefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                    </div>
                </g:HTMLPanel>
                <div class="form-group col-xs-2">
                    <label><ui:text from="{lang.productType}"/></label>
                    <div class="form-group col-xs-12 m-b-0 du-selector-inline">
                        <typebtn:ProductTypeBtnGroup ui:field="type"/>
                    </div>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.description}"/></label>
                    <g:TextArea ui:field="info" styleName="input-field description" />
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.productWikiLink}"/></label>
                    <g:TextBox ui:field="wikiLink" styleName="input-field"/>
                </div>
                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.productHistoryVersion}"/></label>
                    <makdown:MarkdownAreaWithPreview ui:field="historyVersion"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.productConfiguration}"/></label>
                    <makdown:MarkdownAreaWithPreview ui:field="configuration"/>
                </div>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.productCDRDescription}"/></label>
                    <makdown:MarkdownAreaWithPreview ui:field="cdrDescription"/>
                </div>

                <g:HTMLPanel ui:field="devUnitContainer" styleName="form-group col-xs-12">
                    <label><ui:text from="{lang.belongsTo}"/></label>
                    <devunit:DevUnitMultiSelector styleName="components-selector" ui:field="devUnits" hasNullValue="false"/>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="form-group col-xs-12">
                    <label><ui:text from="{lang.components}"/></label>
                    <component:ComponentMultiSelector styleName="components-selector" ui:field="components"/>
                </g:HTMLPanel>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.companySubscription}"/></label>
                </div>

                <list:SubscriptionList ui:field="subscriptions" styleName="form-group col-xs-12" />
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="stateBtn" styleName="btn btn-danger" text="{lang.productToArchive}"/>
            <g:Button ui:field="saveBtn" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelBtn" styleName="btn btn-white" text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>