<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <div class="grid">
                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.productName}"/></label>
                    <div class="panelField verifiable">
                        <i ui:field="verifiableIcon"></i>
                        <validablefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.description}"/></label>
                    <g:TextArea ui:field="info" styleName="input-field description" />
                </div>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="stateBtn" styleName="btn btn-danger" text="{lang.productToArchive}"></g:Button>
            <g:Button ui:field="saveBtn" styleName="btn btn-success" text="{lang.buttonSave}"></g:Button>
            <g:Button ui:field="cancelBtn" styleName="btn btn-white" text="{lang.buttonCancel}"></g:Button>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>