<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <div class="grid">
                <div class="col-xs-12">
                    <label class="required"><ui:text from="{lang.productName}"/></label>
                    <g:TextBox ui:field="name" styleName="inputField verifi"/>
                </div>
                <div class="col-xs-12">
                    <label><ui:text from="{lang.description}"/></label>
                    <g:TextArea ui:field="info" styleName="inputField description" />
                </div>
            </div>
        </div>
        <div class="footer">
            <g:ToggleButton ui:field="state" styleName="button redC" text="{lang.buttonArchive}"></g:ToggleButton>
            <g:Button ui:field="saveBtn" styleName="button greenC" text="{lang.buttonSave}"></g:Button>
            <g:Button ui:field="cancelBtn" styleName="button whiteC" text="{lang.buttonCancel}"></g:Button>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>