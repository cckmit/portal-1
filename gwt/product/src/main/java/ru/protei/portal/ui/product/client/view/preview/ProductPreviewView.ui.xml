<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview">
        <g:HTMLPanel tag="fieldset" styleName="header">
            <legend><ui:text from="{lang.productDescription}"/></legend>
            <span ui:field="info" class="pre-formatted-info"></span>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>