<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:tab="urn:import:ru.protei.portal.ui.common.client.widget.tab">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="rootWrapper" styleName="card card-default">
        <div class="card-body">
            <h4 ui:field="productName" class="m-r-50"/>
            <img ui:field="typeImage" src="" class="preview-title-image_right"/>
            <div class="small hint-text no-margin">
                <a ui:field="wikiLink" href="#" target="_blank"/>
            </div>

            <g:HTMLPanel ui:field="nameBlock" tag="fieldset" styleName="header" visible="false">
                <legend>
                    <g:Label ui:field="typeLabel"/>
                </legend>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.name}"/></label>
                    <span class="col-xs-7" ui:field="name"></span>
                </div>
            </g:HTMLPanel>

            <g:Label styleName="small hint-text pre-formatted-info" ui:field="info"/>

            <tab:TabWidget tabNames="{lang.productHistoryVersion}|{lang.productConfiguration}|{lang.productCDRDescription}" styleName="">
                <tab:pane.TabWidgetPane tabName="{lang.productHistoryVersion}">
                    <g:HTMLPanel styleName="markdown" ui:field="historyVersion"/>
                </tab:pane.TabWidgetPane>

                <tab:pane.TabWidgetPane tabName="{lang.productConfiguration}">
                    <g:HTMLPanel styleName="markdown" ui:field="configuration"/>
                </tab:pane.TabWidgetPane>

                <tab:pane.TabWidgetPane tabName="{lang.productCDRDescription}">
                    <g:HTMLPanel styleName="markdown" ui:field="cdrDescription"/>
                </tab:pane.TabWidgetPane>
            </tab:TabWidget>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>