<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="rootWrapper" styleName="card card-default">
        <div class="card-block">
            <h4 class="col-md-12 no-margin no-padding" ui:field="productName"/>
            <img ui:field="typeImage" src="" class="preview-title-image_right"/>
            <g:Label styleName="small hint-text pre-formatted-info" ui:field="info"/>

            <div class="col-xs-12">
                <label class="col-xs-5"><ui:text from="{lang.productWikiLink}"/></label>
                <span class="col-xs-7" ui:field="wikiLink"/>
            </div>

            <g:HTMLPanel tag="fieldset" styleName="header">
                <legend><ui:text from="{lang.productConfiguration}"/></legend>
                <div class="col-xs-12 markdown" ui:field="configuration"/>
            </g:HTMLPanel>
            <g:HTMLPanel tag="fieldset" styleName="header">
                <legend><ui:text from="{lang.productHistoryVersion}"/></legend>
                <div class="col-xs-12 markdown" ui:field="historyVersion"/>
            </g:HTMLPanel>
            <g:HTMLPanel tag="fieldset" styleName="header">
                <legend><ui:text from="{lang.productCDRDescription}"/></legend>
                <div class="col-xs-12 markdown" ui:field="cdrDescription"/>
            </g:HTMLPanel>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>