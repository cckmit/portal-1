<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel footer-fixable-bottom">
        <div class="body">
            <g:HTMLPanel styleName="preview grid">
                <g:HTMLPanel ui:field="rootWrapper">
                    <div class="col-xs-12">
                        <g:Anchor ui:field="fullScreen" styleName="fa fa-lg fa-external-link pull-right" href="#"/>
                    </div>
                    <g:HTMLPanel ui:field="nameBlock" tag="fieldset" styleName="header" visible="false">
                        <legend>
                            <g:Label ui:field="typeLabel"/>
                        </legend>
                        <div class="col-xs-12">
                            <label class="col-xs-5"><ui:text from="{lang.name}"/></label>
                            <span class="col-xs-7" ui:field="name"></span>
                        </div>
                        <div class="col-xs-12">
                            <label class="col-xs-5"><ui:text from="{lang.productWikiLink}"/></label>
                            <span class="col-xs-7" ui:field="wikiLink"/>
                        </div>
                    </g:HTMLPanel>
                    <g:HTMLPanel tag="fieldset" styleName="header">
                        <legend>
                            <ui:text from="{lang.description}"/>
                        </legend>
                        <span ui:field="info" class="pre-formatted-info"></span>
                    </g:HTMLPanel>

                    <g:HTMLPanel tag="fieldset" styleName="header">
                        <legend><ui:text from="{lang.productConfiguration}"/></legend>
                        <div class="col-xs-12 markdown" ui:field="configuration"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel tag="fieldset" styleName="header">
                        <legend><ui:text from="{lang.productHistoryVersion}"/></legend>
                        <div class="col-xs-12 markdown" ui:field="historyVersion"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel tag="fieldset" styleName="header">
                        <legend><ui:text from="{lang.productCDRDescription}"/></legend>
                        <div class="col-xs-12 markdown" ui:field="cdrDescription"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </div>
        <g:HTMLPanel ui:field="backButtonPanel" styleName="footer">
            <g:Button ui:field="backButton" styleName="btn btn-success" text="{lang.goToProducts}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>