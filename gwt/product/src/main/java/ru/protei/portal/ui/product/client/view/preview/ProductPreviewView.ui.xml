<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:tab="urn:import:ru.protei.portal.ui.common.client.widget.tab">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="rootWrapper" styleName="card-fixed preview-card">
        <div class="preview card-body no-padding">
            <div class="card no-border">
                <div class="card-body">
                    <h4 class="m-r-50">
                        <g:Anchor ui:field="productName" href="#"/>
                    </h4>

                    <img ui:field="typeImage" src="" class="preview-title-image-right"/>
                    <div class="small hint-text no-margin">
                        <a ui:field="wikiLink" href="#" target="_blank"/>
                    </div>

                    <g:Label styleName="small hint-text pre-formatted-info" ui:field="info"/>

                    <tab:TabWidget styleName="" ui:field="tabWidget">
                        <tab:pane.TabWidgetPane tabName="{lang.productHistoryVersion}">
                            <g:HTMLPanel styleName="markdown" ui:field="historyVersion"/>
                        </tab:pane.TabWidgetPane>

                        <tab:pane.TabWidgetPane tabName="{lang.productConfiguration}">
                            <g:HTMLPanel styleName="markdown" ui:field="configuration"/>
                        </tab:pane.TabWidgetPane>

                        <tab:pane.TabWidgetPane tabName="{lang.productCDRDescription}">
                            <g:HTMLPanel styleName="markdown" ui:field="cdrDescription"/>
                        </tab:pane.TabWidgetPane>
                    </tab:TabWidget>
                </div>
            </div>
        </div>
        <g:HTMLPanel ui:field="backButtonPanel" styleName="card-footer">
            <div class="card card-transparent no-margin">
                <div class="text-right">
                    <g:Button ui:field="backButton" styleName="btn btn-success" text="{lang.goToProducts}"/>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>