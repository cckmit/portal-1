<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="rootWrapper" styleName="card card-default">
        <div class="card-block">
            <h4 class="col-md-12 no-margin no-padding" ui:field="productName"/>
            <img ui:field="typeImage" src="" class="preview-title-image_right"/>
            <div class="small hint-text no-margin">
                <a ui:field="wikiLink" href="#" target="_blank"/>
            </div>

            <g:Label styleName="small hint-text pre-formatted-info" ui:field="info"/>

            <h5><ui:text from="{lang.productConfiguration}"/></h5>
            <div class="markdown" ui:field="configuration"/>

            <h5><ui:text from="{lang.productHistoryVersion}"/></h5>
            <div class="markdown" ui:field="historyVersion"/>

            <h5><ui:text from="{lang.productCDRDescription}"/></h5>
            <div class="markdown" ui:field="cdrDescription"/>

        </div>

    </g:HTMLPanel>
</ui:UiBinder>