<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortField='urn:import:ru.protei.portal.ui.product.client.widgets.sortfieldselector'
             xmlns:platelist="urn:import:ru.protei.portal.ui.common.client.widget.platelist">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="productListsBlock reportBlock">
        <div class="controlButtons">
            <div class="buttons_group">
                <div class="regulator">
                    <sortField:SortFieldSelector ui:field="sortFields" header="{lang.sortBy}"/>

                    <div class="button empty whiteC switcher">
                        <g:ToggleButton ui:field="sortDir" styleName="sorting_button" />
                    </div>

                </div>
                <div class="regulator">
                    <g:CheckBox ui:field="showDeprecated" styleName="checkbox" text="{lang.showDeprecated}"/>
                </div>
            </div>
            <div class="rightSide local-search">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
        </div>

        <div class="block low">
            <platelist:PlateList ui:field="productContainer"
                                 styleName="productList list-group grid"
                                 createButtonCaption="{lang.buttonCreate}"
                                 createButtonStyleName="list-group-item list-group-create col-md-6 col-lg-3"
            />
        </div>

    </g:HTMLPanel>
</ui:UiBinder>