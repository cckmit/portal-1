<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortfield='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:platelist="urn:import:ru.protei.portal.ui.common.client.widget.platelist">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="filter grid">
            <div class="col-xs-12 col-md-5">
                <g:CheckBox ui:field="showDeprecated" styleName="checkbox" text="{lang.productShowDeprecated}"/>
            </div>
            <div class="col-xs-12 col-md-5">
                <ui:text from="{lang.sortBy}"/>
                <div class="control-group">
                    <sortfield:SortFieldSelector ui:field="sortField" type="PRODUCT"/>
                    <g:ToggleButton ui:field="sortDir" styleName="button empty whiteC sorting_button"/>
                </div>
            </div>
            <div class="rightSide pull-right local-search col-xs-12 col-md-2">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
        </div>

        <div class="block low">
            <platelist:PlateList ui:field="childContainer"
                                 styleName="plate-list"
                                 createButtonCaption="{lang.buttonCreate}"
                                 createButtonStyleName="plate-list-create"
            />
        </div>

    </g:HTMLPanel>
</ui:UiBinder>