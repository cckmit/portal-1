<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
            <div class="controlButtons">
                <div class="buttons_group">
                    <div class="regulator"><ui:text from="{lang.sortBy}"/>
                        <div class="button_wrap">
                            <div id="sorting_but" class="button selected whiteC"><ui:text from="{lang.name}"/></div>
                        </div>
                        <div id="sortingDirection_but" class="button empty switcher whiteC">
                            <span class="icon-down"></span>
                        </div>
                    </div>
                    <div class="regulator">
                        <div class="checkbox active"></div>Показывать deprecated
                    </div>
                </div>
            </div>

        <div class="productListsBlock reportBlock">
            <div class="block low">
                <g:HTMLPanel ui:field="productContainer" styleName="productList" />
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>