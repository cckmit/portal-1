<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortField='urn:import:ru.protei.portal.ui.product.client.widgets.sortfieldselector'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="OrganizationList">
            <div class="controlButtons">
                <div class="buttons_group">
                    <div class="regulator"><ui:text from="{lang.sortBy}"/>
                        <!--div class="button_wrap"-->
                            <sortField:SortFieldSelector ui:field="sortFields" />
                        <!--/div-->
                        <g:ToggleButton ui:field="sortDir" styleName="button empty active switcher icon-down">
                            <!--span class="icon-down"></span-->
                        </g:ToggleButton>
                    </div>
                   <div class="regulator">
                        <g:CheckBox ui:field="showDepricated"/><ui:text from="{lang.showDepricated}"/>
                    </div>
                </div>
                <div class="rightSide">
                    <g:TextBox ui:field="search" styleName="inputField"/>
                    <!--g:Button ui:field="searchButton" styleName="button empty sticky blueC"><span class="icon-search"></span></g:Button-->
                </div>
            </div>

        <div class="productListsBlock reportBlock">
            <div class="block low">
                <g:HTMLPanel ui:field="productContainer" styleName="productList" />
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>