<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:rolelist='urn:import:ru.protei.portal.ui.account.client.widget.role'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:option='urn:import:ru.protei.portal.ui.common.client.widget.optionlist.item'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <div class="grid grid-indent">
                <div class="form-group col-xs-6">
                    <div class="form-group col-xs-12">
                        <label class="">
                            <ui:text from="{lang.accountCompany}"/>
                        </label>
                        <company:CompanySelector ui:field="company" validation="true" defaultValue="{lang.selectAccountCompany}"/>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="">
                            <ui:text from="{lang.accountPerson}"/>
                        </label>
                        <person:PersonButtonSelector ui:field="person" validation="true" defaultValue="{lang.selectAccountPerson}"/>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="">
                            <ui:text from="{lang.accountLogin}"/>
                        </label>
                        <div class="panelField verifiable">
                            <i ui:field="verifiableIcon"/>
                            <validablefield:ValidableTextBox ui:field="login" styleName="input-field" notNull="true"/>
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="">
                            <ui:text from="{lang.accountPassword}"/>
                        </label>
                        <g:PasswordTextBox ui:field="password" styleName="input-field"/>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="">
                            <ui:text from="{lang.accountConfirmPassword}"/>
                        </label>
                        <g:PasswordTextBox ui:field="confirmPassword" styleName="input-field"/>
                    </div>
                    <g:HTMLPanel ui:field="infoPanel" styleName="col-xs-12">
                        <ui:text from="{lang.accountLoginInfo}"/>
                    </g:HTMLPanel>
                </div>
                <div class="form-group col-xs-6">
                    <label class="">
                        <ui:text from="{lang.accountRoles}"/>
                    </label>
                    <rolelist:RoleOptionList ui:field="roles"/>
                </div>
            </div>
        </div>
        <div class="footer">
            <option:OptionItem ui:field="sendWelcomeEmail" styleName="checkbox single" name="{lang.sendEmail}"/>
            <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>