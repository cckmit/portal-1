<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="card card-default no-border card-fixed">
            <div class="card-body">
                <h4 class="m-r-50">
                    <ui:text from="{lang.accountFor}"/>
                    <b ui:field="personInfo"/>
                </h4>
                <img ui:field="typeImage" src="" class="preview-title-image_right"/>
                <div class="clearfix"/>
                <label class="control-label inline bold"><ui:text from="{lang.accountLogin}: "/></label>
                <span ui:field="login"/>
                <div class="clearfix"/>
                <label class="control-label inline bold"><ui:text from="{lang.accountRoles}: "/></label>
                <span ui:field="roles"/>
            </div>

        </div>
    </g:HTMLPanel>
</ui:UiBinder>