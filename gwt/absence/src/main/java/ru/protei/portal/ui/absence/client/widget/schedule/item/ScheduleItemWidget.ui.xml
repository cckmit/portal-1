<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="absence-schedule-item m-b-10">
        <div class="row">
            <g:Label ui:field="days" styleName="col-4"/>
            <g:Label ui:field="times" styleName="col-7"/>
            <g:Anchor href="javascript:void(0)" styleName="col-1" ui:field="remove">
                <i class="far fa-trash"/>
            </g:Anchor>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>