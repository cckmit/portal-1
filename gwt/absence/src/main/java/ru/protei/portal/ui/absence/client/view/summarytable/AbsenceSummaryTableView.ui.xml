<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client"
             xmlns:widget="urn:import:ru.protei.portal.ui.absence.client.widget"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="row">
            <g:HTMLPanel ui:field="tableContainer" styleName="col-md-9">
                <div class="card card-default no-border">
                    <div class="card-body no-padding">
                        <table:InfiniteTableWidget ui:field="table" styleName="table table-hover"/>
                        <g:HTMLPanel ui:field="pagerContainer" styleName="pager-container"/>
                    </div>
                </div>
            </g:HTMLPanel>
            <div class="form-group col-md-3">
                <widget:AbsenceFilterWidget ui:field="filterWidget"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>