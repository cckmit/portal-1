<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:states="urn:import:ru.protei.portal.ui.common.client.widget.issuestate.optionlist"
             xmlns:sortfield="urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield"
             xmlns:range='urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.range'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <cleanablesearchbox:CleanableSearchBox ui:field="name" placeholder="{lang.questionnaireSearchFullNameOrPost}" styleName="form-group col-xs-12"/>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfield:SortFieldSelector ui:field="sortField" type="QUESTIONNAIRE" hasNullValue="false"/>
                    <g:ToggleButton ui:field="sortDir" styleName="btn btn-white sorting_button"/>
                </div>
            </div>

            <div class="col-xs-12">
                <label class="bold"><ui:text from="{lang.questionnaireEmploymentDate}"/></label>
                <range:RangePicker ui:field="dateRange" type="DATE" formatValue="dd.MM.yyyy"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.questionnaireState}"/></label>
                <states:IssueStatesOptionList ui:field="states"/>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="resetBtn" styleName="btn btn-white" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>