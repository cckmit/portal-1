<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:contractor="urn:import:ru.protei.portal.ui.common.client.widget.selector.contractor"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-transparent no-margin">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.contractContractorOrganization}"/>
                    </label>
                    <contractor:organizationselector.OrganizationSelector ui:field="organization"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label>
                        <ui:text from="{lang.contractContractorINN}"/>
                    </label>
                    <validablefield:ValidableTextBox ui:field="contractorINN" styleName="form-control"/>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        <ui:text from="{lang.contractContractorKPP}"/>
                    </label>
                    <validablefield:ValidableTextBox ui:field="contractorKPP" styleName="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <g:Button ui:field="search" styleName="btn btn-complete pull-right" text="{lang.buttonSearch}"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.contractContractor}"/>
                    </label>
                    <contractor:contractor.ContractorSelector ui:field="contractor"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <g:Button ui:field="create" styleName="btn btn-complete pull-right" text="{lang.buttonCreate}"/>
                </div>
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
