<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="card card-default card-fixed no-border">
            <div class="card-body">
                <h4 ui:field="header" class="m-r-50"/>

                <img ui:field="state" src="" class="preview-title-image_right"/>

                <small ui:field="type"/>

                <div class="small hint-text pre-formatted-info">
                    <g:InlineLabel ui:field="description" styleName="m-l--3"/>
                </div>

                <h5><ui:text from="{lang.contractCommonHeader}"/></h5>

                <div class="small">
                    <b><ui:text from="{lang.contractDateSigning}: "/></b>
                    <span ui:field="dateSigning"/>
                </div>
                <div class="small">
                    <b><ui:text from="{lang.contractDateValid}: "/></b>
                    <span ui:field="dateValid"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractDirection}: "/></b>
                    <span ui:field="direction"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractParent}: "/></b>
                    <span ui:field="contractParent"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractChild}: "/></b>
                    <span ui:field="contractChild"/>
                </div>

                <h5><ui:text from="{lang.contractWorkGroup}"/></h5>

                <div class="small">
                    <b><ui:text from="{lang.contractOrganization}: "/></b>
                    <span ui:field="organization"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractManager}: "/></b>
                    <span ui:field="manager"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractCurator}: "/></b>
                    <span ui:field="curator"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractContragent}: "/></b>
                    <span ui:field="contragent"/>
                </div>

                <div class="small">
                    <b><ui:text from="{lang.contractProject}: "/></b>
                    <g:Anchor styleName="m-r-5" ui:field="toProjectLink" href="">
                        <i class="fa fa-external-link"/>
                    </g:Anchor>
                    <span ui:field="project"/>
                </div>

                <h5><ui:text from="{lang.contractDeliveryAndPaymentsPeriodHeader}"/></h5>

                <label ui:field="dates"/>

                <h5><ui:text from="{lang.comments}"/></h5>

                <g:HTMLPanel ui:field="commentContainer"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>