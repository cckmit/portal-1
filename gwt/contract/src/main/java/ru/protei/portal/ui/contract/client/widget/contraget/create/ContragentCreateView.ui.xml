<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:switcher="urn:import:ru.protei.portal.ui.common.client.widget.switcher"
             xmlns:country="urn:import:ru.protei.portal.ui.common.client.widget.selector.contractor.country"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-transparent no-margin">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <label>
                        <ui:text from="{lang.contractContragentINN}"/>
                    </label>
                    <validablefield:ValidableTextBox ui:field="contragentINN" styleName="form-control"/>
                </div>
                <div class="form-group col-md-6">
                    <label>
                        <ui:text from="{lang.contractContragentKPP}"/>
                    </label>
                    <validablefield:ValidableTextBox ui:field="contragentKPP" styleName="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.contractContragentName}"/>
                    </label>
                    <validablefield:ValidableTextBox ui:field="contragentName" styleName="form-control"/>
                </div>
                <div class="row">
                </div>
                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.contractContragentFullname}"/>
                    </label>
                    <validablefield:ValidableTextBox ui:field="contragentFullname" styleName="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label>
                        <ui:text from="{lang.contractContragentCountry}"/>
                    </label>
                    <country:ContractorCountrySelector ui:field="contragentCountry"
                                    defaultValue="{lang.contractContragentCountryPlaceholder}" validation="true"/>
                </div>
                <div class="form-group col-md-6">
                    <div>
                        <label><ui:text from="{lang.contractContragentResident}"/></label>
                    </div>
                    <switcher:Switcher ui:field="contragentResident"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
