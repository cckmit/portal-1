<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:textarea="urn:import:ru.protei.portal.ui.common.client.widget.autoresizetextarea"
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:company="urn:import:ru.protei.portal.ui.common.client.widget.selector.company"
             xmlns:single="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
             xmlns:selector="urn:import:ru.protei.portal.ui.contract.client.widget.selector"
             xmlns:contractwidgets="urn:import:ru.protei.portal.ui.contract.client.widget"
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:money="urn:import:ru.protei.portal.ui.common.client.widget.money"
             xmlns:homecompany="urn:import:ru.protei.portal.ui.common.client.widget.homecompany"
             xmlns:contract="urn:import:ru.protei.portal.ui.common.client.widget.selector.contract"
             xmlns:project="urn:import:ru.protei.portal.ui.common.client.widget.selector.project"
             xmlns:tab="urn:import:ru.protei.portal.ui.common.client.widget.tab"
             xmlns:box="urn:import:ru.protei.portal.ui.contract.client.widget.contraget.box">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="card card-transparent no-margin card-with-fixable-footer">
        <div class="card-body no-padding">
            <div class="container-fluid padding-15">
                <div class="card card-transparent no-margin">
                    <div class="card-header">
                        <div ui:field="commonHeader" class="card-title">
                            <ui:text from="{lang.contractCommonHeader}"/>
                        </div>
                        <p class="small hint-text">
                            <ui:text from="{lang.contractProjectHint}"/>
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label ui:field="numberLabel"><ui:text from="{lang.contractNumber}"/></label>
                                <validatefield:ValidableTextBox ui:field="number" styleName="form-control" notNull="true"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="typeLabel"><ui:text from="{lang.contractType}"/></label>
                                <selector:ContractTypeSelector ui:field="type" searchEnabled="true" defaultValue="{lang.contractSelectType}" validation="true" hideNullValue="true"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="stateLabel"><ui:text from="{lang.contractState}"/></label>
                                <selector:ContractStateSelector ui:field="state" validation="true" hasNullValue="false"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="contractParentLabel"><ui:text from="{lang.contractParent}"/></label>
                                <contract:ContractButtonSelector ui:field="contractParent" searchEnabled="true" defaultValue="{lang.contractParentWithout}"/>
                            </div>

                            <div class="form-group col-md-12">
                                <label ui:field="descriptionLabel"><ui:text from="{lang.contractDescription}"/></label>
                                <textarea:AutoResizeTextArea ui:field="description" minRows="1" styleName="form-control"/>
                            </div>

                            <div class="form-group col-md-4">
                                <label ui:field="dateSigningLabel"><ui:text from="{lang.contractDateSigning}"/></label>
                                <single:SinglePicker ui:field="dateSigning" type="DATE" formatValue="dd.MM.yyyy" />
                            </div>

                            <div class="form-group col-md-4">
                                <label ui:field="dateValidLabel"><ui:text from="{lang.contractDateValid}"/></label>
                                <single:SinglePicker ui:field="dateValid" type="DATE" formatValue="dd.MM.yyyy" />
                            </div>

                            <div class="form-group col-md-4">
                                <label ui:field="costWithCurrencyLabel"><ui:text from="{lang.contractCost}"/></label>
                                <money:CostWithCurrencyView ui:field="costWithCurrency" defaultCurrency="RUB"/>
                            </div>

                            <div class="form-group col-md-6">
                                <label ui:field="projectLabel"><ui:text from="{lang.contractProject}"/></label>
                                <project:ProjectButtonSelector ui:field="project" hasNullValue="true" defaultValue="{lang.contractProjectNotDefined}"/>
                            </div>

                            <div class="form-group col-md-6">
                                <label ui:field="directionLabel"><ui:text from="{lang.contractDirection}"/></label>
                                <productdirection:ProductDirectionButtonSelector ui:field="direction" validation="true" hideNullValue="true" enabled="false" defaultValue="{lang.contractSelectDirection}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="container-fluid padding-15 bg-white">
                <div class="card card-transparent no-margin">
                    <div class="card-header">
                        <div ui:field="workGroupHeader" class="card-title">
                            <ui:text from="{lang.contractWorkGroup}"/>
                        </div>
                        <div><ui:text from="{lang.contractWorkGroupInfo}"/></div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label ui:field="organizationLabel"><ui:text from="{lang.contractOrganization}"/></label>
                                <homecompany:HomeCompanyButtonSelector hasNullValue="false" ui:field="organization" reverseOrder="true"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label ui:field="contragentLabel"><ui:text from="{lang.contractContragent}"/></label>
                                <box:ContragentBox ui:field="contragentBox" placeHolder="{lang.selectContractContragent}"/>
                                <company:CompanySelector ui:field="contragent" enabled="false" defaultValue="{lang.selectAccountCompany}"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label ui:field="curatorLabel"><ui:text from="{lang.contractCurator}"/></label>
                                <person:EmployeeButtonSelector hasNullValue="false" ui:field="curator" defaultValue="{lang.selectAccountPerson}"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label ui:field="managerLabel"><ui:text from="{lang.contractManager}"/></label>
                                <person:EmployeeButtonSelector ui:field="manager" enabled="false" defaultValue="{lang.selectAccountPerson}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <g:HTMLPanel  styleName="container-fluid padding-15 bg-white">
                <tab:TabWidget styleName="">
                    <tab:pane.TabWidgetPane tabName="{lang.contractDeliveryAndPaymentsPeriodHeader}">
                        <g:HTMLPanel>
                            <div class="card-body">
                                <contractwidgets:contractdates.list.ContractDatesList
                                        ui:field="dateList" addStyleNames="row"/>
                            </div>
                        </g:HTMLPanel>
                    </tab:pane.TabWidgetPane>

                    <tab:pane.TabWidgetPane tabName="{lang.contractSpecificationHeader}">
                        <g:HTMLPanel>
                            <div class="card-body">
                                <contractwidgets:contractspecification.list.ContractSpecificationList
                                        ui:field="specificationList" addStyleNames="row"/>
                            </div>
                        </g:HTMLPanel>
                    </tab:pane.TabWidgetPane>
                </tab:TabWidget>
            </g:HTMLPanel>

        </div>
        <div class="card-footer">
            <div class="card card-transparent no-margin">
                <div class="text-right">
                    <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
                    <g:Button ui:field="cancelButton" styleName="btn btn-default close_btn" text="{lang.buttonCancel}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
