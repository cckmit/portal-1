<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:textarea="urn:import:ru.protei.portal.ui.common.client.widget.autoresizetextarea"
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:single="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
             xmlns:selector="urn:import:ru.protei.portal.ui.contract.client.widget.selector"
             xmlns:contractwidgets="urn:import:ru.protei.portal.ui.contract.client.widget"
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:money="urn:import:ru.protei.portal.ui.common.client.widget.money"
             xmlns:homecompany="urn:import:ru.protei.portal.ui.common.client.widget.homecompany"
             xmlns:contract="urn:import:ru.protei.portal.ui.common.client.widget.selector.contract"
             xmlns:project="urn:import:ru.protei.portal.ui.common.client.widget.project"
             xmlns:tab="urn:import:ru.protei.portal.ui.common.client.widget.tab"
             xmlns:contractor="urn:import:ru.protei.portal.ui.contract.client.widget.contractor">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="card card-transparent no-margin card-with-fixable-footer">
        <div class="card-body no-padding">
            <div class="container-fluid padding-15">
                <div class="card card-transparent no-margin">
                    <div class="card-header">
                        <div ui:field="commonHeader" class="card-title">
                            <ui:text from="{lang.contractCommonHeader}"/>
                        </div>
                        <p class="small hint-text">
                            <ui:text from="{lang.contractProjectHint}"/>
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label ui:field="numberLabel"><ui:text from="{lang.contractNumber}"/></label>
                                <validatefield:ValidableTextBox ui:field="number" styleName="form-control" notNull="true"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="kindLabel"><ui:text from="{lang.contractKind}"/></label>
                                <g:TextBox ui:field="kind" styleName="form-control" enabled="false"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label ui:field="organizationLabel"><ui:text from="{lang.contractOrganization}"/></label>
                                <homecompany:HomeCompanyButtonSelector hasNullValue="false" ui:field="organization"
                                                                       reverseOrder="true" synchronizeWith1C="true"/>
                            </div>
                            <div class="form-group col-md-9">
                                <label ui:field="contractorLabel"><ui:text from="{lang.contractContractor}"/></label>
                                <contractor:ContractorWidget ui:field="contractorWidget"/>
                            </div>
                        </div>
                        <g:HTMLPanel styleName="row" ui:field="secondContract" visible="false">
                            <div class="card m-t-10">
                                <div class="card-header">
                                    <div class="card-title"><ui:text from="{lang.contractSecondExpenditureHeader}"/></div>
                                    <div class="small hint-text"><ui:text from="{lang.contractSecondExpenditureHint}"/></div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            <label><ui:text from="{lang.contractNumber}"/></label>
                                            <validatefield:ValidableTextBox ui:field="secondContractNumber" styleName="form-control" notNull="true"/>
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label><ui:text from="{lang.contractKind}"/></label>
                                            <g:TextBox styleName="form-control" enabled="false" value="{lang.contractKindExpenditure}"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-md-3">
                                            <label><ui:text from="{lang.contractOrganization}"/></label>
                                            <homecompany:HomeCompanyButtonSelector hasNullValue="false" ui:field="secondContractOrganization"
                                                                                   reverseOrder="true" synchronizeWith1C="true"
                                                                                   validation="true"/>
                                        </div>
                                        <div class="form-group col-md-9">
                                            <label><ui:text from="{lang.contractContractor}"/></label>
                                            <contractor:ContractorWidget ui:field="secondContractContractor"
                                                                         validation="true"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </g:HTMLPanel>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label ui:field="typeLabel"><ui:text from="{lang.contractType}"/></label>
                                <selector:multi.ContractTypeMultiSelector ui:field="types" searchEnabled="true" validation="true"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="stateLabel"><ui:text from="{lang.contractState}"/></label>
                                <selector:button.ContractStateSelector ui:field="state" validation="true" hasNullValue="false"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="contractParentLabel"><ui:text from="{lang.contractParent}"/></label>
                                <contract:ContractButtonSelector ui:field="contractParent" searchEnabled="true" defaultValue="{lang.contractParentWithout}"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label ui:field="descriptionLabel"><ui:text from="{lang.contractDescription}"/></label>
                                <textarea:ValiableAutoResizeTextArea ui:field="description" minRows="1" styleName="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label ui:field="dateSigningLabel"><ui:text from="{lang.contractDateSigning}"/></label>
                                <single:SinglePicker ui:field="dateSigning" type="DATE" formatValue="dd.MM.yyyy" />
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="dateValidLabel"><ui:text from="{lang.contractDateValid}"/></label>
                                <g:HTMLPanel styleName="input-group input-group-day-date" ui:field="dateValid">
                                    <validatefield:ValidableLongBox ui:field="dateValidDays" styleName="form-control input-group-element-day"/>
                                    <div class="input-group-prepend input-group-append"><span class="input-group-text">â€“</span></div>
                                    <single:SinglePicker ui:field="dateValidDate" type="DATE" formatValue="dd.MM.yyyy" mandatory="false"
                                                         styleName="form-control p-0 no-border input-group-element-date"/>
                                </g:HTMLPanel>
                            </div>
                            <div class="form-group col-md-6">
                                <label ui:field="costWithCurrencyLabel"><ui:text from="{lang.contractCost}"/></label>
                                <money:MoneyCurrencyVatWidget ui:field="costWithCurrency" defaultCurrency="RUB"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-8">
                                <label ui:field="projectLabel"><ui:text from="{lang.contractProject}"/></label>
                                <project:ProjectWidget ui:field="projectWidget" validation="true"/>
                            </div>
                            <div class="form-group col-md-4">
                                <label ui:field="directionLabel"><ui:text from="{lang.contractDirection}"/></label>
                                <productdirection:ProductDirectionButtonSelector ui:field="direction" hideNullValue="true" enabled="false" defaultValue="{lang.contractSelectDirection}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid padding-15 bg-white">
                <div class="card card-transparent no-margin">
                    <div class="card-header">
                        <div ui:field="workGroupHeader" class="card-title">
                            <ui:text from="{lang.contractWorkGroup}"/>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label ui:field="curatorLabel"><ui:text from="{lang.contractCurator}"/></label>
                                <person:EmployeeCustomButtonSelector hasNullValue="false" ui:field="curator" defaultValue="{lang.selectAccountPerson}"/>
                            </div>
                            <div class="form-group col-md-3">
                                <label ui:field="managerLabel"><ui:text from="{lang.contractManager}"/></label>
                                <person:EmployeeButtonSelector ui:field="manager" enabled="false" defaultValue="{lang.selectAccountPerson}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <g:HTMLPanel  styleName="container-fluid padding-15">
                <tab:TabWidget styleName="" ui:field="tabs">
                    <tab:pane.TabWidgetPane tabName="{lang.contractDeliveryAndPaymentsPeriodHeader}">
                        <g:HTMLPanel>
                            <div class="card-body">
                                <contractwidgets:contractdates.list.ContractDatesList
                                        ui:field="dateList" addStyleNames="row"/>
                            </div>
                        </g:HTMLPanel>
                    </tab:pane.TabWidgetPane>

                    <tab:pane.TabWidgetPane tabName="{lang.contractSpecificationHeader}">
                        <g:HTMLPanel>
                            <div class="card-body">
                                <contractwidgets:contractspecification.list.ContractSpecificationList
                                        ui:field="specificationList" addStyleNames="row"/>
                            </div>
                        </g:HTMLPanel>
                    </tab:pane.TabWidgetPane>

                    <tab:pane.TabWidgetPane tabName="{lang.contractListOfExpenditureHeader}">
                        <g:HTMLPanel ui:field="expenditureContractsContainer"/>
                    </tab:pane.TabWidgetPane>
                </tab:TabWidget>
            </g:HTMLPanel>
        </div>
        <div class="card-footer">
            <div class="card card-transparent no-margin">
                <div class="text-right">
                    <g:CheckBox ui:field="secondContractCheckbox" styleName="checkbox check-complete text-left m-r-15" text="{lang.contractSecondExpenditureToggle}"/>
                    <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
                    <g:Button ui:field="cancelButton" styleName="btn btn-default close_btn" text="{lang.buttonCancel}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
