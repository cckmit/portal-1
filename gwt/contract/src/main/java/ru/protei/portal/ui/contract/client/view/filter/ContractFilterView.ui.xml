<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortfield="urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield"
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:company="urn:import:ru.protei.portal.ui.common.client.widget.selector.company"
             xmlns:selector="urn:import:ru.protei.portal.ui.contract.client.widget.selector"
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <cleanablesearchbox:CleanableSearchBox ui:field="name" placeholder="{lang.contractSearchPlaceholder}" styleName="form-group col-xs-12"/>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfield:SortFieldSelector ui:field="sortField" type="CONTRACT" hasNullValue="false"/>
                    <g:ToggleButton ui:field="sortDir" styleName="btn btn-white sorting_button"/>
                </div>
            </div>

            <selector:ContractTypeSelector ui:field="type"
                                           header="{lang.contractType}" addStyleNames="form-group col-xs-12"
                                           hasNullValue="true" defaultValue="{lang.selectorAny}"/>

            <selector:ContractStateSelector ui:field="state"
                                           header="{lang.contractState}" addStyleNames="form-group col-xs-12"
                                           hasNullValue="true" defaultValue="{lang.selectorAny}"/>

            <productdirection:ProductDirectionButtonSelector ui:field="direction"
                                                             header="{lang.productDirection}"
                                                             hasNullValue="true" defaultValue="{lang.selectorAny}"
                                                             addStyleNames="form-group col-xs-12"/>

            <person:EmployeeMultiSelector ui:field="managers"
                                          header="{lang.contractManager}"
                                          addStyleNames="form-group col-xs-12"/>

            <company:CompanyMultiSelector ui:field="contragents"
                                          header="{lang.contractContragent}"
                                          addStyleNames="form-group col-xs-12"/>
        </div>
        <div class="footer">
            <g:Button ui:field="resetBtn" styleName="btn btn-white" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>