<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:selector="urn:import:ru.protei.portal.ui.contract.client.widget.selector"
             xmlns:single="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
             xmlns:switcher="urn:import:ru.protei.portal.ui.common.client.widget.switcher">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="form-group grid grid-indent">

        <selector:ContractDatesTypeSelector ui:field="type" addStyleNames="col-xs-2"/>

        <single:SinglePicker ui:field="date" styleName="col-xs-2"/>

        <div class="col-xs-5">
            <g:TextBox ui:field="comment" styleName="form-control"/>
        </div>

        <div class="col-xs-2">
            <label class="m-r-5"><ui:text from="{lang.contractDatesNotify}"/></label>
            <switcher:Switcher ui:field="notify"/>
        </div>

        <div class="col-xs-1">
            <g:Button ui:field="remove" styleName="btn btn-danger">
                <i class="fa fa-trash"/>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>