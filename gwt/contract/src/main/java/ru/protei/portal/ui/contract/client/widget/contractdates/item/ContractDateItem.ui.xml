<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:selector="urn:import:ru.protei.portal.ui.contract.client.widget.selector"
             xmlns:single="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="form-group grid grid-indent">
        <selector:ContractDatesTypeSelector ui:field="type" addStyleNames="col-xs-3"/>

        <single:SinglePicker ui:field="date" styleName="col-xs-3"/>

        <div class="col-xs-5">
            <g:TextBox ui:field="comment" styleName="input-field"/>
        </div>

        <div class="col-xs-1">
            <g:Button ui:field="remove" styleName="btn btn-danger">
                <i class="fa fa-trash"/>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>