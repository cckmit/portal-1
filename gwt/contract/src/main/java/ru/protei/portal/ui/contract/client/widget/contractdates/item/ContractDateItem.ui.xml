<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:selector="urn:import:ru.protei.portal.ui.contract.client.widget.selector"
             xmlns:single="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:money="urn:import:ru.protei.portal.ui.common.client.widget.money">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="form-group row">
        <selector:ContractDatesTypeSelector ui:field="type" addStyleNames="col-md-2"/>
        <div class="col-md-2">
            <single:SinglePicker ui:field="date" type="DATE" formatValue="dd.MM.yyyy" mandatory="false" styleName="form-group m-b-0"/>
            <g:CheckBox ui:field="notify" styleName="checkbox m-t-5" text="{lang.contractDatesNotify}"/>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <validatefield:ValidableDoubleBox ui:field="moneyPercent" styleName="form-control" placeholder="{lang.percent}"/>
                <div class="input-group-prepend input-group-append">
                    <span class="input-group-text"/>
                </div>
                <div class="form-control p-0 no-border">
                    <money:MoneyCurrencyWidget ui:field="moneyWithCurrency" defaultCurrency="RUB"/>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <g:TextBox ui:field="comment" styleName="form-control"/>
        </div>
        <div class="col-md-1">
            <g:Button ui:field="remove" styleName="btn btn-danger pull-right">
                <i class="fa fa-trash"/>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
