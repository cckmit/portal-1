<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'
             xmlns:timeElapsed='urn:import:ru.protei.portal.ui.common.client.view.selector'
             xmlns:timefield='urn:import:ru.protei.portal.ui.common.client.widget.timefield'
             xmlns:devunit="urn:import:ru.protei.portal.ui.common.client.widget.selector.product.devunit"
             xmlns:casemeta="urn:import:ru.protei.portal.ui.common.client.widget.casemeta"
             xmlns:issuestate="urn:import:ru.protei.portal.ui.common.client.widget.issuestate"
             xmlns:makdown="urn:import:ru.protei.portal.ui.common.client.widget.makdown"
             xmlns:selector="urn:import:ru.protei.portal.ui.sitefolder.client.view.platform.widget.selector"
             xmlns:jirasla="urn:import:ru.protei.portal.ui.common.client.widget.jirasla"
             xmlns:issueimportance="urn:import:ru.protei.portal.ui.common.client.widget.issueimportance">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-transparent no-margin card-with-fixable-footer">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8 order-last order-lg-first">
                    <g:HTMLPanel ui:field="nameContainer" styleName="form-group form-group-default input-group required">
                        <g:ToggleButton ui:field="privacyButton" styleName="input-group-addon btn-danger private-btn no-shadow no-outline"/>

                        <div class="form-input-group">
                            <label ui:field="nameLabel" class="fade">
                                <ui:text from="{lang.issueName}"/>
                            </label>
                            <g:TextBox ui:field="name" styleName="form-control"/>
                        </div>
                    </g:HTMLPanel>

                    <g:HTMLPanel ui:field="descriptionContainer" styleName="row form-group">
                        <div class="col-md-12">
                            <div class="form-group-default">
                                <label class="fade" ui:field="descriptionLabel">
                                    <ui:text from="{lang.description}"/>
                                </label>
                                <makdown:MarkdownAreaWithPreview ui:field="description" minRows="5" maxRows="10"/>
                            </div>
                        </div>
                    </g:HTMLPanel>

                    <div class="row form-group">
                        <casemeta:CaseMetaView ui:field="caseMetaView" styleName="col-md-12 m-b-0"
                                               tagCaseType="CRM_SUPPORT"/>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label ui:field="attachmentsLabel">
                                <ui:text from="{lang.issueAttachments}"/>
                            </label>

                            <div>
                                <div class="attach attach-add">
                                    <fileuploader:AttachmentUploader ui:field="fileUploader">
                                        <div class="attach-add-circle">
                                            <i class="fas fa-plus ion-plus"/>
                                            <i class="fas fa-circle-notch fa-spin icon-verifiable"/>
                                        </div>
                                    </fileuploader:AttachmentUploader>
                                </div>
                                <attachment:AttachmentList ui:field="attachmentContainer"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 order-first order-lg-last">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group-attached">
                                <div class="row">
                                    <div class="col-md-6">
                                        <issuestate:IssueStateFormSelector ui:field="state"
                                                                           validation="true"
                                                                           header="{lang.issueState}"
                                                                           mandatory="true"/>
                                    </div>

                                    <div class="col-md-6">
                                        <issueimportance:ImportanceFormSelector ui:field="importance"
                                                                                validation="true"
                                                                                header="{lang.issueImportance}"
                                                                                mandatory="true"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <devunit:DevUnitFormSelector ui:field="product"
                                                                     validation="false"
                                                                     header="{lang.issueProduct}"
                                                                     mandatory="false"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <person:EmployeeFormSelector ui:field="manager"
                                                                     validation="false"
                                                                     header="{lang.issueManager}"
                                                                     mandatory="false"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group m-t-10 m-b-0">
                                <label><ui:text from="{lang.issueInitiatorInfo}"/></label>
                            </div>
                            <div class="form-group-attached form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <company:CompanyFormSelector ui:field="company"
                                                                     validation="false"
                                                                     header="{lang.issueCompany}"
                                                                     hasNullValue="false"
                                                                     mandatory="false"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <person:PersonFormSelector ui:field="initiator"
                                                                   validation="false"
                                                                   header="{lang.issueInitiator}"
                                                                   mandatory="false"
                                                                   fired="false"/>
                                    </div>
                                </div>
                                <g:HTMLPanel ui:field="platformContainer" styleName="row">
                                    <div class="col-md-12">
                                        <selector:PlatformFormSelector ui:field="platform"
                                                                       validation="false"
                                                                       header="{lang.siteFolderPlatform}"
                                                                       mandatory="false"/>
                                    </div>
                                </g:HTMLPanel>
                            </div>

                            <g:HTMLPanel ui:field="timeElapsedContainer" styleName="row form-group">
                                <g:HTMLPanel ui:field="timeElapsedEditContainer" styleName="col-md-12 form-group-attached">
                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="form-group form-group-default">
                                                <label ui:field="newIssueTimeElapsedLabel" class="fade">
                                                    <ui:text from="{lang.timeElapsed}"/>
                                                </label>
                                                <timefield:TimeTextBox ui:field="timeElapsedInput"
                                                                       styleName="form-control time-elapsed"
                                                                       notNull="false"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <timeElapsed:ElapsedTimeTypeFormSelector ui:field="timeElapsedType"
                                                                                     header="{lang.timeElapsedType}"/>
                                        </div>
                                    </div>
                                </g:HTMLPanel>
                            </g:HTMLPanel>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label ui:field="subscriptionsLabel">
                                        <ui:text from="{lang.companySubscription}"/>
                                    </label>
                                    <small class="hint-text block" ui:field="subscriptions"/>
                                </div>
                            </div>

                            <div class="row form-group">
                                <g:HTMLPanel ui:field="caseSubscriptionContainers" styleName="col-md-12">
                                    <label ui:field="notifiersLabel">
                                        <ui:text from="{lang.caseSubscription}"/>
                                    </label>
                                    <person:EmployeeMultiSelector ui:field="notifiers" styleName="case-subscribers"
                                                                  buttonStyle="btn-info btn-xs"/>
                                </g:HTMLPanel>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-default close_button"
                      text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>