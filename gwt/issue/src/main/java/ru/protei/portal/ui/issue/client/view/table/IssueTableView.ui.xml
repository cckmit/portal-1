<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel styleName="main-content">
        <div class="controlButtons">
            <div class="buttons_group">
                <companyselector:CompanySelector ui:field="company"/>
            </div>
            <div class="buttons_group">
                <ui:text from="{lang.sortBy}"/>
                <sortfieldselector:SortFieldSelector ui:field="sortField" type="CONTACT"/>
                <div class="button empty whiteC switcher">
                    <g:ToggleButton ui:field="sortDir" styleName="sorting_button"/>
                </div>
            </div>
            <div class="buttons_group">
                <g:Button ui:field="create" styleName="button blueC" text="{lang.buttonCreate}"/>
            </div>
            <div class="rightSide local-search">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
        </div>
        <div class="grid">
            <g:HTMLPanel ui:field="tableContainer" styleName="global-table-container col-xs-12">
                    <table:TableWidget ui:field="table" styleName="table-hover"/>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="previewContainer" styleName="preview-container no-width"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
