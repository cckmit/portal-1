<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:makdown="urn:import:ru.protei.portal.ui.common.client.widget.makdown"
             xmlns:text="urn:import:ru.protei.portal.ui.common.client.widget.validatefield">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="card card-transparent no-margin">
        <div class="card-body">
            <div class="row">
                <g:HTMLPanel ui:field="nameContainer" styleName="form-group form-group-default input-group required col-md-12">
                    <div class="form-input-group">
                        <label ui:field="nameLabel" class="fade">
                            <ui:text from="{lang.issueName}"/>
                        </label>
                        <text:ValidableTextBox ui:field="name" styleName="form-control" notNull="true"/>
                    </div>
                </g:HTMLPanel>
                <div class="form-group form-group-default col-md-12">
                    <label class="fade" ui:field="descriptionLabel">
                        <ui:text from="{lang.description}"/>
                    </label>
                    <makdown:MarkdownAreaWithPreview ui:field="description" minRows="10" maxRows="20"/>
                </div>
                <div class="form-group col-md-12">
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>