<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel tag="li" ui:field="root" styleName="left">

        <ul class="list-inline m-b-5">
            <li ui:field="date" class="date-time"></li>
            <li ui:field="owner" class="name"></li>
            <li ui:field="info" class="info hide p-l-5 p-r-5"><ui:text from="{lang.issueCommentChangeStatusTo}"/></li>
            <li ui:field="status" class="status"></li>
            <li ui:field="options">
                <span class="options">
                    <g:Anchor href="javascript:;" ui:field="reply">
                        <i class="fa fa-reply"></i>
                    </g:Anchor>
                    <g:Anchor href="javascript:;" ui:field="edit">
                        <i class="fa fa-pencil"></i>
                    </g:Anchor>
                    <g:Anchor href="javascript:;" ui:field="remove">
                        <i class="fa fa-trash"></i>
                    </g:Anchor>
                </span>
            </li>
        </ul>

        <div ui:field="messageBlock" class="hide">
            <a href="javascript:;" class="image">
                <img alt="" src="./images/user-icon-m.png" ui:field="icon"></img>
            </a>

            <div class="message">
                <g:InlineLabel ui:field="message"/>

                <div class="attachment-block" ui:field="attachBlock">
                    <label style="font-size: 11px;font-weight: bold;">
                        <ui:text from="{lang.issueAttachments}"/>
                    </label>
                    <attachment:AttachmentList ui:field="attachList"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>