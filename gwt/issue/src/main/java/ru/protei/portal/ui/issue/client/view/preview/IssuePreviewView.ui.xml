<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:timefield='urn:import:ru.protei.portal.ui.common.client.widget.timefield'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'
             xmlns:casemeta="urn:import:ru.protei.portal.ui.common.client.widget.casemeta"
>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="preview-wrapper footer-fixable">
        <g:HTMLPanel ui:field="preview" styleName="preview">
            <div class="card card-default">
                <div class="card-body">
                    <h4 class="no-margin inline">
                        <g:HTMLPanel ui:field="numberCopyPanel" styleName="number-copy-panel">
                            <i ui:field="privateIssue" class="fa fa-unlock-alt m-r-5"/>
                            <g:Anchor ui:field="number" styleName="full-screen-link" href="#"/>
                            <g:Anchor ui:field="copy" styleName="copy-issue-description" href="#">
                                <i class="far fa-clone fa-xs"/>
                            </g:Anchor>
                        </g:HTMLPanel>
                    </h4>
                    <div class="inline pull-right">
                        <small>
                            <ui:text from="{lang.createBy}"/>
                        </small>
                        <small ui:field="author" class="name no-margin bold"/>
                        <small class="m-l-5 m-r-5">
                            <ui:text from="{lang.in}"/>
                        </small>
                        <small ui:field="creationDate" class="datetime no-margin"/>
                    </div>

                    <casemeta:CaseMetaView ui:field="caseMetaView" styleName="form-group"
                                           enabled="false" showLabel="false"/>

                    <div class="form-group-attached">
                        <div class="row clearfix">
                            <div class="col-md-3">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.issueCriticality}"/>
                                    </label>
                                    <div>
                                        <i ui:field="iconCriticality"/>
                                        <span ui:field="criticality"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group form-group-default">
                                    <label>
                                        <ui:text from="{lang.issueState}"/>
                                    </label>
                                    <div ui:field="state"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group-default">
                                    <label><ui:text from="{lang.issueProduct}"/></label>
                                    <span ui:field="product"/>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-md-6">
                                <div class="form-group form-group-default">
                                    <label><ui:text from="{lang.issueInitiator}"/></label>
                                    <span ui:field="contact"/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group-default">
                                    <label><ui:text from="{lang.issueManager}"/></label>
                                    <span ui:field="manager"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 ui:field="name"/>

                    <div class="form-group small hint-text pre-formatted-info markdown" ui:field="info"/>

                    <h5>
                        <ui:text from="{lang.companySubscription}"/>
                    </h5>
                    <small ui:field="subscriptions"/>

                    <h5>
                        <ui:text from="{lang.issuePlatformHeader}"/>
                    </h5>
                    <g:Anchor ui:field="platform" styleName="full-screen-link small" href="#"/>

                    <g:HTMLPanel ui:field="timeElapsedContainer" styleName="row">
                        <h5 class="col-md-12">
                            <ui:text from="{lang.timeElapsed}"/>
                            <timefield:TimeLabel ui:field="timeElapsed" styleName="inline m-l-5"/>
                        </h5>
                    </g:HTMLPanel>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <h5>
                                <ui:text from="{lang.issueAttachments}"/>
                            </h5>
                            <div>
                                <div class="attach attach-add">
                                    <fileuploader:AttachmentUploader ui:field="fileUploader">
                                        <div class="attach-add-circle">
                                            <i class="fa fa-plus"/>
                                            <i class="icon-verifiable"/>
                                        </div>
                                    </fileuploader:AttachmentUploader>
                                </div>
                                <attachment:AttachmentList ui:field="attachmentContainer"/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h5>
                                <ui:text from="{lang.comments}"/>
                            </h5>
                            <g:HTMLPanel ui:field="commentsContainer"/>
                        </div>
                    </div>

                </div>
                <g:HTMLPanel styleName="card-footer text-right" ui:field="backButtonContainer">
                    <g:Button ui:field="backButton" styleName="btn btn-success" text="{lang.goToIssues}"/>
                </g:HTMLPanel>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>