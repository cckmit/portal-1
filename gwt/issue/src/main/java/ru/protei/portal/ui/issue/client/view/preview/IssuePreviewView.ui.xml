<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel styleName="grid">
        <g:HTMLPanel ui:field="preview" styleName="preview col-md-6">
            <div class="col-xs-12">
                <g:Anchor ui:field="fullScreen" styleName="fa fa-4 fa-external-link pull-right" href="#"/>
            </div>

            <fieldset class="header col-xs-12 col-lg-5">
                <legend><i ui:field="local" class="fa fa-unlock-alt"></i> <lable ui:field="header"></lable></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueCreationDate}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueProduct}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="product"></span>
                </div>
            </fieldset>
            <fieldset class="header col-xs-12 col-lg-5">
                <legend><ui:text from="{lang.issueCurrentStateHeader}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueCriticality}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="criticality"></span><!--i class="fa fa-exclamation-triangle" style="color:red;"></i-->
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueState}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="state"></span>
                </div>
            </fieldset>
            <fieldset class="header col-xs-12 col-lg-5">
                <legend><ui:text from="{lang.issueContactHeader}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5" ui:field="company"></label>
                    <span class="col-xs-7 col-md-7" ui:field="contact"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5" ui:field="ourCompany"></label>
                    <span class="col-xs-7 col-md-7" ui:field="manager"></span>
                </div>
            </fieldset>
            <fieldset class="header col-xs-12 col-lg-5">
                <legend><ui:text from="{lang.issueInfoHeader}"/></legend>
                <div class="col-xs-12">
                    <span class="col-xs-12 col-md-12 pre-formatted-info" ui:field="info"></span>
                </div>
            </fieldset>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>