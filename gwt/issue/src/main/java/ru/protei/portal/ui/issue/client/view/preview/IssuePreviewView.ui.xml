<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel styleName="grid">
        <g:HTMLPanel ui:field="preview" styleName="preview">
            <div class="col-xs-12">
                <g:Anchor ui:field="fullScreen" styleName="icon fa fa-4 fa-external-link fa-3 pull-right" href="#"/>
            </div>

            <fieldset class="header col-xs-12 col-lg-5" >
                <legend><ui:text from="{lang.issueMainHeader}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueNumber}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="number"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueCreationDate}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="creationDate"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueState}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="state"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueCriticality}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="criticality"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.issueProduct}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="product"></span>
                </div>
            </fieldset>
