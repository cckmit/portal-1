<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:issuefilter='urn:import:ru.protei.portal.ui.common.client.widget.issuefilter'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="filter-collapsable issue-filter panel">

        <div class="collapsed">
            <div class="header">
                <g:Anchor styleName="btn btn-default btn-sm" ui:field="filterRestoreBtn">
                    <span class="fa fa-dedent"/>
                </g:Anchor>
            </div>
        </div>

        <div class="full">
            <div class="header">
                <label class="bold"><ui:text from="{lang.filters}"/></label>
                <g:Anchor styleName="btn btn-default btn-sm" ui:field="filterCollapseBtn">
                    <span class="fa fa-indent"/>
                </g:Anchor>
            </div>

            <issuefilter:IssueFilterParamView ui:field="issueFilterParamView"/>

            <div class="footer">

                <div class="user-filter-name hide" ui:field="filterNameContainer">
                    <label class="bold">
                        <ui:text from="{lang.issueFilterName}"/>
                    </label>
                    <div class="col-xs-12 form-group">
                        <g:TextBox ui:field="filterName" styleName="input-field"/>
                        <g:Anchor styleName="btn btn-default btn-sm" ui:field="okBtn">
                            <span class="fa fa-check"/>
                        </g:Anchor>

                        <g:Anchor styleName="btn btn-default btn-sm" ui:field="cancelBtn">
                            <span class="fa fa-times"/>
                        </g:Anchor>
                    </div>
                </div>

                <g:Button ui:field="createBtn" styleName="btn btn-white" text="{lang.buttonCreate}"/>
                <g:Button ui:field="saveBtn" styleName="btn btn-white" text="{lang.buttonModify}"/>
                <g:Button ui:field="resetBtn" styleName="btn btn-white" text="{lang.buttonReset}"/>
                <g:Button ui:field="removeBtn" styleName="btn btn-white" text="{lang.buttonRemove}"/>
            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>