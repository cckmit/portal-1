<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:issuefilter='urn:import:ru.protei.portal.ui.common.client.widget.issuefilter'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="filter-collapsable issue-filter panel">

        <div class="collapsed">
            <div class="header">
                <g:Anchor styleName="btn btn-default btn-sm" ui:field="filterRestoreBtn">
                    <span class="fa fa-dedent"/>
                </g:Anchor>
            </div>
        </div>

        <div class="full">
            <div class="header">
                <label class="bold"><ui:text from="{lang.filters}"/></label>
                <g:Anchor styleName="btn btn-default btn-sm" ui:field="filterCollapseBtn">
                    <span class="fa fa-indent"/>
                </g:Anchor>
            </div>

            <issuefilter:IssueFilterParamView ui:field="issueFilterParamView"/>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>