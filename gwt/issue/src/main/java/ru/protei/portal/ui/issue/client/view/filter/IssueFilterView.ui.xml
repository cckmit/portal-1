<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:importance='urn:import:ru.protei.portal.ui.common.client.widget.selector.dict'
             xmlns:state='urn:import:ru.protei.portal.ui.issue.client.widget.buttonselector'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel fixed">
        <div class="body">
            <div class="local-search col-xs-12">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
            <div class="col-xs-12">
                <ui:text from="{lang.sortBy}"/>
                <div class="control-group">
                    <sortfieldselector:SortFieldSelector ui:field="sortField" type="ISSUE" />
                    <g:ToggleButton ui:field="sortDir" styleName="button empty whiteC switcher sorting_button"/>
                </div>
            </div>
            <div class="col-xs-12">
                <companyselector:CompanySelector ui:field="company"/>
            </div>
            <div class="col-xs-12">
                <productselector:ProductButtonSelector ui:field="product"/>
            </div>
            <div class="col-xs-12">
                <importance:ImportanceButtonSelector ui:field="importance"/>
            </div>
            <div class="col-xs-12">
                <state:IssueStatesButtonSelector ui:field="state"/>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="resetBtn" styleName="button greenC" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>