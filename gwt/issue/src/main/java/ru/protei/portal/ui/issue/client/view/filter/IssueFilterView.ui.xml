<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:importance='urn:import:ru.protei.portal.ui.issue.client.widget.importance.btngroup'
             xmlns:filter='urn:import:ru.protei.portal.ui.issue.client.widget.filter'
             xmlns:range='urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.range'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'
             xmlns:option='urn:import:ru.protei.portal.ui.common.client.widget.optionlist.item'
             xmlns:threestate='urn:import:ru.protei.portal.ui.common.client.widget.threestate'
             xmlns:optionlist="urn:import:ru.protei.portal.ui.common.client.widget.issuestate.optionlist">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="filter-collapsable issue-filter card card-default">
        <div class="card-block">
            <div class="collapsed">
                <div class="header">
                    <g:Anchor styleName="btn btn-default btn-sm" ui:field="filterRestoreBtn">
                        <span class="fa fa-dedent"/>
                    </g:Anchor>
                </div>
            </div>
            <div class="full">
                <div class="header">
                    <label class="bold">
                        <ui:text from="{lang.filters}"/>
                    </label>
                    <g:Anchor styleName="btn btn-default btn-sm" ui:field="filterCollapseBtn">
                        <span class="fa fa-indent"/>
                    </g:Anchor>
                </div>

                <div class="user-filter">
                    <filter:IssueFilterSelector ui:field="userFilter" defaultValue="{lang.issueFilterNotDefined}"/>
                </div>


                <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}"
                                                       styleName="form-group col-md-12 m-b-0"/>
                <div class="form-group col-md-12 local-search-options-container">
                    <g:Label ui:field="searchByCommentsWarning" styleName="warning"/>
                    <option:OptionItem ui:field="searchByComments" styleName="toggle" name="{lang.searchByComments}"/>
                </div>

                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.created}"/>
                    </label>
                    <range:RangePicker ui:field="dateRange" type="DATETIME" formatValue="dd.MM.yyyy HH:mm"/>
                </div>

                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.sortBy}"/>
                    </label>
                    <div class="control-group">
                        <sortfieldselector:SortFieldSelector ui:field="sortField" type="ISSUE"/>
                        <g:ToggleButton ui:field="sortDir" styleName="btn empty btn-white sorting_button"/>
                    </div>
                </div>

                <productselector:devunit.DevUnitMultiSelector ui:field="products"
                                                              header="{lang.issueProduct}"
                                                              addStyleNames="form-group col-md-12"/>

                <companyselector:CompanyMultiSelector ui:field="companies"
                                                      header="{lang.issueCompany}"
                                                      addStyleNames="form-group col-md-12"/>

                <person:InitiatorMultiSelector ui:field="initiators"
                                               header="{lang.issueInitiator}"
                                               addStyleNames="form-group col-md-12"/>

                <person:EmployeeMultiSelector ui:field="managers"
                                              header="{lang.issueManager}"
                                              addStyleNames="form-group col-md-12"/>

                <g:HTMLPanel ui:field="searchPrivateContainer" styleName="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.searchPrivate}"/>
                    </label>
                    <threestate:ThreeStateButton ui:field="searchPrivate"/>
                </g:HTMLPanel>

                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.issueImportance}"/>
                    </label>
                    <importance:ImportanceBtnGroupMulti ui:field="importance"
                                                        styleName="btn-group btn-group-justified"/>
                </div>

                <div class="form-group col-md-12">
                    <label>
                        <ui:text from="{lang.issueState}"/>
                    </label>
                    <optionlist:IssueStatesOptionList ui:field="state"/>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="user-filter-name hide" ui:field="filterNameContainer">
                <label class="bold">
                    <ui:text from="{lang.issueFilterName}"/>
                </label>
                <div class="col-md-12">
                    <g:TextBox ui:field="filterName" styleName="input-field"/>
                    <g:Anchor styleName="btn btn-default btn-sm" ui:field="okBtn">
                        <span class="fa fa-check"/>
                    </g:Anchor>
                    <g:Anchor styleName="btn btn-default btn-sm" ui:field="cancelBtn">
                        <span class="fa fa-times"/>
                    </g:Anchor>
                </div>
            </div>

            <g:Button ui:field="reportBtn" styleName="btn btn-white" text="{lang.buttonReport}"/>
            <g:Button ui:field="saveBtn" styleName="btn btn-white" text="{lang.buttonCreate}"/>
            <g:Button ui:field="resetBtn" styleName="btn btn-white" text="{lang.buttonReset}"/>
            <g:Button ui:field="removeBtn" styleName="btn btn-white" text="{lang.buttonRemove}"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>