<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel tag="li" ui:field="root" styleName="left">
        <div class="date-time" ui:field="date"></div>

        <div>
            <span ui:field="owner" class="name"/>
            <span><ui:text from="{lang.issueCommentChangeStatusTo}"/></span>
            <span ui:field="status"></span>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>