<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <h5 ui:field="nameROPanel" class="number-and-name-copy-panel no-margin">
            <g:Anchor ui:field="copyNumberAndName" styleName="copy-issue-number-and-name" href="#">
                <i class="far fa-clone"/>
            </g:Anchor>
            <label ui:field="nameRO" class="semi-bold large-text"/>
        </h5>

        <g:HTMLPanel ui:field="linksContainer" styleName="form-group"/>

        <div ui:field="descriptionRO" class="form-group pre-formatted-info markdown p-t-15" />

        <div ui:field="attachmentsPanel" class="row form-group">
            <div class="col-md-12">
                <label ui:field="attachmentsLabel">
                    <ui:text from="{lang.issueAttachments}"/>
                </label>

                <div>
                    <div class="attach attach-add">
                        <fileuploader:AttachmentUploader ui:field="fileUploader">
                            <div class="attach-add-circle">
                                <i class="fas fa-plus ion-plus"/>
                                <i class="fas fa-circle-notch fa-spin icon-verifiable"/>
                            </div>
                        </fileuploader:AttachmentUploader>
                    </div>
                    <attachment:AttachmentList ui:field="attachmentContainer"/>
                </div>
            </div>
        </div>
        <div ui:field="commentsPanel" class="row">
            <div class="form-group col-md-12" ui:field="comments">
                <label>
                    <ui:text from="{lang.comments}"/>
                </label>
                <g:HTMLPanel ui:field="commentsContainer"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>