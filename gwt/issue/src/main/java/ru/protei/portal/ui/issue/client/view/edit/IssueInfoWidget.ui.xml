<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'
             xmlns:tab='urn:import:ru.protei.portal.ui.common.client.widget.tab'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <g:HTMLPanel ui:field="descriptionReadOnly" styleName="form-group markdown p-t-15"/>

        <div ui:field="attachmentsPanel" class="row form-group">
            <div class="col-md-12">
                <g:HTMLPanel ui:field="attachmentsRootContainer" styleName="card card-default card-attachments">
                    <g:HTMLPanel ui:field="attachmentsHeaderContainer" styleName="card-header">
                        <label ui:field="attachmentsLabel"/>
                        <a class="pull-right collapse-btn p-b-0 p-t-0" href="#" id="gwt-debug-issue-links-collapse-button"/>
                    </g:HTMLPanel>
                    <div class="attachments-accordion">
                        <div class="card-body">
                            <div>
                                <attachment:fullview.FullViewAttachmentList ui:field="attachmentListContainer"/>
                            </div>
                        </div>
                    </div>
                </g:HTMLPanel>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <tab:TabWidget styleName="issue-info-tab-widget">
                    <tab:pane.TabWidgetPane tabName="{lang.comments}">
                        <g:HTMLPanel ui:field="commentsContainer"/>
                    </tab:pane.TabWidgetPane>

                    <tab:pane.TabWidgetPane tabName="{lang.caseHistory}">
                        <g:HTMLPanel ui:field="historyContainer"/>
                    </tab:pane.TabWidgetPane>
                </tab:TabWidget>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
