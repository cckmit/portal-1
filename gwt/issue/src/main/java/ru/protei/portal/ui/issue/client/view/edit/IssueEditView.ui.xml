<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:product='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:importance='urn:import:ru.protei.portal.ui.common.client.widget.selector.dict'
             xmlns:state='urn:import:ru.protei.portal.ui.issue.client.widget.state.buttonselector'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'
             xmlns:timefield='urn:import:ru.protei.portal.ui.common.client.widget.timefield'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="panel">

        <div class="body">
            <div class="grid grid-indent">

                <g:HTMLPanel ui:field="nameContainer" styleName="form-group col-xs-12">
                    <label><ui:text from="{lang.issueName}"/></label>
                    <g:HTMLPanel ui:field="nameInputGroupContainer" styleName="issue-main-info">
                            <g:ToggleButton ui:field="local" styleName="btn btn-danger private-btn"/>
                            <g:IntegerBox ui:field="number" styleName="input-field issue-number" enabled="false"/>
                            <validablefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </div>
            <div class="grid grid-indent">
                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.issueState}"/>
                    </label>
                    <state:IssueStatesButtonSelector ui:field="state" validation="true"/>
                </div>
                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.issueImportance}"/>
                    </label>
                    <importance:ImportanceButtonSelector ui:field="importance" validation="true"/>
                </div>
                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.timeEstimated}"/>
                    </label>
                    <timefield:TimeTextBox ui:field="timeEstimated" styleName="input-field" notNull="false"/>
                </div>
                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.timeElapsed}"/>
                    </label>
                    <timefield:TimeTextBox ui:field="timeElapsed" styleName="input-field" notNull="false"/>
                </div>
                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.issueCompany}"/>
                    </label>
                    <company:CompanySelector ui:field="company" validation="false"/>
                </div>
                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.issueInitiator}"/>
                    </label>
                    <person:PersonButtonSelector ui:field="initiator" fired="false" validation="false"/>
                </div>

                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.issueProduct}"/>
                    </label>
                    <product:ProductButtonSelector ui:field="product" validation="false"/>
                </div>

                <div class="form-group col-xs-3">
                    <label>
                        <ui:text from="{lang.issueManager}"/>
                    </label>
                    <person:EmployeeButtonSelector ui:field="manager" validation="false"/>
                </div>

                <div class="form-group col-xs-12">
                    <label>
                        <ui:text from="{lang.description}"/>
                    </label>
                    <g:TextArea ui:field="description" styleName="input-field description" />
                </div>


                <div class="form-group col-xs-12">
                    <label style="display:block">
                        <ui:text from="{lang.companySubscription}"/>
                    </label>
                    <div ui:field="subscriptions"/>
                </div>

                <g:HTMLPanel ui:field="caseSubscriptionContainers" styleName="form-group col-xs-12">
                    <label>
                        <ui:text from="{lang.caseSubscription}"/>
                    </label>
                    <person:EmployeeMultiSelector styleName="case-subscribers" ui:field="notifiers"/>
                </g:HTMLPanel>

                <div class="form-group col-xs-12">
                    <label><ui:text from="{lang.issueAttachments}"/></label>
                    <div class="col-xs-12 col-md-12">
                        <div class="panel">
                            <div class="body">
                                <div class="attach attach-add">
                                    <fileuploader:AttachmentUploader ui:field="fileUploader">
                                        <div class="attach-add-circle">
                                            <i class="ion-plus"/>
                                            <i class="icon-verifiable"/>
                                        </div>
                                    </fileuploader:AttachmentUploader>
                                </div>
                                <attachment:AttachmentList ui:field="attachmentContainer" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-xs-12" ui:field="comments">
                    <label><ui:text from="{lang.comments}"/></label>
                    <g:HTMLPanel ui:field="commentsContainer"/>
                </div>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-white close_button" text="{lang.buttonCancel}"/>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>