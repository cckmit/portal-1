<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.uploader'
             xmlns:attachment='urn:import:ru.protei.portal.ui.common.client.widget.attachment.list'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-transparent no-margin card-with-fixable-footer">
        <g:HTMLPanel ui:field="cardBody" styleName="card-body">
            <div class="row">
                <div class="col-lg-8 order-last order-lg-first p-l-25">
                    <div class="btn-toolbar flex-wrap">
                        <div class="btn-group form-group">
                            <g:Button ui:field="editNameAndDescriptionButton" styleName="btn btn-default btn-xs btn-cons-toolbar">
                                <i class="fa fa-pencil-alt"/>
                            </g:Button>
                        </div>
                    </div>
                    <div class="row">
                        <g:HTMLPanel ui:field="tagsContainer" styleName="col-md-12 m-b-5"/>
                    </div>

                    <g:HTMLPanel ui:field="numberContainer">
                        <h5 class="number-copy-panel no-margin">
                            <g:Anchor ui:field="copyNumber" styleName="copy-issue-number" href="#">
                                <i class="far fa-clone"/>
                            </g:Anchor>
                            <g:Anchor ui:field="number" styleName="full-screen-link" href="#"/>
                        </h5>

                        <div class="inline pull-right">
                            <small ui:field="createdBy"/>
                            <i ui:field="privacyIcon"/>
                        </div>
                    </g:HTMLPanel>

                    <g:HTMLPanel ui:field="issueInfoContainer" styleName="form-group1" />

                    <g:HTMLPanel ui:field="linksContainer" styleName="form-group"/>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label ui:field="attachmentsLabel">
                                <ui:text from="{lang.issueAttachments}"/>
                            </label>

                            <div>
                                <div class="attach attach-add">
                                    <fileuploader:AttachmentUploader ui:field="fileUploader">
                                        <div class="attach-add-circle">
                                            <i class="fas fa-plus ion-plus"/>
                                            <i class="fas fa-circle-notch fa-spin icon-verifiable"/>
                                        </div>
                                    </fileuploader:AttachmentUploader>
                                </div>
                                <attachment:AttachmentList ui:field="attachmentContainer"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12" ui:field="comments">
                            <label>
                                <ui:text from="{lang.comments}"/>
                            </label>
                            <g:HTMLPanel ui:field="commentsContainer"/>
                        </div>
                    </div>
                </div>

                <g:HTMLPanel styleName="col-lg-4 order-first order-lg-last">
                    <div class="card card-default">
                        <g:HTMLPanel ui:field="metaEditContainer" styleName="card-body issue-meta-edit"/>
                    </div>
                </g:HTMLPanel>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>