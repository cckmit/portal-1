<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:company='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:product='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:importance='urn:import:ru.protei.portal.ui.common.client.widget.selector.dict'
             xmlns:state='urn:import:ru.protei.portal.ui.issue.client.widget.buttonselector'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="panel">

        <div class="body">
            <div class="grid grid-indent">
                <div class="col-xs-12 col-lg-6">
                    <label>
                        <ui:text from="{lang.issueName}"/>
                    </label>
                    <div class="panelField verifiable">
                        <i ui:field="verifiableIcon"/>
                        <validablefield:ValidableTextBox ui:field="name" styleName="inputField" notNull="true"/>
                        <g:CheckBox ui:field="local" styleName="checkbox no-space" text="{lang.issuePrivate}"/>
                    </div>
                </div>

                <div class="col-xs-12 col-lg-6 right-sticking">
                    <label>
                        <ui:text from="{lang.description}"/>
                    </label>
                    <div class="panelField">
                        <g:TextArea ui:field="description" styleName="inputField description" />
                    </div>
                </div>

                <div class="col-xs-12 col-lg-6">
                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.issueState}"/>
                        </label>
                        <div class="panelField">
                            <state:IssueStatesButtonSelector ui:field="state" validation="true"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.issueImportance}"/>
                        </label>
                        <div class="panelField">
                            <importance:ImportanceButtonSelector ui:field="importance" validation="true"/>
                        </div>
                    </div>


                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.issueCompany}"/>
                        </label>
                        <div class="panelField">
                            <company:CompanySelector ui:field="company" validation="true"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.issueInitiator}"/>
                        </label>
                        <div class="panelField">
                            <person:PersonButtonSelector ui:field="initiator"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.issueProduct}"/>
                        </label>
                        <div class="panelField">
                            <product:ProductButtonSelector ui:field="product" validation="true"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.issueManager}"/>
                        </label>
                        <div class="panelField">
                            <person:EmployeeButtonSelector ui:field="manager" validation="true"/>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="saveButton" styleName="button greenC" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="button whiteC close_button" text="{lang.buttonCancel}"/>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>