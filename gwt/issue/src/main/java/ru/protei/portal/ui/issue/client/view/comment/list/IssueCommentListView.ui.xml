<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel ui:field="root" styleName="panel">
        <div class="body">
            <g:HTMLPanel ui:field="commentsContainer" tag="ul" styleName="chats"/>
        </div>
        <div class="panel-footer">
            <div class="input-group">
                <g:TextBox ui:field="addComment" styleName="input-field"/>
                <span class="input-group-btn">
                    <g:Button styleName="btn btn-success" ui:field="apply"/>
                </span>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>