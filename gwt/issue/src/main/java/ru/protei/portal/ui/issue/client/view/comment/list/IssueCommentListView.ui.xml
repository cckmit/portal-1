<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="panel">
        <div class="body">
            <g:HTMLPanel ui:field="commentsContainer" tag="ul" styleName="chats"/>
        </div>
        <div class="panel-footer">
            <div class="chats-footer">
                <g:TextArea ui:field="comment" styleName="input-field form-group"/>
                <span class="">
                    <g:Button styleName="btn btn-success" ui:field="send" text="{lang.commentSendMessage}"/>
                </span>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>