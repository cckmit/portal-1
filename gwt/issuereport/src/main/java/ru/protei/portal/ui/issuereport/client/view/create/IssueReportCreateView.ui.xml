<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:reporttype='urn:import:ru.protei.portal.ui.issuereport.client.widget'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'
             xmlns:range='urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.range'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:companyselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.company'
             xmlns:productselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.product'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:threestate='urn:import:ru.protei.portal.ui.common.client.widget.threestate'
             xmlns:importance='urn:import:ru.protei.portal.ui.issue.client.widget.importance.btngroup'
             xmlns:optionlist='urn:import:ru.protei.portal.ui.common.client.widget.issuestate.optionlist'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>

        <div class="form-group grid grid-indent">
            <div class="col-xs-5">
                <label><ui:text from="{lang.issueReportsType}"/></label>
                <reporttype:ReportTypeButtonSelector ui:field="reportType"/>
            </div>
            <div class="col-xs-7">
                <label><ui:text from="{lang.issueReportsTitle}"/></label>
                <g:TextBox ui:field="name" styleName="input-field"/>
            </div>
        </div>

        <div class="form-group grid grid-indent">
            <div class="col-xs-12 m-b-10">
                <label><ui:text from="{lang.issueReportsCaseObjectFilters}"/></label>
            </div>

            <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}" styleName="form-group col-xs-12"/>

            <div class="col-xs-6">
                <label class="bold"><ui:text from="{lang.created}"/></label>
                <range:RangePicker ui:field="dateRange" type="DATETIME" formatValue="dd.MM.yyyy HH:mm"/>
            </div>

            <div class="form-group col-xs-6">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfieldselector:SortFieldSelector ui:field="sortField" type="ISSUE" />
                    <g:ToggleButton ui:field="sortDir" styleName="btn empty btn-white sorting_button"/>
                </div>
            </div>

            <productselector:devunit.DevUnitMultiSelector ui:field="products"
                                                          header="{lang.issueProduct}"
                                                          addStyleNames="form-group col-xs-6"/>

            <companyselector:CompanyMultiSelector ui:field="companies"
                                                  header="{lang.issueCompany}"
                                                  addStyleNames="form-group col-xs-6"/>

            <person:InitiatorMultiSelector ui:field="initiators"
                                           header="{lang.issueInitiator}"
                                           addStyleNames="form-group col-xs-6"/>

            <person:EmployeeMultiSelector ui:field="managers"
                                          header="{lang.issueManager}"
                                          addStyleNames="form-group col-xs-6"/>

            <g:HTMLPanel ui:field="searchPrivateContainer" styleName="form-group col-xs-6">
                <label><ui:text from="{lang.searchPrivate}"/></label>
                <threestate:ThreeStateButton ui:field="searchPrivate"/>
            </g:HTMLPanel>

            <div class="form-group col-xs-6">
                <label><ui:text from="{lang.issueImportance}"/></label>
                <importance:ImportanceBtnGroupMulti ui:field="importance" styleName="btn-group btn-group-justified"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.issueState}"/></label>
                <optionlist:IssueStatesOptionList ui:field="state"/>
            </div>
        </div>

        <g:HTMLPanel styleName="form-group grid grid-indent" ui:field="commentFiltersBlock">
            <div class="col-xs-12 m-b-10">
                <label><ui:text from="{lang.issueReportsCaseCommentFilters}"/></label>
            </div>

            <person:EmployeeMultiSelector ui:field="commentAuthors"
                                          header="{lang.issueCommentAuthor}"
                                          addStyleNames="form-group col-xs-6"/>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>