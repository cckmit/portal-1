<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:reporttype='urn:import:ru.protei.portal.ui.issuereport.client.widget'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>

        <div class="form-group row">
            <div class="form-group col-md-12">
                <label><ui:text from="{lang.issueReportsType}"/></label>
                <reporttype:ReportTypeButtonSelector ui:field="reportType"/>
            </div>
            <div class="form-group col-md-12">
                <label><ui:text from="{lang.issueReportsTitle}"/></label>
                <g:TextBox ui:field="name" styleName="form-control"/>
            </div>
        </div>

        <div class="form-group row report-issue-filter">
            <g:HTMLPanel ui:field="reportContainer" styleName="m-b-10" />
        </div>

    </g:HTMLPanel>
</ui:UiBinder>