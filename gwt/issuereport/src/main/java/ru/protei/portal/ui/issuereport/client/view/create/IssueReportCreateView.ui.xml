<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:reporttype='urn:import:ru.protei.portal.ui.issuereport.client.widget.reporttype'
             xmlns:issuefilter='urn:import:ru.protei.portal.ui.issuereport.client.widget.issuefilter'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card card-transparent m-b-0">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <label><ui:text from="{lang.issueReportsType}"/></label>
                    <reporttype:ReportTypeButtonSelector ui:field="reportType"/>
                </div>
                <div class="form-group col-md-12">
                    <label><ui:text from="{lang.issueReportsTitle}"/></label>
                    <g:TextBox ui:field="name" styleName="form-control"/>
                </div>
            </div>

            <issuefilter:IssueFilter ui:field="issueFilter" styleName="row"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>