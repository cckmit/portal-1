<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <g:HTMLPanel ui:field="root" styleName="row"/>
        <g:HTMLPanel styleName="btn-group col-md-12 p-0" ui:field="controls">
            <g:Button styleName="btn btn-default col-md-6" ui:field="createAddWeek">
                <i class="fas fa-plus-circle"/> <ui:text from="{lang.roomReservationDatesCreateAddWeek}"/>
            </g:Button>
            <g:Button styleName="btn btn-default col-md-6" ui:field="createAddDay">
                <i class="fas fa-plus-circle"/> <ui:text from="{lang.roomReservationDatesCreateAddDay}"/>
            </g:Button>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>