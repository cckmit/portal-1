<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="card card-default card-fixed no-border">
        <div class="card-body">
            <h4 class="col-md-12 no-margin no-padding" ui:field="name"/>
            <g:Label styleName="small hint-text pre-formatted-info" ui:field="description"/>
            <p class="small m-t-5">
                <b><ui:text from="{lang.rolePrivileges}:"/></b>
                <g:Label ui:field="privileges" styleName="pre-formatted-info"/>
                <i class="fa fa-info-circle m-t-5 m-r-5"/><ui:text from="{lang.rolePrivilegesNote}"/>
            </p>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>