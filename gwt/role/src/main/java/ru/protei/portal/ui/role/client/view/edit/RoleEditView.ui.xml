<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="main-content">
        <div class="panel panel-default">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="form-group col-xs-4">
                        <label>
                            <ui:text from="{lang.roleName}"/>
                        </label>

                        <validablefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>

                    </div>
                    <div class="form-group col-xs-8">
                        <label >
                            <ui:text from="{lang.roleDescription}"/>
                        </label>
                        <g:TextBox ui:field="description" styleName="input-field"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>