<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="form-group autoadd-vc-item">
        <g:TextBox ui:field="value" styleName="input-field autoadd-vc-item-v"/>
        <g:TextBox ui:field="comment" styleName="input-field autoadd-vc-item-c"/>
        <g:Button ui:field="button" styleName="btn">
            <i ui:field="icon"/>
        </g:Button>
    </g:HTMLPanel>
</ui:UiBinder>