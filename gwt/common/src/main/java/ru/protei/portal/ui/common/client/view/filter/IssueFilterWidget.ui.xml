<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:issuefilter='urn:import:ru.protei.portal.ui.common.client.widget.issuefilter'
             xmlns:issuefilterselector='urn:import:ru.protei.portal.ui.common.client.widget.issuefilterselector'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="">
        <div class="user-filter form-group col-md-12">
            <issuefilterselector:IssueFilterSelector ui:field="userFilter" defaultValue="{lang.issueFilterNotDefined}"/>
        </div>

        <div class="card-body p-t-0 filter-content">
            <issuefilter:IssueFilterParamView ui:field="issueFilterParamView" styleName="row"/>
        </div>

        <div class="card-footer filter-content text-right">
            <div class="user-filter-name hide" ui:field="filterNameContainer">
                <label class="bold"><ui:text from="{lang.issueFilterName}"/></label>
                <div class="input-group">
                    <g:TextBox ui:field="filterName" styleName="form-control"/>
                    <g:Anchor styleName="btn btn-default btn-sm" ui:field="okBtn">
                        <span class="fa fa-check"/>
                    </g:Anchor>

                    <g:Anchor styleName="btn btn-default btn-sm" ui:field="cancelBtn">
                        <span class="fa fa-times"/>
                    </g:Anchor>
                </div>
            </div>

            <g:Button ui:field="createBtn" styleName="btn btn-default" text="{lang.buttonCreate}"/>
            <g:Button ui:field="saveBtn" styleName="btn btn-default" text="{lang.buttonModify}"/>
            <g:Button ui:field="resetBtn" styleName="btn btn-default" text="{lang.buttonReset}"/>
            <g:Button ui:field="removeBtn" styleName="btn btn-default" text="{lang.buttonRemove}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>