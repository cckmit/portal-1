<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:colorpicker='urn:import:ru.protei.portal.ui.common.client.widget.colorpicker'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="form-group grid grid-indent">
            <div class="form-group col-md-6">
                <label><ui:text from="{lang.tagName}"/></label>
                <g:TextBox ui:field="name" styleName="input-field"/>
            </div>
            <div class="form-group col-md-6">
                <label><ui:text from="{lang.tagColor}"/></label>
                <colorpicker:ColorPicker ui:field="color"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>