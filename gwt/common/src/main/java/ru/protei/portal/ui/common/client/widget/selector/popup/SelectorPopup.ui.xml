<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="single-selector-popup" visible="false">
        <div class="dropdown-addbutton hide" ui:field="addContainer">
            <g:Button ui:field="addButton"/>
        </div>
        <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}" styleName="dropdown-searchbox hide"/>
        <g:HTMLPanel ui:field="dropdownMenu" styleName="dropdown-menu full-width show">
            <g:HTMLPanel ui:field="childContainer" tag="ul" styleName="full-width"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
