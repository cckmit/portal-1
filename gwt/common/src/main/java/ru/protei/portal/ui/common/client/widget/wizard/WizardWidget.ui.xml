<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel styleName="card card-transparent no-margin footer-fixable">
        <div class="card-body no-padding">
            <g:HTMLPanel ui:field="navTabs" tag="ul"
                         styleName="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator nav-stack-sm d-none d-md-flex d-lg-flex d-xl-flex"/>

            <div class="nav-tab-dropdown cs-wrapper full-width d-lg-none d-xl-none d-md-none">
                <div class="cs-select cs-skin-slide full-width">
                    <g:InlineLabel ui:field="navDropdownTabsSelected" styleName="cs-placeholder"/>
                </div>
            </div>

            <g:HTMLPanel ui:field="tabContent" styleName="tab-content"/>
        </div>

        <div class="card-footer">
            <div class="card card-transparent no-margin">
                <g:HTMLPanel ui:field="buttons" styleName="sm-padding-5 sm-m-b-20 sm-m-t-20 bg-master-lighter clearfix">
                    <ul class="pager wizard no-style pull-right">
                        <g:HTMLPanel tag="li" styleName="previous" ui:field="btnPreviousContainer">
                            <g:Button styleName="btn btn-default btn-cons pull-right" ui:field="btnPrevious">
                                <span ui:field="btnPreviousText"/>
                            </g:Button>
                        </g:HTMLPanel>
                        <g:HTMLPanel tag="li" styleName="next" ui:field="btnNextContainer">
                            <g:Button styleName="btn btn-complete btn-cons pull-right" ui:field="btnNext">
                                <span ui:field="btnNextText"/>
                            </g:Button>
                        </g:HTMLPanel>
                    </ul>
                </g:HTMLPanel>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>