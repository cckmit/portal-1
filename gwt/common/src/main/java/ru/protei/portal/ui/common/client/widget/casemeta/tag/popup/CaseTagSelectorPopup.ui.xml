<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="form-group col-xs-12 case-tag-popup">
        <div class="case-tag-popup-header">
            <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}" styleName="search-input"/>
            <g:Button ui:field="addButton" styleName="btn btn-flat btn-white">
                <i class="fa fa-plus"/>
            </g:Button>
        </div>
        <g:HTMLPanel ui:field="childContainer" tag="ul" styleName="case-tag-list"/>
    </g:HTMLPanel>
</ui:UiBinder>