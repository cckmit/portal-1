<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="panel" tag="li" styleName="case-link">
        <g:Anchor ui:field="remove" href="#" styleName="case-link-close fa fa-close"/>
        <g:Anchor ui:field="link">
            <span ui:field="text" class="case-link-text"/>
            <span ui:field="icon" class="case-link-icon"/>
        </g:Anchor>
        <g:HTMLPanel styleName="case-link-info" ui:field="caseInfoPanel" visible="false">
            <div class="case-info">
                <span ui:field="state" class="pull-left"/>
                <span ui:field="importance" class="pull-right"/>
                <h2 ui:field="header"/>
            </div>

            <div ui:field="info" class="case-description"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
