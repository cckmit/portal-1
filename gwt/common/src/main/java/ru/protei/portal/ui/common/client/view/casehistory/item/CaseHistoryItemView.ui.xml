<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel tag="li" styleName="row form-group">
        <ul class="col-md-9">
            <span class="float-left m-r-10 fas fa-history fa-lg"/>
            <span ui:field="initiator" class="float-left m-r-10 font-weight-bold"/>
            <span ui:field="changeInfoMessage" class="history-item-history-type"/>
            <g:HTMLPanel ui:field="addedValueContainer" tag="span" styleName="history-item-added-value">
                <span ui:field="addedValue" class="font-weight-bold"/>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="changedValueContainer" tag="span" styleName="history-item-changed-value">
                <span ui:field="oldValue" class="history-item-old-value"/>
                <span class="float-left p-x-5">
                    <ui:text from="{lang.caseHistoryChangedTo}"/>
                </span>
                <span ui:field="newValue" class="history-item-new-value"/>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="removedValueContainer" tag="span" styleName="history-item-removed-value">
                <strike ui:field="removedValue" class="font-weight-bold"/>
            </g:HTMLPanel>
        </ul>
        <div class="col-md-3 text-right">
            <span class="case-history-item-date" ui:field="date"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
