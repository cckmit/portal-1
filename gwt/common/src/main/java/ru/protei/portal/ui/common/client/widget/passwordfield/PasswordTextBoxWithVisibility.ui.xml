<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <g:PasswordTextBox ui:field="password" styleName="form-control p-r-30"/>
        <div class="message-preview text-box">
            <g:ToggleButton ui:field="showPassword" styleName="btn show-preview-btn"
                            title="{lang.passwordIsDisplay}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>