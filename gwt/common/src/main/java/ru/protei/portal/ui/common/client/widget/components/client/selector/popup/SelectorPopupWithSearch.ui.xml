<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:search="urn:import:ru.protei.portal.ui.common.client.widget.components.client.selector.search">

    <g:HTMLPanel ui:field="root" styleName="dropdown-menu">
        <search:SearchField ui:field="searchField"/>
        <g:HTMLPanel ui:field="childContainer" styleName="childContainer"/>
        <g:Label ui:field="message" visible="false"/>
        <g:HTMLPanel ui:field="loading" visible="false">
            <i class='fa fa-spinner fa-pulse'></i>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>