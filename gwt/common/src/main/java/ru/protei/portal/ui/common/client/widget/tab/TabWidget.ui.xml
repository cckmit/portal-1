<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <g:HTMLPanel ui:field="navTabs" tag="ul"
                     styleName="nav nav-tabs nav-tabs-simple d-none d-md-flex d-lg-flex d-xl-flex"/>

        <div class="nav-tab-dropdown cs-wrapper full-width d-lg-none d-xl-none d-md-none">
            <g:HTMLPanel ui:field="navDropdownTabsSelectedContainer" styleName="cs-select cs-skin-slide full-width">
                <g:InlineLabel ui:field="navDropdownTabsSelected" styleName="cs-placeholder"/>
            </g:HTMLPanel>
        </div>

        <g:HTMLPanel ui:field="tabContent" styleName="tab-content"/>
    </g:HTMLPanel>
</ui:UiBinder>
