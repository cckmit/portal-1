<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="delivery-item">
        <g:CheckBox ui:field="checkbox" styleName="checkbox no-margin"/>
        <span class="delivery-info title p-l-5">
            <i ui:field="status" class="fas fa-circle"/>
            <span ui:field="number" class="bold"/>
            <span ui:field="name" class="p-l-5"/>
        </span>
        <span ui:field="amount" class="badge pull-right"/>

<!--        <span ui:field="number" class="delivery-number"/>-->
<!--        <span ui:field="status" class="label delivery-status"/>-->
<!--        <span ui:field="name" class="delivery-name"/>-->
    </g:HTMLPanel>
</ui:UiBinder>