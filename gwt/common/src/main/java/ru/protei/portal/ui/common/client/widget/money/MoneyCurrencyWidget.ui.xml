<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:currency='urn:import:ru.protei.portal.ui.common.client.widget.selector.currency'>

    <g:HTMLPanel ui:field="root" styleName="input-group input-group-money">
        <validatefield:ValidableLongBox ui:field="moneyNatural" styleName="form-control input-group-element-natural"/>
        <div class="input-group-prepend input-group-append"><span class="input-group-text">.</span></div>
        <validatefield:ValidableLongBox ui:field="moneyDecimal" styleName="form-control input-group-element-decimal"/>
        <currency:CurrencyButtonSelector ui:field="currency" styleName="input-group-btn"/>
    </g:HTMLPanel>

</ui:UiBinder>