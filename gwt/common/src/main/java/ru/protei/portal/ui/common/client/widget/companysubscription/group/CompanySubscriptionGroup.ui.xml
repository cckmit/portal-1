<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:devunit="urn:import:ru.protei.portal.ui.common.client.widget.selector.product.devunit"
             xmlns:selector="urn:import:ru.protei.portal.ui.common.client.widget.selector.platform"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="row">
            <div class="col-md-3">
                <devunit:DevUnitFormSelector ui:field="productSelector"
                                             validation="false"
                                             header="{lang.issueProduct}"
                                             hasNullValue="true"
                                             mandatory="false"/>
            </div>

            <div class="col-md-3">
                <selector:PlatformFormSelector ui:field="platformSelector"
                                               validation="false"
                                               header="{lang.siteFolderPlatform}"
                                               hasNullValue="true"
                                               mandatory="false"/>
            </div>

            <div class="col-md-3">
                <g:Button ui:field="removeButton" text="{lang.companySubscriptionGroupRemoveButton}" styleName="select2-add-button btn btn-flat btn-info btn-xs"/>
            </div>
        </div>

        <g:HTMLPanel ui:field="itemContainer"/>

        <br/>
    </g:HTMLPanel>
</ui:UiBinder>