<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <g:HTMLPanel ui:field="label" tag="label"/>

        <div class="select2-container select2-container-multi multi-input-select">
            <g:HTMLPanel ui:field="itemContainer" tag="ul" styleName="select2-choices"/>
            <div class="select2-button">
                <g:Button ui:field="caretButton" styleName="btn btn-primary">
                    <span ui:field="addIcon" class="hide"/>
                    <span ui:field="add" class="caret"/>
                </g:Button>
                <g:Button ui:field="clearButton" styleName="btn btn-primary">
                    <span ui:field="clearIcon" class="hide"/>
                    <span ui:field="clear" class="fa fa-times"/>
                </g:Button>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>