<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:autoresizetextarea="urn:import:ru.protei.portal.ui.common.client.widget.autoresizetextarea">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <autoresizetextarea:AutoResizeTextArea
                ui:field="text"
                styleName="input-field form-group message-input resize-vertical"
                maxRows="20"/>

        <g:HTMLPanel ui:field="previewContainer" styleName="message-preview">
            <div class="message-preview-label">
                <ui:text from='{lang.markdownPreview}'/>
                <g:ToggleButton ui:field="isDisplayPreview" styleName="btn show-preview-btn"
                title="показать/спрятать"/>
            </div>
            <div ui:field="preview" class="message-preview-content markdown"/>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>