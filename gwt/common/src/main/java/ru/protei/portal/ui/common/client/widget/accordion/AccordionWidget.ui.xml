<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:customHtmlPanel='urn:import:ru.protei.portal.ui.common.client.widget.htmlpanel'>
    <g:HTMLPanel>
        <div class="row form-group">
            <div class="col-md-12">
                <div ui:field="accordionContainer" class="card card-default accordion">
                    <customHtmlPanel:CustomHTMLPanel ui:field="headerContainer" styleName="card-header">
                        <label ui:field="headerLabel"/>
                        <a ui:field="collapseButton" class="pull-right collapse-btn p-b-0 p-t-0" href="javascript:void(0)"/>
                    </customHtmlPanel:CustomHTMLPanel>
                    <div ui:field="accordionBody" class="accordion-body">
                        <div ui:field="accordionCardBody" class="card-body">
                            <g:HTMLPanel ui:field="bodyContainer"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
