<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:popup='urn:import:ru.protei.portal.ui.common.client.widget.issuelinks.popup'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="case-link-popup">
        <popup:IssueLinksTypeBtnGroup ui:field="typeSelector" styleName="type-selector"/>
        <g:TextBox ui:field="remoteIdInput" styleName="input-field remote-id-input"/>
        <g:Button ui:field="applyBtn" styleName="btn btn-success apply-btn" text="{lang.buttonAdd}"/>
    </g:HTMLPanel>
</ui:UiBinder>