<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="modal">
        <div class="modal-dialog dialog-content" ui:field="modalDialog">
            <div class="modal-content">
                <div class="modal-header">
                    <g:Button ui:field="close" styleName="close">Ã—</g:Button>
                    <h4 class="modal-title" ui:field="header"></h4>
                </div>

                <g:HTMLPanel ui:field="bodyContainer" styleName="modal-body" />

                <div class="modal-footer">
                    <div class="remove-button">
                        <g:Anchor href='#' ui:field="remove" styleName="btn btn-danger" visible="false"><ui:text from="{lang.buttonRemove}"/></g:Anchor>
                    </div>
                    <g:Anchor href='#' ui:field="save" styleName="btn btn-complete"><ui:text from="{lang.buttonSave}"/></g:Anchor>
                    <g:Anchor href='#' ui:field="cancel" styleName="btn btn-default"><ui:text from="{lang.buttonCancel}"/></g:Anchor>
                </div>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>