<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:text='urn:import:ru.protei.portal.ui.common.client.widget.selector.text'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="grid grid-indent">
            <g:HTMLPanel styleName="form-group col-xs-3">
                <label><ui:text from="{lang.jiraIssueType}"/></label>
                <text:RawTextButtonSelector ui:field="issueType"/>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="severityContainer" styleName="form-group col-xs-3">
                <label><ui:text from="{lang.jiraSeverity}"/></label>
                <text:RawTextButtonSelector ui:field="severity"/>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="timeOfReactionContainer" styleName="form-group col-xs-3">
                <label><ui:text from="{lang.jiraTimeOfReaction}"/></label>
                <g:TextBox ui:field="timeOfReaction" styleName="input-field" enabled="false"/>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="timeOfDecisionContainer" styleName="form-group col-xs-3">
                <label><ui:text from="{lang.jiraTimeOfDecision}"/></label>
                <g:TextBox ui:field="timeOfDecision" styleName="input-field" enabled="false"/>
            </g:HTMLPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>