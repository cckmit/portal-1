<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cp='urn:import:ru.protei.portal.ui.common.client.widget.collapse'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="row">
        <g:Button ui:field="addLinkButton" styleName="btn btn-default case-meta-button">
            <i class="fas fa-sm fa-link"/>
            <i class="fas fa-chevron-down"/>
        </g:Button>
        <cp:CollapsiblePanel ui:field="linksPanel" label="{lang.linkedWith}:"/>
    </g:HTMLPanel>
</ui:UiBinder>
