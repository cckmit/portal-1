<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sla="urn:import:ru.protei.portal.ui.common.client.widget.sla">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="form-group col-md-3">
                <label><ui:text from="{lang.projectSlaReactionTime}"/></label>
            </div>
            <div class="form-group col-md-3">
                <label><ui:text from="{lang.projectSlaTemporaryTime}"/></label>
            </div>
            <div class="form-group col-md-3">
                <label><ui:text from="{lang.projectSlaFullTime}"/></label>
            </div>
        </div>
        <sla:SlaRowItem ui:field="criticalItem" importance="{lang.criticalImportance}"/>
        <sla:SlaRowItem ui:field="importantItem" importance="{lang.importantImportance}"/>
        <sla:SlaRowItem ui:field="basicItem" importance="{lang.basicImportance}"/>
        <sla:SlaRowItem ui:field="cosmeticItem" importance="{lang.cosmeticImportance}"/>
    </g:HTMLPanel>
</ui:UiBinder>