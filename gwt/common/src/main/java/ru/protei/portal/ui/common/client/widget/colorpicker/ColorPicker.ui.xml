<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel ui:field="root" styleName="input-group color-picker">

        <g:TextBox ui:field="colorBox" styleName="input-field"/>

        <div class="input-group-btn">
            <g:Button ui:field="colorPickerButton" styleName="btn btn-default">
                <i class="fa fa-tint fa-lg"/>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
