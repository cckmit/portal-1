<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'>

    <g:HTMLPanel ui:field="root" styleName="input-group color-picker">

        <validablefield:ValidableTextBox ui:field="colorBox" styleName="form-control"
                                         notNull="true"/>

        <div class="input-group-btn">
            <g:Button ui:field="colorPickerButton" styleName="btn btn-default">
                <i class="fas fa-sm fa-tint"/>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
