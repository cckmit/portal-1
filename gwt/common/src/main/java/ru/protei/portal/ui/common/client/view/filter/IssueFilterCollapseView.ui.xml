<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-default no-border card-fixed issue-filter filter-collapsable">
        <div class="filter-header">
            <label ui:field="labelFilters"><ui:text from="{lang.filters}"/></label>
            <g:Anchor ui:field="filterCollapseBtn" styleName="btn btn-default btn-sm filter-btn-collapse">
                <span class="fas fa-compress-arrows-alt"/>
            </g:Anchor>
            <g:Anchor ui:field="filterRestoreBtn" styleName="btn btn-default btn-sm filter-btn-restore">
                <span class="fas fa-expand-arrows-alt"/>
            </g:Anchor>
        </div>

        <div class="card-body p-t-0 filter-content">
            <g:HTMLPanel ui:field="container"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>