<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel ui:field="root" styleName="input-selector">
        <label ui:field="label"/>
        <g:TextBox ui:field="searchField" styleName="inputField"/>
        <g:Button ui:field="button" styleName="button whiteC sticky">
            <span class="caret"></span>
        </g:Button>
    </g:HTMLPanel>
</ui:UiBinder>