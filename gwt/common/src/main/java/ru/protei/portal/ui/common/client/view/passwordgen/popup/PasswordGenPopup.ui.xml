<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="popup-with-arrow text-center">
        <g:HTMLPanel ui:field="arrow" styleName="popup-arrow pwd-gen-arrow"/>
        <g:HTMLPanel styleName="export-popup pwd-gen-popup">
            <div>
                <label>
                    <ui:text from="{lang.contactGeneratePassword}"/>
                </label>
            </div>

            <div class="d-flex justify-content-flex-end small-buttons m-t-10">
                <g:Button ui:field="applyButton" styleName="btn btn-complete m-r-5" text="{lang.buttonYes}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-default close_btn" text="{lang.buttonNo}"/>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>