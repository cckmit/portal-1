<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:timefield='urn:import:ru.protei.portal.ui.common.client.widget.timefield'>

    <g:HTMLPanel styleName="row">
        <div class="col-md-2 m-t-5">
            <label ui:field="importance"/>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="form-group col-md-4">
                    <timefield:TimeTextBox ui:field="reactionTime"
                                           fullDayTime="true"
                                           notNull="false"
                                           styleName="form-control time-elapsed sla-input-time"/>
                </div>
                <div class="form-group col-md-4">
                    <timefield:TimeTextBox ui:field="temporarySolutionTime"
                                           fullDayTime="true"
                                           notNull="false"
                                           styleName="form-control time-elapsed sla-input-time"/>
                </div>
                <div class="form-group col-md-4">
                    <timefield:TimeTextBox ui:field="fullSolutionTime"
                                           fullDayTime="true"
                                           notNull="false"
                                           styleName="form-control time-elapsed sla-input-time"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
