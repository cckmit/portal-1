<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root">
        <g:HTMLPanel ui:field="label" tag="label" styleName="hide"/>

        <g:HTMLPanel ui:field="select2" styleName="select2-container select2-container-multi multi-input-select">
            <g:HTMLPanel ui:field="itemContainer" tag="ul" styleName="select2-choices"/>
            <div ui:field="selectButton" class="select2-button">
                <g:Button ui:field="caretButton" styleName="select2-add-button btn btn-flat bg-white no-border">
                    <span ui:field="addIcon" class="hide"/>
                    <span ui:field="add" class="caret"/>
                </g:Button>
                <g:Button ui:field="clearButton" visible="false" styleName="btn btn-flat bg-white no-border">
                    <span ui:field="clearIcon" class="hide"/>
                    <span ui:field="clear" class="fa fa-times"/>
                </g:Button>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
