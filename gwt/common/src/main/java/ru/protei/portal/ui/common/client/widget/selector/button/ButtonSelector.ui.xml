<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:popup="urn:import:ru.protei.portal.ui.common.client.widget.selector.popup">

    <g:HTMLPanel styleName="dropdown-selector" ui:field="inputContainer">
        <label ui:field="label" class="hide"/>
        <g:Button ui:field="button" styleName="btn btn-default btn-block dropdown-toggle">
            <i ui:field="icon"/>
            <span ui:field="text" class="selector-val"></span>
        </g:Button>
        <g:HTMLPanel ui:field="popupContainer"/>
    </g:HTMLPanel>

</ui:UiBinder>
