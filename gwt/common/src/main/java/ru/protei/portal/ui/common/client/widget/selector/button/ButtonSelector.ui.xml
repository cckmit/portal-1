<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel styleName="button-selector" ui:field="inputContainer">
        <label ui:field="label"/>
        <g:Button ui:field="button" styleName="button whiteC">
            <span ui:field="text"></span>
            <span class="caret"></span>
        </g:Button>
    </g:HTMLPanel>

</ui:UiBinder>