<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="password-box">
        <g:PasswordTextBox ui:field="password" styleName="form-control p-r-30"/>
        <g:ToggleButton ui:field="showPassword" styleName="password-box_show-btn"
                        title="{lang.passwordIsDisplay}"/>
    </g:HTMLPanel>
</ui:UiBinder>