<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:enterabletextbox='urn:import:ru.protei.portal.ui.common.client.widget.enterabletextbox'
             xmlns:popup='urn:import:ru.protei.portal.ui.common.client.widget.caselink.popup'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="case-link-popup">
        <popup:CaseLinkTypeSelector ui:field="typeSelector" styleName="type-selector"/>
        <popup:CaseLinkBundleTypeSelector ui:field="bundleTypeSelector" styleName="bundle-type-selector"/>
        <enterabletextbox:EnterableTextBox ui:field="remoteIdInput" placeholder="{lang.id}" styleName="remote-id-input"/>
    </g:HTMLPanel>
</ui:UiBinder>