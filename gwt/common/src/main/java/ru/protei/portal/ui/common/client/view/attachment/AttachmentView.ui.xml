<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel ui:field="root" styleName="attach" tag="li">
        <div class="attach-thumb fas fa-circle-notch icon-verifiable" ui:field="thumbs">
            <g:Image styleName="pic" ui:field="picture"/>
        </div>
        <div class="attach-controls" ui:field="attachControls">
            <g:Anchor href="javascript:void(0)" ui:field="showPreviewButton" styleName="fa fa-search-plus attach-preview-btn"/>
            <g:Anchor href="javascript:void(0)" ui:field="downloadFullButton" styleName="fa fa-file-download attach-download-btn" target="_blank"/>
            <g:Anchor href="javascript:void(0)" ui:field="deleteButton" styleName="fas fa-times attach-remove-btn"/>
        </div>
        <div class="attach-info">
            <g:Anchor href="javascript:void(0)" ui:field="downloadButton" styleName="attach-lnk" target="_blank">
                <span ui:field="fileName"/>
                <span ui:field="fileSize" class="attach-size"/>
            </g:Anchor>
        </div>

    </g:HTMLPanel>

</ui:UiBinder>