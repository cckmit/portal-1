<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel styleName="confirm-alert">
        <div class="ca-icon ca-warning pulse-warning">
            <span class="ca-body pulse-warning-ins"/>
            <span class="ca-dot pulse-warning-ins"/>
        </div>
        <p class="lead" ui:field="description"/>
        <g:HTMLPanel styleName="sa-button-container">
            <g:Button ui:field="confirmButton" styleName="btn btn-danger"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-default"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>