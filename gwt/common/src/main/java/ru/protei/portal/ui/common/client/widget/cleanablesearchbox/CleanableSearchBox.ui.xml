<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <div class="cleanable-search input-group">
            <div  ui:field="addon" class="input-group-prepend prepend-fix hide">
                <span class="input-group-text transparent" ui:field="addonText">
                    <i ui:field="addonIcon"/>
                </span>
            </div>
            <g:TextBox ui:field="textBox" styleName="form-control rounded-right-3 rounded-left-3"/>

            <g:Anchor ui:field="textBoxAction" styleName="icon cleanable-search-icon"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
