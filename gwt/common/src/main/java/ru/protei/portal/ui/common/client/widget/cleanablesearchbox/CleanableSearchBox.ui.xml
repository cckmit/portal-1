<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel>
        <div class="cleanable-search">
            <div class="input-group">
                <span ui:field="addon" class="input-group-addon input-group-addon-fix text-bold hide">
                    <i ui:field="addonIcon" class="hide"/>
                </span>
                <g:Anchor ui:field="textBoxAction" styleName="icon cleanable-search-icon"/>
                <g:TextBox ui:field="textBox" styleName="input-field"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
