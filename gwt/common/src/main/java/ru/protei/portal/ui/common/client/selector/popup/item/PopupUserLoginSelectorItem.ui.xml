<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel ui:field="root" tag="li">
        <g:FocusPanel ui:field="panel" styleName="user-login-item">
            <g:HTMLPanel styleName="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="image-wrapper">
                        <g:Image ui:field="image" url="./images/user-icon.svg"/>
                    </div>
                    <span class="m-l-10" ui:field="login"/>
                </div>
                <div>
                    <span ui:field="userName"/>
                </div>
            </g:HTMLPanel>
        </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder>
