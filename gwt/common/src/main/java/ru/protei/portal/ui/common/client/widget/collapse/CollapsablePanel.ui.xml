<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel styleName="card-group horizontal">
        <div class="card card-default m-b-0">
            <div class="card-header">
                <h4 class="card-title">
                    <g:Anchor ui:field="legend" href="#"/>
                </h4>
            </div>
        </div>
        <div ui:field="collapseContainer" class="collapse show">
            <g:HTMLPanel ui:field="container" styleName="card-body"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>