<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="input-group">
        <div class="form-input-group flex-1">
            <label class="fade"><ui:text from="{lang.contractProject}"/></label>
            <g:TextBox ui:field="name" styleName="form-control" enabled="false"/>
        </div>
        <div class="d-flex">
            <g:Button ui:field="search" styleName="btn btn-complete b-r-0">
                <i class="fa fa-search"/>
            </g:Button>
            <g:Button ui:field="reset" styleName="btn btn-default b-r-0">
                <i class="fa fa-backspace"/>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
