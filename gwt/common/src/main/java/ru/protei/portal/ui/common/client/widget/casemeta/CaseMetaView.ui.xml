<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="row">
        <div class="col-md-12 no-padding case-meta">
            <div class="case-meta-content">
                <g:HTMLPanel ui:field="tagsSection" styleName="case-meta-tags hide">
                    <label ui:field="tagsLabel" class="case-meta-label"><ui:text from="{lang.tags}"/>: </label>
                    <g:HTMLPanel ui:field="tagsContainer" tag="ul" styleName="case-meta-container"/>
                </g:HTMLPanel>
            </div>

            <g:HTMLPanel ui:field="controlsSection" styleName="case-meta-controls">
                <g:Button ui:field="addTagButton" styleName="btn btn-default case-meta-button">
                    <i class="fas fa-sm fa-tag"/>
                    <i class="fas fa-chevron-down"/>
                </g:Button>
                <g:Button ui:field="addLinkButton" styleName="btn btn-default case-meta-button">
                    <i class="fas fa-sm fa-link"/>
                    <i class="fas fa-chevron-down"/>
                </g:Button>
            </g:HTMLPanel>
        </div>

        <g:HTMLPanel ui:field="linkCollapsiblePanel" styleName="m-b-0 card card-default card-links">
            <div class="card-header">
                <label ui:field="headerLabel">
                    <ui:text from="{lang.linkedWith}"/>
                </label>
                <g:Anchor ui:field="collapse" styleName="pull-right collapse-btn p-b-0 p-t-0" href="#"/>
            </div>
            <g:HTMLPanel ui:field="linksPanel" styleName="card-body case-links" tag="ul"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
