<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="row">
            <div class="form-group col-md-12 m-b-0 case-meta">
                <div class="case-meta-content">
                    <g:HTMLPanel ui:field="tagsSection" styleName="case-meta-tags hide">
                        <label ui:field="tagsLabel" class="case-meta-label"><ui:text from="{lang.tags}"/>: </label>
                        <g:HTMLPanel ui:field="tagsContainer" tag="ul" styleName="case-meta-container"/>
                    </g:HTMLPanel>
                </div>

                <g:HTMLPanel ui:field="controlsSection" styleName="case-meta-controls">
                    <g:Button ui:field="addTagButton" styleName="btn btn-default case-meta-button">
                        <i class="fas fa-sm fa-tag"/>
                        <i class="fas fa-chevron-down"/>
                    </g:Button>
                    <g:Button ui:field="addLinkButton" styleName="btn btn-default case-meta-button">
                        <i class="fas fa-sm fa-link"/>
                        <i class="fas fa-chevron-down"/>
                    </g:Button>
                </g:HTMLPanel>
            </div>
            <g:HTMLPanel ui:field="linksPanel" styleName="m-l-15 m-r-15 m-t-5 card card-default">
                <div class="card-header">
                    <label ui:field="linksLabel" class="card-title"><ui:text from="{lang.linkedWith}"/>: </label>
                    <div class="card-controls">
                        <ul>
                            <li><g:Anchor ui:field="collapse" styleName="p-t-0 fas fa-chevron-up" href="#"/></li>
                        </ul>
                    </div>
                </div>
                <g:HTMLPanel ui:field="linksPanelBody" styleName="card-body">
                    <g:HTMLPanel ui:field="linksSection" styleName="case-meta-links hide">
                        <g:HTMLPanel ui:field="linksContainer" styleName="case-meta-container"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
