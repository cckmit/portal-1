<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>

        <div class="grid grid-indent">
            <div class="form-group col-xs-12 m-b-0 case-meta">

                <div class="case-meta-content">
                    <g:HTMLPanel ui:field="linksSection" styleName="case-meta-links hide">
                        <label ui:field="linksLabel" class="case-meta-label"><ui:text from="{lang.linkedWith}"/>: </label>
                        <g:HTMLPanel ui:field="linksContainer" tag="ul" styleName="case-meta-container"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel ui:field="tagsSection" styleName="case-meta-tags hide">
                        <label ui:field="tagsLabel" class="case-meta-label"><ui:text from="{lang.tags}"/>: </label>
                        <g:HTMLPanel ui:field="tagsContainer" tag="ul" styleName="case-meta-container"/>
                    </g:HTMLPanel>
                </div>

                <g:HTMLPanel ui:field="controlsSection" styleName="case-meta-controls">
                    <g:Button ui:field="addTagButton" styleName="btn btn-white case-meta-button">
                        <i class="fa fa-tag"/>
                        <i class="fa fa-chevron-down"/>
                    </g:Button>
                    <g:Button ui:field="addLinkButton" styleName="btn btn-white case-meta-button">
                        <i class="fa fa-link"/>
                        <i class="fa fa-chevron-down"/>
                    </g:Button>
                </g:HTMLPanel>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
