<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel styleName="table-pager">
        <g:HTMLPanel ui:field="pagesContainer" tag="ul" styleName="pull-left">
            <g:Anchor ui:field="fastBackward" styleName="table-pager_button" href="javascript:void(0)">
                <i class="fas fa-angle-double-left"/>
            </g:Anchor>
            <g:Anchor ui:field="backward" styleName="table-pager_button" href="javascript:void(0)">
                <i class="fas fa-angle-left"/>
            </g:Anchor>
            <g:Anchor ui:field="forward" styleName="table-pager_button" href="javascript:void(0)">
                <i class="fas fa-angle-right"/>
            </g:Anchor>
            <g:Anchor ui:field="fastForward" styleName="table-pager_button" href="javascript:void(0)">
                <i class="fas fa-angle-double-right"/>
            </g:Anchor>
        </g:HTMLPanel>

        <span ui:field="label" class="table-pager_label pull-right"/>

    </g:HTMLPanel>
</ui:UiBinder>