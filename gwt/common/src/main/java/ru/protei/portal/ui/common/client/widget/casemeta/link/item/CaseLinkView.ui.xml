<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:FocusPanel ui:field="root">
        <g:HTMLPanel ui:field="panel" styleName="case-link">
            <g:Anchor ui:field="link">
                <span ui:field="icon" class="case-link-icon hide"/>
                <span ui:field="importance"/>
                <span ui:field="text" class="case-link-text"/>
                <span ui:field="header" class="m-l-5"/>
            </g:Anchor>
            <g:Anchor ui:field="remove" href="#" styleName="case-link-close fas fa-times pull-right"/>
            <span ui:field="state" class="pull-right m-r-5"/>
        </g:HTMLPanel>
    </g:FocusPanel>
</ui:UiBinder>
