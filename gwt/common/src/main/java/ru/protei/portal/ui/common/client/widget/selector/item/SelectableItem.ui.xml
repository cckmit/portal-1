<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel ui:field="panel" tag="li" styleName="selectable-panel">
        <g:HTMLPanel styleName="selectable-item">
            <g:CheckBox ui:field="checkbox"/>
            <g:InlineLabel ui:field="text" styleName="selectable-item-text"/>
            <g:InlineLabel ui:field="info" styleName="selectable-item-info"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>