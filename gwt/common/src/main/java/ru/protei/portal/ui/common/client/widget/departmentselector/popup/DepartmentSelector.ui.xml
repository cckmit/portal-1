<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root" styleName="form-group company-department-popup">
        <div class="company-department-popup-header">
            <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}" styleName="search-input"/>
            <g:Button ui:field="addButton" styleName="btn btn-flat btn-default">
                <i class="fas fa-sm fa-plus"/>
            </g:Button>
        </div>
        <g:HTMLPanel ui:field="childContainer" tag="ul" styleName="company-department-list full-width show"/>
    </g:HTMLPanel>
</ui:UiBinder>