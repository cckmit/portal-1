<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:org='urn:import:ru.protei.portal.ui.common.client.widget.organization'
             xmlns:mask="urn:import:ru.protei.portal.ui.common.client.widget.mask"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="dn col-md-12 m-b-15">
        <div class="dn-container" ui:field="container">
            <g:ToggleButton ui:field="isReserve" styleName="btn dn-reserve" title="{lang.equipmentReserve}"/>
            <label class="dn-separator"></label>
            <org:OrganizationButtonSelector ui:field="organizationCode" styleName="form-control" enabled="false"/>
            <label class="dn-separator">.</label>
            <mask:MaskedTextBox ui:field="classifierCode" styleName="form-control dn-classifier-code" mask="999999"/>
            <label class="dn-separator">.</label>
            <mask:MaskedTextBox ui:field="regNum" styleName="form-control dn-register-number" mask="999"/>
            <label class="dn-separator">â€“</label>
            <div class="modtooltip">
                <mask:MaskedTextBox ui:field="regNumModification" styleName="form-control dn-register-number-modifier"
                                    mask="99"/>
                <label ui:field="getNextModificationMessage" class="text text-info">
                    <i class="fa fa-info-circle m-r-5 "></i>
                    <ui:text from="{lang.equipmentGetNextModification}"></ui:text>
                </label>
            </div>
            <label class="dn-separator"></label>
            <g:Button ui:field="next" styleName="btn btn-white" title="{lang.formNextMod}">
                <i class="fa fa-arrow-right"></i>
            </g:Button>
            <g:Button ui:field="remove" styleName="btn btn-primary" title="{lang.equipmentRemove}">
                <i class="fa fa-trash fa-lg"/>
            </g:Button>
            <label class="dn-separator"></label>
        </div>

        <small class="dn-msg">
            <span ui:field="msg"></span>
            <span ui:field="getNumberMsg" class="text-danger">
                <ui:text from="{lang.equipmentDecimalNumberBusy}"/>
                <g:Anchor href="#" ui:field="getNextNumber" text="{lang.equipmentNextAvailableNumber}"></g:Anchor>
                <ui:text from="{lang.equipmentOrChange}"/>
                <g:Anchor href="#" ui:field="getNextModification" text="{lang.equipmentModification}?"></g:Anchor>
            </span>
        </small>
    </g:HTMLPanel>
</ui:UiBinder>