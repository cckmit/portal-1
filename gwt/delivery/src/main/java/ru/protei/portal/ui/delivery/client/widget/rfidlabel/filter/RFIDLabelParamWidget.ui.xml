<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card-body no-margin filter-content">
        <div class="row">
            <cleanablesearchbox:CleanableSearchBox ui:field="epc" placeholder="{lang.RFIDLabelsEpc}"
                                                   styleName="form-group col-md-12"/>
        </div>
        <div class="row">
            <cleanablesearchbox:CleanableSearchBox ui:field="name" placeholder="{lang.RFIDLabelsName}"
                                                   styleName="form-group col-md-12"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
