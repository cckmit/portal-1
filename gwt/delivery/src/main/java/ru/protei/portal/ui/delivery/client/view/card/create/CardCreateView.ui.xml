<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:meta='urn:import:ru.protei.portal.ui.delivery.client.view.card.meta'
             xmlns:markdown="urn:import:ru.protei.portal.ui.common.client.widget.markdown"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="col-md-12 card-content-wrapper">
        <div class="row card-content p-t-15">
            <div class="col-lg-8 order-last order-lg-first">
                <div class="form-group form-group-default">
                    <label class="fade"><ui:text from="{lang.cardSerialNumber}"/></label>
                    <g:TextBox ui:field="serialNumber" styleName="form-control" enabled="false"/>
                </div>
                <div class="form-group form-group-default">
                    <label class="fade"><ui:text from="{lang.cardNote}"/></label>
                    <markdown:MarkdownAreaWithPreview ui:field="note" minRows="10" maxRows="20"/>
                </div>
                <div class="form-group form-group-default">
                    <label class="fade"><ui:text from="{lang.cardComment}"/></label>
                    <markdown:MarkdownAreaWithPreview ui:field="comment" minRows="10" maxRows="20"/>
                </div>
            </div>
            <div class="col-lg-4 order-first order-lg-last">
                <meta:CardMetaView ui:field="meta"/>
            </div>
        </div>
        <div class="card-footer text-right">
            <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-default close_button"
                      text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>