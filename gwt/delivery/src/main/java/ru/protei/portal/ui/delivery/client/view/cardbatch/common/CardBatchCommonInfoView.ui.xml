<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:markdown="urn:import:ru.protei.portal.ui.common.client.widget.markdown"
             xmlns:text="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:sel="urn:import:ru.protei.portal.ui.delivery.client.widget.card.selector"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>

        <div class="row">
            <sel:CardTypeSelector ui:field="type" styleName="col-md-6" header="{lang.cardBatchType}" defaultValue="{lang.selectIssueManager}"/>

            <g:HTMLPanel ui:field="nameContainer" styleName="col-md-6 form-group form-group-default input-group required">
                <label class="fade"><ui:text from="{lang.cardBatchNumber}"/></label>
                <text:ValidableTextBox ui:field="number" enabled="false" styleName="form-control"/>
            </g:HTMLPanel>
        </div>

        <g:HTMLPanel styleName="form-group form-group-default col-md-12">
            <label class="fade"><ui:text from="{lang.cardBatchParams}"/></label>
            <markdown:MarkdownAreaWithPreview ui:field="params" minRows="10" maxRows="20"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
