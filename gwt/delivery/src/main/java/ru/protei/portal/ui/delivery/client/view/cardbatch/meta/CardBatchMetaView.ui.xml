<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cardbatch="urn:import:ru.protei.portal.ui.common.client.widget.selector.cardbatch"
             xmlns:datepicker="urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.single"
             xmlns:priority="urn:import:ru.protei.portal.ui.delivery.client.widget.cardbatch.priority"
             xmlns:contractors="urn:import:ru.protei.portal.ui.delivery.client.widget.cardbatch.contractors"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-default">
        <div class="card-body">
            <div class="form-group form-group-attached">
                <cardbatch:state.CardBatchStateFormSelector ui:field="state"
                                                            header="{lang.cardBatchState}"
                                                            searchEnabled="false"
                                                            hasNullValue="false"
                                                            mandatory="false"
                                                            enabled="true"/>

                <priority:PrioritySelector ui:field="priority"
                                           validation="true"
                                           header="{lang.cardBatchPriority}"
                                           mandatory="false" fixedStrategy="false"/>

                <div class="form-group form-group-default date-picker required">
                    <label class="fade" ><ui:text from="{lang.cardBatchDeadline}"/></label>
                    <datepicker:SinglePicker ui:field="deadline" type="DATE" mandatory="false"
                                             formatValue="dd-MM-yyyy" styleName="clearfix"/>
                </div>

            </div>

            <div class="form-group col-md-12 card card-default project-team">
                <label class="fade">
                    <ui:text from="{lang.cardBatchContractors}"/>
                </label>

                <contractors:ContractorsSelector ui:field="contractors"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
