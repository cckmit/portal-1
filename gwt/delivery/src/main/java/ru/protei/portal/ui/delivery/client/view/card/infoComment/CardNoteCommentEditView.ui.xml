<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:markdown="urn:import:ru.protei.portal.ui.common.client.widget.markdown"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>
        <g:HTMLPanel styleName="form-group form-group-default col-md-12">
            <label class="fade"><ui:text from="{lang.cardNote}"/></label>
            <markdown:MarkdownAreaWithPreview ui:field="note" minRows="10" maxRows="20"/>
        </g:HTMLPanel>

        <g:HTMLPanel styleName="form-group form-group-default col-md-12">
            <label class="fade"><ui:text from="{lang.cardComment}"/></label>
            <markdown:MarkdownAreaWithPreview ui:field="comment" minRows="10" maxRows="20"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="buttonContainer" styleName="form-group m-b-30"/>
    </g:HTMLPanel>
</ui:UiBinder>
