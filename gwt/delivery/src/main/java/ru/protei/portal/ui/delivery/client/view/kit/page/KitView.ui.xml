<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:kits='urn:import:ru.protei.portal.ui.common.client.widget.delivery.optionlist.kit'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="kit row m-0">

            <nav class="col-xs-12 col-md-2 secondary-sidebar">
                <p class="menu-title inline"><ui:text from="{lang.deliveryKits}"/></p>
                <div class="pull-right menu-controls">
                    <g:Anchor ui:field="kitsActionsBtn" href="#" styleName="p-r-15">
                        <i class="fas fa-ellipsis-h"/>
                    </g:Anchor>
                    <g:Anchor ui:field="reloadKitsBtn" title="{lang.buttonReload}" href="#" styleName="p-r-15">
                        <i class="fa fa-redo-alt"/>
                    </g:Anchor>
                </div>
                <kits:KitList ui:field="kits"/>
            </nav>

            <g:HTMLPanel ui:field="modulesContainer" styleName="col-xs-12 col-md-3 p-15 m-0"/>
            <g:HTMLPanel ui:field="moduleEditContainer" styleName="col-xs-12 col-md-7 p-15 m-0"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>