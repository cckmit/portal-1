<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widgets="urn:import:ru.protei.portal.ui.delivery.client.widget"
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-transparent no-margin card-with-fixable-footer">
        <div class="card-body row no-margin">
            <div class="col-lg-8">
                <div class="row p-b-10">
                    <div class="btn-toolbar flex-wrap">
                        <div class="btn-group form-group">
                            <g:Button ui:field="backButton" styleName="btn btn-default btn-xs btn-cons-toolbar"
                                      title="{lang.backToDeliveries}">
                                <i class="fa fa-arrow-left"/>
                            </g:Button>
                            <g:Button ui:field="nameAndDescriptionEditButton" styleName="btn btn-default btn-xs btn-cons-toolbar"
                                      title="{lang.editNameAndDescription}">
                                <i class="fa fa-pencil-alt"/>
                            </g:Button>
                        </div>
                    </div>

                    <g:HTMLPanel ui:field="nameContainer" styleName="form-group form-group-default col-md-12"/>
                    <g:HTMLPanel ui:field="kitsContainer" styleName="form-group form-group-default col-md-12">
                        <div class="form-group form-group-default col-md-12">
                            <label class="fade"><ui:text from="{lang.deliveryKits}"/></label>
                            <widgets:kit.view.list.DeliveryKitList ui:field="kits" addStyleNames="row"/>
                        </div>
                    </g:HTMLPanel>
                </div>
            </div>
            <div class="col-lg-4">
                <g:HTMLPanel ui:field="metaContainer"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
