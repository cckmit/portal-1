<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="list-view">
        <div class="actions-wrapper">
            <g:Anchor ui:field="addButton" title="{lang.buttonAddModule}" href="#">
                <i class="fa fa-plus"/>
            </g:Anchor>
            <g:Anchor ui:field="copyButton" title="{lang.buttonCopyModule}" href="#">
                <i class="far fa-clone"/>
            </g:Anchor>
            <g:Anchor ui:field="stateButton" title="{lang.buttonStateModule}" href="#">
                <i class="far fa-circle"/>
            </g:Anchor>
            <g:Anchor ui:field="deleteButton" title="{lang.buttonRemoveModule}" href="#">
                <i class="fa fa-trash-alt"/>
            </g:Anchor>
            <g:Anchor ui:field="reloadButton" title="{lang.buttonReloadModule}" href="#">
                <i class="fa fa-redo-alt"/>
            </g:Anchor>
        </div>
        <div class="list-view-wrapper">
            <div class="list-view-group-container">
                <table:TableWidget ui:field="table" styleName="table table-hover module-table"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>