<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel ui:field="root" styleName="card card-transparent no-margin">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8 order-last order-lg-first p-l-25 p-r-5">
                    <div class="btn-toolbar flex-wrap">
                        <div class="btn-group form-group">
                            <g:Button ui:field="backButton" styleName="btn btn-default btn-xs btn-cons-toolbar"
                                      title="{lang.backToCardBatches}">
                                <i class="fa fa-arrow-left"/>
                            </g:Button>
                            <g:Button ui:field="commonInfoEditButton" styleName="btn btn-default btn-xs btn-cons-toolbar"
                                      title="{lang.cardBatchEditCommonInfo}">
                                <i class="fa fa-pencil-alt"/>
                            </g:Button>
                        </div>
                    </div>

                    <g:HTMLPanel ui:field="commonInfoContainer">

                        <small ui:field="createdBy" class="pull-right text-right"/>

                        <h5 class="no-margin"><g:Label ui:field="numberRO"/></h5>

                        <br/>
                        <h5 class="no-margin"><g:Label text="{lang.cardBatchType}"/></h5>
                        <div ui:field="typeRO" class="form-group markdown p-t-15"/>
                        <h5 class="no-margin"><g:Label text="{lang.cardBatchArticle}"/></h5>
                        <div ui:field="articleRO" class="form-group markdown p-t-15"/>
                        <h5 class="no-margin"><g:Label text="{lang.cardBatchAmount}"/></h5>
                        <div ui:field="amountRO" class="form-group markdown p-t-15"/>
                        <h5 class="no-margin"><g:Label text="{lang.cardBatchParams}"/></h5>
                        <div ui:field="paramsRO" class="form-group markdown p-t-15"/>
                        <h5 class="no-margin"><g:Label text="{lang.cardBatchContractors}"/></h5>
                        <div ui:field="contractorsRO" class="form-group markdown p-t-15"/>

                    </g:HTMLPanel>

                    <g:HTMLPanel ui:field="commonInfoEditContainer"/>
                </div>
                <g:HTMLPanel ui:field="metaContainer" styleName="col-lg-4"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
