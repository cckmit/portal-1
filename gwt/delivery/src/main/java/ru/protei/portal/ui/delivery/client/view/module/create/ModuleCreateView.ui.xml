<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:view="urn:import:ru.protei.portal.ui.delivery.client.view.module"
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root">
        <div class="row">
            <div class="col-lg-8 p-0 m-0">
                <div class="actions-wrapper menu-clipper">
                    <div class="actions menu-clipper-menu">
                    </div>
                </div>
                <validablefield:ValidableTextBox ui:field="serialNumber" styleName="form-control"
                                                 enabled="false" notNull="false"/>
                <div class="p-l-30 p-t-15 p-r-15">
                    <view:namedescription.ModuleNameDescriptionEditView ui:field="nameDescription"/>
                </div>
            </div>
            <div class="col-lg-4">
                <view:meta.ModuleMetaView ui:field="meta"/>
            </div>
        </div>
        <div class="card-footer text-right">
            <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
            <g:Button ui:field="cancelButton" styleName="btn btn-default close_button" text="{lang.buttonCancel}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>