<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="root">
        <div class="row">
            <div class="col-lg-8 p-0 m-0">
                <div class="actions-wrapper menu-clipper">
                    <div class="actions menu-clipper-menu">
                        <g:Anchor styleName="" ui:field="showEditViewButton" title="{lang.openFullScreen}">
                            <i class="fas fa-expand-arrows-alt"/>
                        </g:Anchor>
                        <g:Anchor styleName="" ui:field="nameAndDescriptionEditButton"
                                  title="{lang.editNameAndDescription}">
                            <i class="fa fa-pencil-alt"/>
                        </g:Anchor>
                        <g:Anchor styleName="" ui:field="addLinkButton" title="{lang.linkAdd}">
                            <i class="fas fa-link"/>
                        </g:Anchor>
                    </div>
                </div>
                <div class="p-l-30 p-t-15 p-r-15">
                    <small ui:field="createdBy" class="pull-right text-right"/>
                    <g:HTMLPanel ui:field="nameContainer"/>
                </div>
            </div>
            <div class="col-lg-4 p-0 m-0">
                <g:HTMLPanel ui:field="metaContainer"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>