<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="p-3">
        <div class="row">
            <g:HTMLPanel ui:field="tableContainer" styleName="global-table-container col-md-9">
                <div class="card card-default no-border">
                    <div class="card-body no-padding">
                        <table:InfiniteTableWidget ui:field="table" styleName="table table-hover cards"/>
                        <g:HTMLPanel ui:field="pagerContainer" styleName="pager-container" />
                    </div>
                </div>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="filterContainer" styleName="filter-container col-md-3"/>
            <g:HTMLPanel ui:field="previewContainer" styleName="preview-container no-width"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>