<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="kit-menu-header">
        <div class="pull-left menu-controls">
            <g:Anchor ui:field="backBtn" href="#">
                <i class="fa fa-arrow-left"/>
            </g:Anchor>
        </div>
        <div class="menu-title inline"><ui:text from="{lang.deliveryKits}"/></div>
        <div class="pull-right menu-controls">
            <g:Anchor ui:field="actionsBtn" href="#">
                <i class="fas fa-ellipsis-h"/>
            </g:Anchor>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>