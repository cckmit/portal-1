<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:ru.protei.portal.ui.common.client.widget'
             xmlns:casemeta='urn:import:ru.protei.portal.ui.common.client.widget.casemeta'
>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="rootWrapper">
        <g:HTMLPanel styleName="preview grid">
            <g:HTMLPanel ui:field="companyNameBlock" tag="fieldset" styleName="header" visible="false">
                <legend><ui:text from="{lang.company}"/></legend>
                <span ui:field="companyName"></span>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="groupContainer" tag="fieldset" styleName="header">
                <legend><ui:text from="{lang.companyCommonHeader}"/></legend>
                <div class="col-xs-12">
                    <label><ui:text from="{lang.companyCategory}"/></label>
                    <span ui:field="category"></span>
                </div>
                <div class="col-xs-12">
                    <label><ui:text from="{lang.companyParentLabel}"/></label>
                    <span ui:field="parentCompany"></span>
                </div>
                <div class="col-xs-12">
                    <label><ui:text from="{lang.companyChildrenLabel}"/>
                    </label>
                    <span ui:field="childrenCompanies"></span>
                </div>
            </g:HTMLPanel>

            <fieldset ui:field="contacts" class="contacts">
                <legend><ui:text from="{lang.companyInfoHeader}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.phone}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="phone"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.companyWebSite}"/></label>
                    <a class="col-xs-7 col-md-7" ui:field="site" href="#" target="_blank"></a>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.email}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="email"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.companyActualAddress}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="addressFact"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5 col-md-5"><ui:text from="{lang.companyLegalAddress}"/></label>
                    <span class="col-xs-7 col-md-7" ui:field="addressDejure"></span>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.tags}"/></legend>
                <casemeta:CaseMetaView ui:field="caseMetaView" styleName="form-group col-xs-12" enabled="false" showLabel="false"/>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.companySubscription}"/></legend>
                <span ui:field="subscription"/>
            </fieldset>

            <fieldset ui:field="comments" class="comments">
                <legend><ui:text from="{lang.companyAdditionalInfoHeader}"/></legend>
                <span ui:field="info" class="pre-formatted-info"></span>
            </fieldset>

            <w:collapse.CollapsablePanel ui:field="contactsContainer" styleName="collapsable header"
                                         legend="{lang.contacts}"/>

            <w:collapse.CollapsablePanel ui:field="siteFolderContainer" styleName="collapsable header"
                                         legend="{lang.siteFolder}"/>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>