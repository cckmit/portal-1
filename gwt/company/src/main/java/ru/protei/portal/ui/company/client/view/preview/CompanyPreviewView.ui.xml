<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="OrganizationPassport">
        <div class="mainInfo">
            <div class="t_wrapper">
                <div class="tc_wrapper">
                    <div class="section info">
                        <div class="head">
                            <span class="header"><ui:text from="{lang.companyCommonHeader}"/></span>
                        </div>
                        <div class="body">
                            <div id="scrollInfo" class="wrapper white-ps-container ps-container ps-active-x"
                                 data-ps-id="f1d17374-ad8a-c76e-3b0f-4c17c324df6b">
                                <div class="t_wrapper">
                                    <div class="tr_wrapper companyGroup">
                                        <div class="tc_wrapper header"><ui:text from="{lang.companiesGroup}"/></div>
                                        <label class="tc_wrapper content" ui:field="groupCompany"></label>
                                    </div>
                                    <div class="tr_wrapper">
                                        <div class="tc_wrapper header"><ui:text from="{lang.legalAddress}"/></div>
                                        <label class="tc_wrapper content" ui:field="addressDejure"></label>

                                    </div>
                                    <div class="tr_wrapper">
                                        <div class="tc_wrapper header"><ui:text from="{lang.actualAddress}"/></div>
                                        <label class="tc_wrapper content" ui:field="addressFact"></label>
                                    </div>

                                    <div class="tr_wrapper">
                                        <div class="tc_wrapper header"><ui:text from="{lang.phone}"/></div>
                                        <label class="tc_wrapper content" ui:field="phone"></label>
                                    </div>


                                    <div class="tr_wrapper site">
                                        <div class="tc_wrapper header"><ui:text from="{lang.webSite}"/></div>
                                        <label class="tc_wrapper content" ui:field="site"></label>
                                    </div>
                                    <div class="tr_wrapper email">
                                        <div class="tc_wrapper header"><ui:text from="{lang.companyEmail}"/></div>
                                        <label class="tc_wrapper content" ui:field="email"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tc_wrapper large">
                    <div class="section description">
                        <div class="head">
                            <span class="header"><ui:text from="{lang.companyInfoHeader}"/></span>
                        </div>
                        <div class="body">
                            <label ui:field="info"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>