<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel ui:field="root" tag="li">
        <div class="header-block">
            <h2 ui:field="name"></h2>
            <p>
                <g:Anchor ui:field="preview" styleName="fa fa-fw fa-eye" href="#"/>
                <g:Anchor ui:field="edit" styleName="fa fa-fw fa-pencil" href="#"/>
                <g:Anchor ui:field="favorite" styleName="fa fa-fw fa-heart" href="#"/>
            </p>

            <div ui:field="type" class="type"/>

            <g:HTMLPanel ui:field="phoneContainer" styleName="contacts">
                <i class="fa fa-phone"></i>
                <span ui:field="phone"></span>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="emailContainer" styleName="contacts">
                <i class="fa fa-envelope"></i>
                <a href="#" ui:field="email"></a>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="websiteContainer" styleName="contacts">
                <i class="fa fa-globe"></i>
                <a href="#" target="_blank" ui:field="website"></a>
            </g:HTMLPanel>
        </div>

        <g:HTMLPanel ui:field="previewContainer" styleName="plate-list-expander"/>
    </g:HTMLPanel>
</ui:UiBinder>