<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companycategorybtngroup='urn:import:ru.protei.portal.ui.company.client.widget.category.btngroup'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:companygroupselector='urn:import:ru.protei.portal.ui.company.client.widget.group.selector'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel styleName="OrganizationList">
        <div class="controlButtons">
            <companycategorybtngroup:CategoryBtnGroup ui:field="categories"/>
            <div class="buttons_group">
                <companygroupselector:GroupSelector ui:field="group"/>
            </div>
            <div class="buttons_group">
                <div class="regulator">
                    <ui:text from="{lang.sortBy}"/>
                    <sortfieldselector:SortFieldSelector ui:field="sortField"/>
                    <div class="button empty whiteC switcher">
                        <g:ToggleButton ui:field="directionButton" styleName="sorting_button"/>
                    </div>
                </div>
            </div>
            <div class="rightSide">
                <g:TextBox ui:field="search" styleName="inputField"/>
            </div>
        </div>
        <g:HTMLPanel ui:field="childContainer" styleName="organizations list-group grid"/>
    </g:HTMLPanel>
</ui:UiBinder>