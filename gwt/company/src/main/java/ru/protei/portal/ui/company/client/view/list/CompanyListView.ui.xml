<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <ui:import field="ru.protei.portal.core.model.dict.En_SortField.*"/>
    <g:HTMLPanel styleName="OrganizationList">
        <div class="controlButtons">
            <g:Button ui:field="customersButton" text="{lang.customers}" styleName="button whiteC switcher"/>
            <g:Button ui:field="partnersButton" text="{lang.partners}" styleName="button whiteC switcher"/>
            <div class="buttons_group">
                <g:ListBox ui:field="groupList" styleName="inputField"/>
                <!--input placeholder="Группа компаний" class="inputField"/><div class="button selected sticky empty whiteC"></div-->
            </div>
            <div class="buttons_group">
                <div class="regulator">Сортировать по
                    <g:ListBox ui:field="sortList" styleName="inputField">
                        <g:item value="{comp_name.getFieldName}"><ui:text from="{lang.name}"/></g:item>
                        <g:item value="{creation_date.getFieldName}"><ui:text from="{lang.date}"/></g:item>
                    </g:ListBox>
                    <g:Button ui:field="directionButton" styleName="button empty switcher whiteC"><span class="icon-down"></span></g:Button>
                </div>
            </div>
            <div class="rightSide">
                <g:TextBox ui:field="search" styleName="inputField"/>
                <g:Button ui:field="searchButton" styleName="button empty sticky blueC"><span class="icon-search"></span></g:Button>
            </div>
        </div>
        <g:HTMLPanel ui:field="companyContainer" styleName="organizations"/>
    </g:HTMLPanel>
</ui:UiBinder>