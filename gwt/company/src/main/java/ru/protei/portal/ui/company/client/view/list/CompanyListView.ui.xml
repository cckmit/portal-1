<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companycategory='urn:import:ru.protei.portal.ui.company.client.widget.category.btngroup'
             xmlns:sortfield='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:companygroup='urn:import:ru.protei.portal.ui.company.client.widget.group.buttonselector'
             xmlns:platelist="urn:import:ru.protei.portal.ui.common.client.widget.platelist">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />
    <g:HTMLPanel>
        <div class="filter grid grid-ident">
            <div class="form-group col-xs-12 col-md-3">
                <companycategory:CategoryBtnGroup ui:field="categories"/>
            </div>
            <div class="form-group col-xs-12 col-md-2">
                <companygroup:GroupButtonSelector ui:field="group"/>
            </div>
            <div class="form-group col-xs-12 col-md-5">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfield:SortFieldSelector ui:field="sortField" type="COMPANY"/>
                    <g:ToggleButton ui:field="sortDir" styleName="btn empty btn-white sorting_button"/>
                </div>
            </div>
            <div class="form-group col-xs-12 col-md-2 local-search">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="search" styleName="input-field"/>
            </div>
        </div>
        <platelist:PlateList ui:field="childContainer"
                             styleName="plate-list"
                             createButtonStyleName="plate-list-create"
                             createButtonCaption="{lang.buttonCreate}"
        />
    </g:HTMLPanel>
</ui:UiBinder>