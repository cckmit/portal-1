<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companycategorygroup='urn:import:ru.protei.portal.ui.company.client.widget.group.inputSelector'
             xmlns:valuecommentpair='urn:import:ru.protei.portal.ui.common.client.activity.valuecomment'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="col-xs-12 col-lg-6">
                        <label class="required">
                            <ui:text from="{lang.companyName}"/>
                        </label>
                        <div class="panelField verifiable">
                            <i ui:field="verifiableIcon"></i>
                            <g:TextBox ui:field="companyName" styleName="inputField"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.companiesGroup}"/>
                        </label>
                        <div class="panelField">
                            <companycategorygroup:GroupInputSelector ui:field="companyGroup"/>
                            <g:Button ui:field="createCompanyButton" styleName="button greenC inactive">
                                <ui:text from="{lang.create}"/>
                            </g:Button>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label class="required">
                            <ui:text from="{lang.actualAddress}"/>
                        </label>
                        <g:TextArea ui:field="actualAddress" styleName="inputField description"></g:TextArea>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label class="required">
                            <ui:text from="{lang.legalAddress}"/>
                        </label>
                        <g:TextArea ui:field="legalAddress" styleName="inputField description"></g:TextArea>
                    </div>
                    <div class="col-xs-12">
                        <label>
                            <ui:text from="{lang.webSite}"/>
                        </label>
                        <div class="panelField"><span class="label">http://</span>
                            <g:TextBox ui:field="webSite" styleName="inputField"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.phone}"/>
                        </label>
                        <g:HTMLPanel ui:field="phonesContainer" styleName="panelField phone"/>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>Email</label>
                        <g:HTMLPanel ui:field="emailsContainer" styleName="panelField"/>
                    </div>
                    <div class="col-xs-12">
                        <label>
                            <ui:text from="{lang.comment}"/>
                        </label>
                        <g:TextArea ui:field="comment" styleName="inputField description"></g:TextArea>
                    </div>
                    <div class="col-xs-12">
                        <label class="bordered">
                            <ui:text from="{lang.contacts}"/>
                        </label>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="button greenC" text="{lang.save}"/>
                <g:Button ui:field="cancelButton" styleName="button whiteC" text="{lang.cancel}"/>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>