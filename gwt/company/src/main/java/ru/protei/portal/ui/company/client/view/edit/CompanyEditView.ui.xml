<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companygroup='urn:import:ru.protei.portal.ui.company.client.widget.group.buttonselector'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:companycategory='urn:import:ru.protei.portal.ui.company.client.widget.category.buttonselector'
             xmlns:list="urn:import:ru.protei.portal.ui.common.client.widget.subscription.list">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.companyName}"/>
                        </label>
                        <div class="panelField verifiable">
                            <i ui:field="verifiableIcon"/>
                            <validablefield:ValidableTextBox ui:field="companyName" styleName="input-field" notNull="true"/>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.companyCategory}"/>
                        </label>
                        <companycategory:CategoryButtonSelector ui:field="companyCategory"/>
                    </div>
                    <div class="form-group col-xs-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.companyGroupLabel}"/>
                        </label>
                        <companygroup:GroupButtonSelector ui:field="companyGroup"/>
                    </div>
                    <div class="form-group col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.companyActualAddress}"/>
                        </label>
                        <validablefield:ValidableTextArea ui:field="actualAddress" styleName="input-field description" notNull="false"/>
                    </div>
                    <div class="form-group col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.companyLegalAddress}"/>
                        </label>
                        <validablefield:ValidableTextArea ui:field="legalAddress" styleName="input-field description" notNull="false"/>
                    </div>
                    <div class="form-group col-xs-12">
                        <label>
                            <ui:text from="{lang.companyWebSite}"/>
                        </label>
                        <div class="input-group">
                            <span class="input-group-addon">http://</span>
                            <g:TextBox ui:field="webSite" styleName="input-field"/>
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.phone}"/>
                        </label>
                        <g:HTMLPanel ui:field="phonesContainer" styleName="panelField phone"/>
                    </div>
                    <div class="form-group col-xs-12 col-lg-6">
                        <label>Email</label>
                        <g:HTMLPanel ui:field="emailsContainer" styleName="panelField"/>
                    </div>
                    <div class="form-group col-xs-12">
                        <label>
                            <ui:text from="{lang.comment}"/>
                        </label>
                        <g:TextArea ui:field="comment" styleName="input-field description"/>
                    </div>

                    <div class="form-group col-xs-12">
                        <label><ui:text from="{lang.companySubscription}"/></label>
                    </div>

                    <list:SubscriptionList ui:field="subscriptions"/>

                    <div class="form-group col-xs-12">
                        <label class="bordered">
                            <ui:text from="{lang.contacts}"/>
                        </label>
                        <g:HTMLPanel ui:field="tableContainer"></g:HTMLPanel>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white" text="{lang.buttonCancel}"/>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>