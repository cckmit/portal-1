<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:companygroup='urn:import:ru.protei.portal.ui.company.client.widget.group.buttonselector'
             xmlns:validablefield='urn:import:ru.protei.portal.ui.common.client.widget.validatefield'
             xmlns:companycategory='urn:import:ru.protei.portal.ui.company.client.widget.category.buttonselector'
             xmlns:table="urn:import:ru.brainworm.factory.widget.table.client">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="col-xs-12 col-lg-4">
                        <label class="required">
                            <ui:text from="{lang.companyName}"/>
                        </label>
                        <div class="panelField verifiable">
                            <i ui:field="verifiableIcon"/>
                            <validablefield:ValidableTextBox ui:field="companyName" styleName="inputField"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.companyCategory}"/>
                        </label>
                        <div class="panelField">
                            <companycategory:CategoryButtonSelector ui:field="companyCategory"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-4">
                        <label>
                            <ui:text from="{lang.companyGroup}"/>
                        </label>
                        <div class="panelField">
                            <companygroup:GroupButtonSelector ui:field="companyGroup"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label class="required">
                            <ui:text from="{lang.companyActualAddress}"/>
                        </label>
                        <validablefield:ValidableTextArea ui:field="actualAddress" styleName="inputField description"/>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label class="required">
                            <ui:text from="{lang.companyLegalAddress}"/>
                        </label>
                        <validablefield:ValidableTextArea ui:field="legalAddress" styleName="inputField description"/>
                    </div>
                    <div class="col-xs-12">
                        <label>
                            <ui:text from="{lang.companyWebSite}"/>
                        </label>
                        <div class="panelField"><span class="label">http://</span>
                            <g:TextBox ui:field="webSite" styleName="inputField"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>
                            <ui:text from="{lang.phone}"/>
                        </label>
                        <g:HTMLPanel ui:field="phonesContainer" styleName="panelField phone"/>
                    </div>
                    <div class="col-xs-12 col-lg-6">
                        <label>Email</label>
                        <g:HTMLPanel ui:field="emailsContainer" styleName="panelField"/>
                    </div>
                    <div class="col-xs-12">
                        <label>
                            <ui:text from="{lang.comment}"/>
                        </label>
                        <g:TextArea ui:field="comment" styleName="inputField description"/>
                    </div>
                    <div class="col-xs-12">
                        <label class="bordered">
                            <ui:text from="{lang.contacts}"/>
                        </label>
                        <table:TableWidget ui:field="table" styleName="table-hover"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="button greenC" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="button whiteC close_button" text="{lang.buttonCancel}"/>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>