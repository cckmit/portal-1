<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:lang="urn:import:ru.protei.portal.ui.company.client.widget.subscription.lang"
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield">
    <g:HTMLPanel>
        <lang:LangButtonSelector ui:field="locale" addStyleNames="form-group col-xs-1"/>

        <div class="form-group col-xs-11">
            <validatefield:ValidableTextBox ui:field="email"
                                            regexp="^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$"
                                            styleName="input-field"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>