<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:doctype="urn:import:ru.protei.portal.ui.documentation.client.widget.doctype"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:keyword='urn:import:ru.protei.portal.ui.documentation.client.widget.select.input'
             xmlns:decnum='urn:import:ru.protei.portal.ui.documentation.client.widget.number'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="main-content">
        <div class="panel panel-default">
            <div class="body">
                <legend class="header">
                    <ui:text from="{lang.documentationCommonHeader}"/>
                </legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-8">
                        <label>
                            <ui:text from="{lang.documentationName}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                    </div>

                    <div class="form-group col-xs-4">
                        <label>
                            <ui:text from="{lang.documentationType}"/>
                        </label>
                        <doctype:DocumentTypeSelector ui:field="documentType"/>
                    </div>

                    <div class="form-group col-xs-2">
                        <label>
                            <ui:text from="{lang.inventoryNumber}"/>
                        </label>
                        <g:IntegerBox ui:field="inventoryNumber" styleName="input-field"/>
                    </div>

                    <div class="form-group col-xs-4">
                        <label>
                            <ui:text from="{lang.equipmentProject}"/>
                        </label>
                        <g:TextBox ui:field="project" styleName="input-field"/>
                    </div>

                    <div class="form-group col-xs-4">
                        <label>
                            <ui:text from="{lang.customer}"/>
                        </label>
                        <person:EmployeeButtonSelector ui:field="manager"
                                                       defaultValue="{lang.equipmentManagerNotDefined}"
                        />
                    </div>

                    <div class="form-group col-xs-2">
                        <label>
                            <ui:text from="{lang.created}"/>
                        </label>
                        <g:TextBox ui:field="created" styleName="input-field"/>
                    </div>
                </div>

                <legend class="header">
                    <ui:text from="{lang.equipmentDecimalNumber}"/>
                </legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <decnum:DecimalNumberInput ui:field="decimalNumber"/>
                    </div>
                </div>

                <legend class="header">
                    <ui:text from="{lang.annotation}"/>
                </legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <g:TextArea ui:field="annotation" styleName="input-field comment"/>
                    </div>
                </div>

                <legend class="header">
                    <ui:text from="{lang.documentationKeywords}"/>
                </legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <keyword:SelectInputView ui:field="keywords"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>