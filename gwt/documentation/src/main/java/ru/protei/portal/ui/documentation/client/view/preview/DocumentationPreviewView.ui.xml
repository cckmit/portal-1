<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="preview-wrapper grid with-table-pager">
        <g:HTMLPanel ui:field="preview" styleName="preview">
            <div class="pull-right">
                <g:Button styleName="btn btn-white" ui:field="copy" title="{lang.buttonCopy}">
                    <i class="fa fa-copy"></i>
                </g:Button>
                <g:Button styleName="btn btn-danger" ui:field="remove" title="{lang.buttonRemove}">
                    <i class="fa fa-trash-o"></i>
                </g:Button>
            </div>

            <fieldset class="header">
                <legend ui:field="header"></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationNameBySpecification}"/></label>
                    <span class="col-xs-7" ui:field="name"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.created}"/></label>
                    <span class="col-xs-7" ui:field="created"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationType}"/></label>
                    <span class="col-xs-7" ui:field="type"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationAnnotation}"/></label>
                    <span class="col-xs-7" ui:field="annotation"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationProject}"/></label>
                    <span class="col-xs-7" ui:field="project"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationManager}"/></label>
                    <span class="col-xs-7" ui:field="manager"></span>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.documentationIdentification}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationDecimalNumber}"/></label>
                    <span class="col-xs-7" ui:field="numberDecimal"></span>
                </div>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.documentationInventoryNumber}"/></label>
                    <span class="col-xs-7" ui:field="numberInventory"></span>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.documentationKeyWords}"/></legend>
                <div class="col-xs-12">
                    <span class="col-xs-12 col-md-12 equipment-number" ui:field="keyWords"></span>
                </div>
            </fieldset>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>