<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:state="urn:import:ru.protei.portal.ui.common.client.widget.selector.state"
             xmlns:district="urn:import:ru.protei.portal.ui.region.client.widget.district"
             xmlns:productdirection="urn:import:ru.protei.portal.ui.common.client.widget.selector.productdirection"
             xmlns:district2="urn:import:ru.protei.portal.ui.common.client.widget.selector.district"
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card card-default">
        <div class="card-body row">
            <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}" styleName="form-group col-md-12"/>
            <div class="form-group col-md-12">
                <label><ui:text from="{lang.productDirection}"/></label>
                <div class="control-group">
                    <productdirection:ProductDirectionButtonSelector ui:field="direction" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label><ui:text from="{lang.regionDistrict}"/></label>
                <div class="control-group">
                    <district2:DistrictBtnGroupMulti ui:field="districts" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label><ui:text from="{lang.regionState}"/></label>
                <div class="control-group">
                    <state:RegionStateBtnGroupMulti ui:field="states" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfieldselector:SortFieldSelector ui:field="sortField" type="PRODUCT"/>
                    <g:ToggleButton ui:field="sortDir" styleName="btn btn-default sorting_button"/>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <g:Button ui:field="resetBtn" styleName="btn btn-default" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>