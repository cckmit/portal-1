<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:mask="urn:import:ru.protei.portal.ui.common.client.widget.mask">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="dn">
        <div class="dn-container" ui:field="container">
            <label ui:field="organizationCodeName"></label>
            <label class="dn-separator">.</label>
            <mask:MaskedTextBox ui:field="classifierCode" styleName="input-field dn-classifier-code" mask="999999"/>
            <label class="dn-separator">.</label>
            <mask:MaskedTextBox ui:field="regNum" styleName="input-field dn-register-number" mask="999"/>
            <label class="dn-separator">–</label>
            <mask:MaskedTextBox ui:field="regNumModification" styleName="input-field dn-register-number-modifier" mask="99"/>
        </div>

        <small class="dn-msg hide">
            <span ui:field="msg"></span>
            <span ui:field="getNumberMsg" class="text-danger">
                <ui:text from="{lang.equipmentDecimalNumberBusy}"/>
                Выбрать
                <g:Anchor href="#" ui:field="getNextNumber" text="следующий доступный номер"></g:Anchor> или изменить
                <g:Anchor href="#" ui:field="getNextModification" text="исполнение?"></g:Anchor>
            </span>
        </small>
       </g:HTMLPanel>
</ui:UiBinder>