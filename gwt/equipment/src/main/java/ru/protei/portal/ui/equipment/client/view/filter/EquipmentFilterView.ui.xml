<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:organization="urn:import:ru.protei.portal.ui.common.client.widget.organization"
             xmlns:type="urn:import:ru.protei.portal.ui.equipment.client.widget.type"
             xmlns:stage="urn:import:ru.protei.portal.ui.equipment.client.widget.stage"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:sortfield="urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield"
             xmlns:selector="urn:import:ru.protei.portal.ui.equipment.client.widget.selector">

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
        <div class="body">
            <div class="form-group local-search col-xs-12">
                <span class="icon local-search-icon"></span>
                <g:TextBox ui:field="name" styleName="input-field"/>
            </div>

            <div class="form-group col-xs-12">
                <label>
                    <ui:text from="{lang.equipmentManager}"/>
                </label>
                <person:EmployeeButtonSelector ui:field="manager" defaultValue="{lang.selectorAny}"/>
            </div>

            <div class="form-group col-xs-12">
                <label>
                    <ui:text from="{lang.equipmentPrimaryUse}"/>
                </label>
                <selector:EquipmentSelector ui:field="equipment" hasNullValue="true"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.sortBy}"/></label>
                <div class="control-group">
                    <sortfield:SortFieldSelector ui:field="sortField" type="EQUIPMENT" hasNullValue="false"/>
                    <g:ToggleButton ui:field="sortDir" styleName="btn btn-white sorting_button"/>
                </div>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.equipmentOrganization}"/></label>
                <organization:OrganizationBtnGroupMulti ui:field="organizationCode" styleName="form-group btn-group btn-group-justified"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.equipmentClassifierCode}"/></label>
                <g:TextBox ui:field="classifierCode" styleName="input-field dn-classifier-code" maxLength="6"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.equipmentRegisterNumber}"/></label>
                <g:TextBox ui:field="regNum" styleName="input-field dn-register-number" maxLength="3"/>
            </div>


            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.equipmentType}"/></label>
                <type:EquipmentTypeBtnGroupMulti ui:field="types" title="{lang.equipmentType}" styleName="form-group btn-group btn-group-justified"/>
            </div>

            <div class="form-group col-xs-12">
                <label><ui:text from="{lang.equipmentStage}"/></label>
                <stage:EquipmentStageOptionList ui:field="stages" title="{lang.equipmentStage}"/>
            </div>
        </div>
        <div class="footer">
            <g:Button ui:field="resetBtn" styleName="btn btn-white" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>