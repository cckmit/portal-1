<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:doctype="urn:import:ru.protei.portal.ui.common.client.widget.document.doctype"
             xmlns:doccategory="urn:import:ru.protei.portal.ui.common.client.widget.document.doccategory"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:keyword='urn:import:ru.protei.portal.ui.common.client.widget.stringselect.input'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.document.uploader'
             xmlns:option='urn:import:ru.protei.portal.ui.common.client.widget.optionlist.item'
             xmlns:text='urn:import:ru.protei.portal.ui.common.client.widget.selector.text'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="main-content">
        <div class="panel panel-default">
            <div class="body">

                <legend class="header">
                    <ui:text from="{lang.documentCommonHeader}"/>
                    <small ui:field="created" class="pull-right document-creator-info"/>
                </legend>
                <div class="grid grid-indent">
                    <g:HTMLPanel styleName="form-group col-xs-6" ui:field="nameContainer">
                        <label><ui:text from="{lang.documentName}"/></label>
                        <validatefield:ValidableTextBox ui:field="name" styleName="input-field" notNull="true"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel styleName="form-group col-xs-3" ui:field="documentUploaderContainer">
                        <label ui:field="documentUploaderLabel"><ui:text from="{lang.uploadDocuments}"/></label>
                        <div class="input-group">
                            <g:TextBox ui:field="fileName" styleName="input-field" enabled="false"/>
                            <div class="input-group-btn">
                                <g:Button ui:field="selectFileButton" styleName="btn btn-white">
                                    <i class="ion-upload"/>
                                </g:Button>
                            </div>
                            <fileuploader:DocumentUploader ui:field="documentUploader" visible="false"/>
                        </div>
                    </g:HTMLPanel>
                    <div class="form-group col-xs-3">
                        <label><ui:text from="{lang.documentApproveType}"/></label>
                        <option:OptionItem ui:field="approved" styleName="form-group col-xs-12 checkbox single document-approval" name="{lang.documentApproved}"/>
                    </div>

                    <div class="form-group col-xs-4">
                        <label><ui:text from="{lang.documentCategory}"/></label>
                        <doccategory:DocumentCategorySelector ui:field="documentCategory" enabled="false"/>
                    </div>
                    <div class="form-group col-xs-4">
                        <label><ui:text from="{lang.documentType}"/></label>
                        <doctype:DocumentTypeSelector ui:field="documentType"/>
                    </div>
                    <div class="form-group col-xs-4">
                        <label><ui:text from="{lang.documentVersion}"/></label>
                        <g:TextBox ui:field="version" styleName="input-field"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <label><ui:text from="{lang.equipmentDecimalNumber}"/></label>
                        <text:RawTextButtonSelector ui:field="decimalNumberSelector"/>
                    </div>
                    <div class="form-group col-xs-6">
                        <label><ui:text from="{lang.inventoryNumber}"/></label>
                        <g:LongBox ui:field="inventoryNumber" styleName="input-field"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <label><ui:text from="{lang.documentRegistrar}"/></label>
                        <person:EmployeeButtonSelector ui:field="registrar"/>
                    </div>
                    <div class="form-group col-xs-6">
                        <label><ui:text from="{lang.documentContractor}"/></label>
                        <person:EmployeeButtonSelector ui:field="contractor"/>
                    </div>
                </div>

                <legend class="header">
                    <ui:text from="{lang.annotation}"/>
                </legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <g:TextArea ui:field="annotation" styleName="input-field comment"/>
                    </div>
                </div>

                <legend class="header">
                    <ui:text from="{lang.documentKeywords}"/>
                </legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <keyword:StringSelectInput ui:field="keywords"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>