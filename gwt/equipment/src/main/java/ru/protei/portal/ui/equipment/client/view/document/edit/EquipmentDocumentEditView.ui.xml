<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:doctype="urn:import:ru.protei.portal.ui.common.client.widget.document.doctype"
             xmlns:doccategory="urn:import:ru.protei.portal.ui.common.client.widget.document.doccategory"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:keyword='urn:import:ru.protei.portal.ui.common.client.widget.stringselect.input'
             xmlns:fileuploader='urn:import:ru.protei.portal.ui.common.client.widget.document.uploader'
             xmlns:text='urn:import:ru.protei.portal.ui.common.client.widget.selector.text'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel>

        <div class="container-fluid padding-15">
            <div class="card card-transparent no-margin">
                <div class="card-header">
                    <div class="card-title">
                        <small ui:field="created" class="document-creator-info"/>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <g:HTMLPanel styleName="form-group col-md-6" ui:field="nameContainer">
                            <label><ui:text from="{lang.documentName}"/></label>
                            <validatefield:ValidableTextBox ui:field="name" styleName="form-control" notNull="true"/>
                        </g:HTMLPanel>
                        <g:HTMLPanel styleName="form-group col-md-3" ui:field="documentUploaderContainer">
                            <label ui:field="documentUploaderLabel"><ui:text from="{lang.uploadDocuments}"/></label>
                            <div class="input-group">
                                <g:TextBox ui:field="fileName" styleName="form-control" enabled="false"/>
                                <div class="input-group-btn">
                                    <g:Button ui:field="selectFileButton" styleName="btn btn-default">
                                        <i class="fa fa-cloud-upload-alt"/>
                                    </g:Button>
                                </div>
                                <fileuploader:DocumentUploader ui:field="documentUploader" visible="false"/>
                            </div>
                        </g:HTMLPanel>
                        <div class="form-group col-md-3">
                            <label><ui:text from="{lang.documentApproveType}"/></label><br/>
                            <g:CheckBox ui:field="approved" styleName="checkbox" text="{lang.documentApproved}"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label><ui:text from="{lang.documentCategory}"/></label>
                            <doccategory:DocumentCategorySelector ui:field="documentCategory"/>
                        </div>
                        <div class="form-group col-md-4">
                            <label><ui:text from="{lang.documentType}"/></label>
                            <doctype:DocumentTypeSelector ui:field="documentType"/>
                        </div>
                        <div class="form-group col-md-4">
                            <label><ui:text from="{lang.documentVersion}"/></label>
                            <g:TextBox ui:field="version" styleName="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label><ui:text from="{lang.equipmentDecimalNumber}"/></label>
                            <text:RawTextButtonSelector ui:field="decimalNumberSelector"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label><ui:text from="{lang.inventoryNumber}"/></label>
                            <g:LongBox ui:field="inventoryNumber" styleName="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label><ui:text from="{lang.documentRegistrar}"/></label>
                            <person:EmployeeButtonSelector ui:field="registrar"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label><ui:text from="{lang.documentContractor}"/></label>
                            <person:EmployeeButtonSelector ui:field="contractor"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid padding-15 bg-white">
            <div class="card card-transparent no-margin">
                <div class="card-header">
                    <div class="card-title">
                        <ui:text from="{lang.annotation}"/>
                    </div>
                </div>
                <div class="card-body">
                    <g:TextArea ui:field="annotation" styleName="form-control comment"/>
                </div>
            </div>
        </div>

        <div class="container-fluid padding-15">
            <div class="card card-transparent no-margin">
                <div class="card-header">
                    <div class="card-title">
                        <ui:text from="{lang.documentKeywords}"/>
                    </div>
                </div>
                <div class="card-body">
                    <keyword:StringSelectInput ui:field="keywords"/>
                </div>
            </div>
        </div>

        <div class="container-fluid padding-15 bg-white">
            <div class="card card-transparent no-margin">
                <div class="card-body">
                    <div class="text-right">
                        <g:Button ui:field="saveButton" styleName="btn btn-complete" text="{lang.buttonSave}"/>
                        <g:Button ui:field="cancelButton" styleName="btn btn-default close_btn" text="{lang.buttonCancel}"/>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>