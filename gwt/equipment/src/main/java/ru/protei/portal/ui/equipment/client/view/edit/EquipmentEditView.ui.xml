<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:number="urn:import:ru.protei.portal.ui.equipment.client.widget.number"
             xmlns:stage="urn:import:ru.protei.portal.ui.equipment.client.widget.stage"
             xmlns:selector="urn:import:ru.protei.portal.ui.equipment.client.widget.selector"
             xmlns:type="urn:import:ru.protei.portal.ui.equipment.client.widget.type"
             xmlns:item="urn:import:ru.protei.portal.ui.equipment.client.widget.number.item"
             xmlns:list="urn:import:ru.protei.portal.ui.equipment.client.widget.number.list">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="panel">
            <div class="body">
                <div class="grid grid-indent">
                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentNameBySpecification}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="nameSpecification" styleName="input-field" notNull="true"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentNameBySldWrks}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="nameSldWrks" styleName="input-field" notNull="true"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <ui:text from="{lang.equipmentDecimalNumber}"/>

                        <list:DecimalNumberList ui:field="numbers"/>
                    </div>

                    <div class="form-group col-xs-3">
                        <label><ui:text from="{lang.equipmentType}"/></label>
                        <type:EquipmentTypeSelector ui:field="type" header=""/>
                    </div>

                    <div class="form-group col-xs-3">
                        <label><ui:text from="{lang.equipmentStage}"/></label>
                        <stage:EquipmentStageSelector ui:field="stage" header=""/>
                    </div>
                </div>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentPrimaryUse}"/>
                        </label>
                        <selector:EquipmentSelector ui:field="linkedEquipment"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentComment}"/>
                        </label>
                        <g:TextBox ui:field="comment" styleName="input-field"/>
                    </div>

                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
            </div>
    </g:HTMLPanel>
</ui:UiBinder>