<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:project="urn:import:ru.protei.portal.ui.common.client.widget.selector.project"
             xmlns:list="urn:import:ru.protei.portal.ui.common.client.widget.decimalnumber.multiple"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person"
             xmlns:equipment="urn:import:ru.protei.portal.ui.common.client.widget.selector.equipment"
             xmlns:type="urn:import:ru.protei.portal.ui.equipment.client.widget.type">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="main-content">
        <div class="panel panel-default">
            <div class="body">
                <legend class="header"><ui:text from="{lang.equipmentCommonHeader}"/></legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentNameBySpecification}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="nameSpecification" styleName="input-field" notNull="true"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentNameBySldWrks}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="nameSldWrks" styleName="input-field" notNull="true"/>
                    </div>
                    <div class="form-group form-group col-md-6 col-xs-12 eq-type-details">
                        <type:EquipmentTypeBtnGroup ui:field="type"/>
                    </div>

                    <div class="form-group form-group col-md-6 col-sm-12">
                        <label>
                            <ui:text from="{lang.equipmentPrimaryUse}"/>
                        </label>
                        <equipment:EquipmentSelector ui:field="linkedEquipment" hasNullValue="true"/>
                    </div>

                    <g:HTMLPanel styleName="form-group" ui:field="projectBox">
                        <label>
                            <ui:text from="{lang.equipmentProject}"/>
                        </label>
                        <project:ProjectButtonSelector ui:field="project"
                                                       defaultValue="{lang.equipmentProjectNotDefined}"/>
                    </g:HTMLPanel>

                    <g:HTMLPanel styleName="form-group" ui:field="managerBox">
                        <label>
                            <ui:text from="{lang.equipmentManager}"/>
                        </label>
                        <person:EmployeeButtonSelector ui:field="manager"
                                                       defaultValue="{lang.equipmentManagerNotDefined}"/>
                    </g:HTMLPanel>

                    <g:HTMLPanel styleName="form-group col-xs-3" ui:field="date">
                        <label>
                            <ui:text from="{lang.created}"/>
                        </label>
                        <g:TextBox ui:field="dateTextBox" styleName="input-field"/>
                    </g:HTMLPanel>
                </div>

                <legend class="header"><ui:text from="{lang.equipmentDecimalNumber}"/></legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <list:MultipleDecimalNumberInput ui:field="numbers"/>
                    </div>
                </div>

                <legend class="header">
                    <ui:text from="{lang.equipmentDocuments}"/>
                    <div class="form-group col-xs-3 header-inline-button">
                        <g:Button ui:field="createDocumentButton" styleName="btn btn-white" text="{lang.equipmentDocumentCreate}"/>
                    </div>
                </legend>
                <div class="grid grid-indent">
                    <g:HTMLPanel ui:field="documents" styleName="form-group col-xs-12"/>
                </div>

                <legend class="header"><ui:text from="{lang.equipmentComment}"/></legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <g:TextArea ui:field="comment" styleName="input-field comment"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>