<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:validatefield="urn:import:ru.protei.portal.ui.common.client.widget.validatefield"
             xmlns:stage="urn:import:ru.protei.portal.ui.equipment.client.widget.stage"
             xmlns:selector="urn:import:ru.protei.portal.ui.equipment.client.widget.selector"
             xmlns:type="urn:import:ru.protei.portal.ui.equipment.client.widget.type"
             xmlns:list="urn:import:ru.protei.portal.ui.equipment.client.widget.number.list"
             xmlns:person="urn:import:ru.protei.portal.ui.common.client.widget.selector.person">
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="main-content">
        <div class="panel panel-default">
            <div class="body">
                <legend class="header"><ui:text from="{lang.equipmentCommonHeader}"/></legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentNameBySpecification}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="nameSpecification" styleName="input-field" notNull="true"/>
                    </div>

                    <div class="form-group col-xs-6">
                        <label>
                            <ui:text from="{lang.equipmentNameBySldWrks}"/>
                        </label>
                        <validatefield:ValidableTextBox ui:field="nameSldWrks" styleName="input-field" notNull="true"/>
                    </div>
                    <div class="form-group form-group col-lg-2 col-md-3 col-sm-6 col-xs-12 eq-type-details">
                        <!--<label><ui:text from="{lang.equipmentType}"/></label>-->
                        <type:EquipmentTypeBtnGroup ui:field="type"/>
                    </div>

                    <div class="form-group form-group col-lg-4 col-md-3 col-sm-6 col-xs-12">
                        <label><ui:text from="{lang.equipmentStage}"/></label>
                        <stage:EquipmentStageSelector ui:field="stage" header=""/>
                    </div>
                    <div class="form-group form-group col-md-6 col-sm-12">
                        <label>
                            <ui:text from="{lang.equipmentPrimaryUse}"/>
                        </label>
                        <selector:EquipmentSelector ui:field="linkedEquipment" hasNullValue="true"/>
                    </div>

                    <div class="form-group col-xs-7">
                        <label>
                            <ui:text from="{lang.equipmentProject}"/>
                        </label>
                        <g:TextBox ui:field="project" styleName="input-field"/>
                    </div>

                    <div class="form-group col-xs-5">
                        <label>
                            <ui:text from="{lang.equipmentManager}"/>
                        </label>
                        <person:EmployeeButtonSelector ui:field="manager" defaultValue="{lang.equipmentManagerNotDefined}"/>
                    </div>
                </div>

                <legend class="header"><ui:text from="{lang.equipmentDecimalNumber}"/></legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <list:DecimalNumberList ui:field="numbers"/>
                    </div>
                </div>

                <legend class="header"><ui:text from="{lang.equipmentComment}"/></legend>
                <div class="grid grid-indent">
                    <div class="form-group col-xs-12">
                        <g:TextArea ui:field="comment" styleName="input-field comment"/>
                    </div>
                </div>
            </div>
            <div class="footer">
                <g:Button ui:field="saveButton" styleName="btn btn-success" text="{lang.buttonSave}"/>
                <g:Button ui:field="cancelButton" styleName="btn btn-white close_btn" text="{lang.buttonCancel}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>