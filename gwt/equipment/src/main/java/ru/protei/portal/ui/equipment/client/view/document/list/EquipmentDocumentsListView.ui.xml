<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="main-content grid grid-indent">
        <div class="form-group col-xs-3">
            <label><ui:text from="{lang.kdDocumentCategory}"/></label>
            <g:HTMLPanel ui:field="kdDocumentsContainer" styleName="eqdoc-list"/>
        </div>
        <div class="form-group col-xs-3">
            <label><ui:text from="{lang.edDocumentCategory}"/></label>
            <g:HTMLPanel ui:field="edDocumentsContainer" styleName="eqdoc-list"/>
        </div>
        <div class="form-group col-xs-3">
            <label><ui:text from="{lang.tdDocumentCategory}"/></label>
            <g:HTMLPanel ui:field="tdDocumentsContainer" styleName="eqdoc-list"/>
        </div>
        <div class="form-group col-xs-3">
            <label><ui:text from="{lang.pdDocumentCategory}"/></label>
            <g:HTMLPanel ui:field="pdDocumentsContainer" styleName="eqdoc-list"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>