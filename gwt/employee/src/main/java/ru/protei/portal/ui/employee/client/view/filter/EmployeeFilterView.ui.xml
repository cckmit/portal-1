<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'
             xmlns:cleanablesearchbox='urn:import:ru.protei.portal.ui.common.client.widget.cleanablesearchbox'
             xmlns:homecompany='urn:import:ru.protei.portal.ui.common.client.widget.homecompany'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card card-default">
        <div class="card-block">
            <div class="row">
                <cleanablesearchbox:CleanableSearchBox ui:field="search" placeholder="{lang.search}" styleName="form-group col-md-12"/>
                <div class="form-group col-md-12">
                    <label><ui:text from="{lang.sortBy}"/></label>
                    <div class="control-group">
                        <sortfieldselector:SortFieldSelector ui:field="sortField" type="EMPLOYEE"/>
                        <g:ToggleButton ui:field="sortDir" styleName="btn btn-white sorting_button"/>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label><ui:text from="{lang.employeeCompany}"/></label>
                    <homecompany:HomeCompanyBtnGroupMulti ui:field="homeCompanies" addStyleNames="btn-block"/>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <g:Button ui:field="resetBtn" styleName="btn btn-default pull-right" text="{lang.buttonReset}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>