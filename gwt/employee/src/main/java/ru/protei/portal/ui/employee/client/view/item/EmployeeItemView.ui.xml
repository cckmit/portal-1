<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel tag="li" styleName="employee">
        <div class="header-block no-hover" ui:field="employeeContainer">

            <h2 class="name border-line">
                <g:Anchor  ui:field="editIcon" styleName="fas fa-edit p-r-5" href="#" visible="false"/>
                <g:Anchor ui:field="name" href="#"/>
            </h2>

            <div class="employee-item-container">
                <div class="photo">
                    <g:Image ui:field="photo" styleName="employee-list-image"/>
                </div>

                <g:HTMLPanel ui:field="birthdayContainer" styleName="contacts birthday">
                    <i class="fa fa-birthday-cake"/>
                    <span ui:field="birthday"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="phoneContainer" styleName="contacts phone">
                    <i class="fa fa-phone"/>
                    <span ui:field="phone"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="ipContainer" styleName="contacts ip" visible="false">
                    <b>IP</b>
                    <span ui:field="ip"></span>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="emailContainer" styleName="contacts email">
                    <i class="fa fa-envelope"/>
                    <span ui:field="emails"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="companyContainer" styleName="contacts position" visible="false">
                    <i class="fa fa-building"></i>
                    <span ui:field="company"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="departmentParentContainer" styleName="contacts department" visible="false">
                    <i class="fa fa-sitemap"/>
                    <span ui:field="departmentParent"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="departmentContainer" styleName="contacts department" visible="false">
                    <i class="fa fa-th-large"/>
                    <span ui:field="department"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="positionContainer" styleName="contacts position" visible="false">
                    <i class="fa fa-street-view"></i>
                    <span ui:field="position"/>
                </g:HTMLPanel>
                <g:HTMLPanel ui:field="fireDateContainer" styleName="contacts position" visible="false">
                    <i class="fa fa-info-circle"></i>
                    <b>
                        <span><ui:text from="{lang.employeeFired}"/></span>
                        <span ui:field="fireDate"/>
                    </b>
                </g:HTMLPanel>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>