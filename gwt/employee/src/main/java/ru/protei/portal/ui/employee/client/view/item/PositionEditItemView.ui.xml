<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel>
        <div class="row">

            <div class="form-group col-md-3">
                <b><ui:text from="{lang.company}: "/></b>
                <span ui:field="company"/>
            </div>
            <div class="form-group col-md-4">
                <b><ui:text from="{lang.department}: "/></b>
                <span ui:field="department"/>
            </div>
            <div class="form-group col-md-4">
                <b><ui:text from="{lang.employeePosition}: "/></b>
                <span ui:field="position"/>
            </div>

            <div class="form-group col-md-1">
                <g:Anchor ui:field="removePosition" href="#" styleName="far fa-trash-alt fa-lg" title="{lang.remove}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>