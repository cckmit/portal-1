<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang"/>

    <g:HTMLPanel styleName="top-brass">
        <h2 class="text-center">
            <ui:text from="{lang.employeeTopBrassLabel}"/>
        </h2>
        <div class="top-brass-containers">
            <g:HTMLPanel ui:field="topContainer" styleName="top-brass-top-container row"/>
            <g:HTMLPanel ui:field="bottomContainer" styleName="row"/>
        </div>
        <div class="top-brass-footer text-right">
            <g:Button ui:field="backButton" styleName="btn btn-success" text="{lang.employeeBackToEmployees}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>