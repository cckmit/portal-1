<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="col-xs-12 p-t-10 p-b-10">
        <div class="col-xs-12">
            <label class="col-xs-5"><ui:text from="{lang.employeeCompany}"/></label>
            <span class="col-xs-7" ui:field="company"></span>
        </div>
        <div class="col-xs-12">
            <label class="col-xs-5"><ui:text from="{lang.employeeDepartment}"/></label>
            <span class="col-xs-7" ui:field="department"></span>
        </div>
        <div class="col-xs-12">
            <label class="col-xs-5"><ui:text from="{lang.employeePosition}"/></label>
            <span class="col-xs-7" ui:field="position"></span>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>