<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="p-t-10 p-b-10">
        <div class="small">
            <i ui:field="nameIcon" class="fa fa-user-circle"/>
            <a ui:field="employeeName" target="_blank" href="#"/>
        </div>

        <g:HTMLPanel ui:field="birthdayContainer" styleName="small" visible="false">
            <i class="fa fa-birthday-cake"/>
            <span ui:field="birthday"/>
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="phonesContainer" styleName="small" visible="false">
            <i class="fa fa-phone"/>
            <span ui:field="phones"/>
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="emailContainer" styleName="small" visible="false">
            <i class="fa fa-envelope"/>
            <span ui:field="email"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>