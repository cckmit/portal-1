<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="rootWrapper">
        <g:HTMLPanel styleName="preview p-l-20">

            <g:HTMLPanel ui:field="employeeNameBlock" tag="fieldset" visible="false">
                <h5><ui:text from="{lang.employeeEmployeeFullNameColumnHeader}"/></h5>
                <div class="small">
                    <span ui:field="employeeName"/>
                </div>
            </g:HTMLPanel>

            <h5><ui:text from="{lang.employeeAdditionalInfoHeader}"/></h5>
            <div class="small">
                <b><ui:text from="{lang.employeeID}: "/></b>
                <span ui:field="id"/>
            </div>
            <div class="small">
                <b><ui:text from="{lang.employeeIPAddress}:"/></b>
                <span ui:field="ip"/>
            </div>

            <h5><ui:text from="{lang.employeePositionsHeader}"/></h5>
            <g:HTMLPanel ui:field="positionsContainer" styleName="col-md-12"/>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>