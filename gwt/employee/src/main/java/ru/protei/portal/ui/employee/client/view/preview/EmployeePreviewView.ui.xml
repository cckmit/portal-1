<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="rootWrapper">
        <g:HTMLPanel styleName="preview">
            <h5><ui:text from="{lang.employeeAdditionalInfoHeader}"/></h5>
            <div class="small">
                <b><ui:text from="{lang.employeeID}: "/></b>
                <span ui:field="id"/>
            </div>
            <div class="small">
                <b><ui:text from="{lang.employeeIPAddress}:"/></b>
                <span ui:field="ip"/>
            </div>
            <h5><ui:text from="{lang.employeePositionsHeader}"/></h5>
            <g:HTMLPanel ui:field="positionsContainer" styleName="col-xs-12"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>