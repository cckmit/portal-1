<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel ui:field="rootWrapper">
        <g:HTMLPanel styleName="preview grid">
            <g:HTMLPanel ui:field="employeeNameBlock" tag="fieldset" styleName="header" visible="false">
                <legend><ui:text from="{lang.employeeEmployeeFullNameColumnHeader}"/></legend>
                <span ui:field="employeeName"></span>
            </g:HTMLPanel>
            <fieldset class="header">
                <legend><ui:text from="{lang.employeeAdditionalInfoHeader}"/></legend>
                <div class="col-xs-12">
                    <label class="col-xs-5"><ui:text from="{lang.employeeID}"/></label>
                    <span class="col-xs-7" ui:field="id"></span>
                </div>
            </fieldset>

            <fieldset class="header">
                <legend><ui:text from="{lang.employeePositionsHeader}"/></legend>
                <g:HTMLPanel ui:field="positionsContainer" styleName="col-xs-12"/>
            </fieldset>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>