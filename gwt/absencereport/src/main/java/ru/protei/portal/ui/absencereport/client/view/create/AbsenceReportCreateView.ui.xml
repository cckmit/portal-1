<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:range='urn:import:ru.brainworm.factory.core.datetimepicker.client.view.input.range'
             xmlns:person='urn:import:ru.protei.portal.ui.common.client.widget.selector.person'
             xmlns:absencereason='urn:import:ru.protei.portal.ui.common.client.widget.selector.absencereason'
             xmlns:sortfieldselector='urn:import:ru.protei.portal.ui.common.client.widget.selector.sortfield'>

    <ui:with field="lang" type="ru.protei.portal.ui.common.client.lang.Lang" />

    <g:HTMLPanel styleName="card card-transparent no-margin card-with-fixable-footer">
        <div class="card-body no-padding">
            <div class="container-fluid padding-15">
                <div class="card card-transparent no-margin">
                    <div class="card-body">
                        <div class="row">
                            <person:EmployeeMultiSelector ui:field="employees"
                                                          header="{lang.absenceReportEmployees}"
                                                          addStyleNames="form-group col-md-6"
                                                          firedEmployeesVisible="true"/>
                            <absencereason:AbsenceReasonMultiSelector ui:field="reasons"
                                                                      header="{lang.absenceReportReasons}"
                                                                      addStyleNames="form-group col-md-6"/>
                            <div class="form-group col-md-6">
                                <label ui:field="absenceReportDateRangeLabel"><ui:text from="{lang.absenceReportDateRange}"/></label>
                                <range:RangePicker ui:field="dateRange" type="DATETIME" formatValue="dd.MM.yyyy HH:mm" mandatory="true"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label ui:field="absenceReportSortByLabel"><ui:text from="{lang.sortBy}"/></label>
                                <div class="control-group">
                                    <sortfieldselector:SortFieldSelector ui:field="sortField" type="ABSENCE" />
                                    <g:ToggleButton ui:field="sortDir" styleName="btn empty btn-white sorting_button"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="card card-transparent no-margin">
                <div class="text-right">
                    <g:Button ui:field="reportButton" styleName="btn btn-complete" text="{lang.buttonReport}"/>
                    <g:Button ui:field="resetButton" styleName="btn btn-default" text="{lang.buttonReset}"/>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>